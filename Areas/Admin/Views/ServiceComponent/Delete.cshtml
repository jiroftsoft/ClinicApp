@using ClinicApp.Helpers
@model ClinicApp.ViewModels.ServiceComponentDetailsViewModel
@{
    ViewBag.Title = "حذف جزء خدمت";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <style>
        /* استایل‌های اختصاصی برای صفحه حذف جزء خدمت */
        .delete-header {
            background-color: #dc3545;
            color: white;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        .delete-warning {
            background-color: #fff3cd;
            border: 1px solid #ffeaa7;
            color: #856404;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .delete-warning h6 {
            color: #856404;
            margin-bottom: 10px;
        }

        .component-card {
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
            margin-bottom: 20px;
        }

        .component-card-title {
            font-weight: 600;
            color: #dc3545;
            margin-bottom: 15px;
            padding-bottom: 8px;
            border-bottom: 1px solid #eee;
            display: flex;
            align-items: center;
        }

        .component-card-title i {
            margin-left: 8px;
            font-size: 1.1rem;
        }

        .info-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid #f5f5f5;
        }

        .info-row:last-child {
            border-bottom: none;
        }

        .info-label {
            font-weight: 600;
            color: #495057;
            min-width: 120px;
        }

        .info-value {
            color: #212529;
            text-align: left;
        }

        .component-type-badge {
            padding: 6px 16px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .component-type-technical {
            background-color: #e3f2fd;
            color: #1976d2;
        }

        .component-type-professional {
            background-color: #f3e5f5;
            color: #7b1fa2;
        }

        .coefficient-display {
            font-size: 1.2rem;
            font-weight: 700;
            color: #dc3545;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

        .btn-action {
            padding: 12px 25px;
            border-radius: 25px;
            font-weight: 500;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.2s;
            border: none;
            cursor: pointer;
        }

        .btn-delete {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            color: white;
        }

        .btn-delete:hover {
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
        }

        .btn-cancel {
            background: linear-gradient(135deg, #6c757d 0%, #5a6268 100%);
            color: white;
        }

        .btn-cancel:hover {
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(108, 117, 125, 0.3);
        }

        .service-info {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
        }

        .service-info h5 {
            color: #495057;
            margin-bottom: 10px;
        }

        .service-info p {
            margin: 5px 0;
            color: #6c757d;
        }

        .impact-warning {
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            color: #721c24;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .impact-warning h6 {
            color: #721c24;
            margin-bottom: 10px;
        }

        .impact-warning ul {
            margin: 10px 0;
            padding-right: 20px;
        }

        .impact-warning li {
            margin: 5px 0;
        }
    </style>
}

<!-- Header Section -->
<div class="delete-header">
    <div class="row align-items-center">
        <div class="col-md-8">
            <h2><i class="fas fa-trash-alt"></i> حذف جزء خدمت</h2>
            <p class="mb-0">آیا مطمئن هستید که می‌خواهید این جزء خدمت را حذف کنید؟</p>
        </div>
        <div class="col-md-4 text-end">
            <i class="fas fa-exclamation-triangle fa-3x opacity-75"></i>
        </div>
    </div>
</div>

<!-- Warning Message -->
<div class="delete-warning">
    <h6><i class="fas fa-exclamation-triangle"></i> هشدار مهم</h6>
    <p class="mb-0">این عمل غیرقابل بازگشت است. پس از حذف، این جزء خدمت و تمام اطلاعات مرتبط با آن به طور دائمی حذف خواهد شد.</p>
</div>

<!-- Impact Warning -->
<div class="impact-warning">
    <h6><i class="fas fa-exclamation-circle"></i> تأثیرات حذف</h6>
    <p>حذف این جزء خدمت ممکن است تأثیرات زیر را داشته باشد:</p>
    <ul>
        <li>محاسبات قیمت خدمات ممکن است نادرست شوند</li>
        <li>گزارش‌های مالی ممکن است تحت تأثیر قرار گیرند</li>
        <li>تاریخچه محاسبات ممکن است ناقص شود</li>
    </ul>
</div>

<!-- Service Information -->
<div class="service-info">
    <h5><i class="fas fa-stethoscope"></i> اطلاعات خدمت مرتبط</h5>
    <p><strong>عنوان خدمت:</strong> @Model.ServiceTitle</p>
    <p><strong>کد خدمت:</strong> <code>@Model.ServiceCode</code></p>
</div>

<!-- Component Details -->
<div class="component-card">
    <h4 class="component-card-title">
        <i class="fas fa-info-circle"></i> اطلاعات جزء خدمت
    </h4>
    
    <div class="info-row">
        <span class="info-label">شناسه جزء:</span>
        <span class="info-value">@Model.ServiceComponentId</span>
    </div>
    
    <div class="info-row">
        <span class="info-label">نوع جزء:</span>
        <span class="info-value">
            <span class="component-type-badge component-type-@(Model.ComponentType.ToString().ToLower())">
                @Model.ComponentTypeName
            </span>
        </span>
    </div>
    
    <div class="info-row">
        <span class="info-label">ضریب (کای):</span>
        <span class="info-value">
            <span class="coefficient-display">@Model.Coefficient.ToString("N2")</span>
        </span>
    </div>
    
    <div class="info-row">
        <span class="info-label">توضیحات:</span>
        <span class="info-value">
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                @Model.Description
            }
            else
            {
                <span class="text-muted">توضیحاتی ارائه نشده است</span>
            }
        </span>
    </div>
    
    <div class="info-row">
        <span class="info-label">وضعیت:</span>
        <span class="info-value">
            <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                @(Model.IsActive ? "فعال" : "غیرفعال")
            </span>
        </span>
    </div>
    
    <div class="info-row">
        <span class="info-label">تاریخ ایجاد:</span>
        <span class="info-value">@Model.CreatedAt.ToString("yyyy/MM/dd HH:mm")</span>
    </div>
    
    <div class="info-row">
        <span class="info-label">ایجاد شده توسط:</span>
        <span class="info-value">@Model.CreatedBy</span>
    </div>
</div>

<!-- Delete Form -->
@using (Html.BeginForm("Delete", "ServiceComponent", FormMethod.Post, new { @class = "delete-form" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("id", Model.ServiceComponentId)
    
    <!-- Action Buttons -->
    <div class="action-buttons">
        <a href="@Url.Action("Index")" class="btn-action btn-cancel">
            <i class="fas fa-arrow-right"></i> انصراف و بازگشت
        </a>
        
        <button type="submit" class="btn-action btn-delete" onclick="return confirmDelete()">
            <i class="fas fa-trash-alt"></i> حذف جزء خدمت
        </button>
    </div>
}

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm('آیا مطمئن هستید که می‌خواهید این جزء خدمت را حذف کنید؟\n\nاین عمل غیرقابل بازگشت است و ممکن است تأثیرات منفی بر محاسبات داشته باشد.');
        }

        $(document).ready(function() {
            // Add confirmation dialog
            $('.delete-form').on('submit', function(e) {
                if (!confirmDelete()) {
                    e.preventDefault();
                    return false;
                }
            });

            // Add loading state to delete button
            $('.btn-delete').on('click', function() {
                $(this).html('<i class="fas fa-spinner fa-spin"></i> در حال حذف...');
                $(this).prop('disabled', true);
            });
        });
    </script>
}
