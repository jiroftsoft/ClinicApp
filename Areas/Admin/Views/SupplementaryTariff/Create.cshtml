    <script>
        $(document).ready(function() {
            try {
                // Initialize currency input masks for Persian culture
                $('.currency-input').each(function() {
                $(this).on('input', function() {
                    var value = $(this).val().replace(/[^\d]/g, '');
                    if (value) {
                        var formatted = (parseInt(value) || 0).toLocaleString ? (parseInt(value) || 0).toLocaleString('fa-IR') : (parseInt(value) || 0).toString();
                        $(this).val(formatted);
                    }
                });
                
                // Normalize value before form submission
                $(this).on('blur', function() {
                    var value = $(this).val().replace(/[^\d]/g, '');
                    $(this).data('raw-value', value);
                });
            });
            
                // Form submission - normalize currency values and convert Toman to Rial
                $('#createTariffForm').on('submit', function() {
                    $('.currency-input').each(function() {
                        var rawValue = $(this).data('raw-value') || $(this).val().replace(/[^\d]/g, '');
                        var numericValue = parseFloat(rawValue) || 0;
                        
                        // تبدیل تومان به ریال برای ارسال به سرور
                        var rialValue = numericValue * 10;
                        $(this).val(rialValue);
                        
                        console.log('🏥 MEDICAL: Currency conversion - Original (Toman):', numericValue, 'Converted (Rial):', rialValue);
                    });
                });
            } catch (error) {
                console.warn('خطا در مقداردهی اولیه Currency Input Mask:', error);
            }
        });
