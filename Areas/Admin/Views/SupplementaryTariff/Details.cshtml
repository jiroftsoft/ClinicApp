@model ClinicApp.ViewModels.Insurance.Supplementary.SupplementaryTariffCreateEditViewModel

@using System.Globalization

@{
    ViewBag.Title = "جزئیات تعرفه بیمه تکمیلی";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    
    // تنظیم Culture برای فرمت اعداد
    System.Threading.Thread.CurrentThread.CurrentCulture = new System.Globalization.CultureInfo("fa-IR");
    System.Threading.Thread.CurrentThread.CurrentUICulture = new System.Globalization.CultureInfo("fa-IR");
}

@functions{
    // 🔧 CRITICAL: تبدیل ریال به تومان و فرمت با fa-IR
    string Tomans(decimal? rial)
    {
        var t = (rial ?? 0m) / 10m; // ریال → تومان
        return t.ToString("N0", new CultureInfo("fa-IR")) + " تومان";
    }
    
    // محاسبه درصد امن
    decimal Pct(decimal? p) => (p ?? 0m);
    
    // محاسبه پوشش تکمیلی با اعمال سقف
    decimal SupplementaryCoverageAmount(decimal? remainingAfterPrimary, decimal? coveragePercent, decimal? maxPayment)
    {
        var R = remainingAfterPrimary ?? 0m;
        var pct = Pct(coveragePercent) / 100m;
        var raw = R * pct;
        if (maxPayment.HasValue && maxPayment.Value > 0)
            return Math.Min(raw, maxPayment.Value);
        return raw;
    }
    
    // سهم نهایی بیمار = R - پوشش تکمیلی (با سقف)
    decimal FinalPatientShare(decimal? remainingAfterPrimary, decimal? coveragePercent, decimal? maxPayment)
    {
        var R = remainingAfterPrimary ?? 0m;
        var supp = SupplementaryCoverageAmount(remainingAfterPrimary, coveragePercent, maxPayment);
        var final = R - supp;
        return final < 0 ? 0 : final;
    }
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-info-circle text-info"></i>
                        جزئیات تعرفه بیمه تکمیلی
                    </h3>
                    <div class="card-tools">
                        <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-left"></i>
                            بازگشت به لیست
                        </a>
                        <a href="@Url.Action("Edit", new { id = Model.InsuranceTariffId })" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i>
                            ویرایش
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- اطلاعات تعرفه -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-primary border-bottom pb-2">
                                <i class="fas fa-clipboard-list"></i>
                                اطلاعات تعرفه
                            </h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">نام خدمت</label>
                                <div class="form-control-plaintext bg-light p-2 rounded">
                                    <i class="fas fa-stethoscope text-primary"></i>
                                    <strong>@Model.ServiceName</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">کد خدمت</label>
                                <div class="form-control-plaintext bg-light p-2 rounded">
                                    <i class="fas fa-barcode text-primary"></i>
                                    <strong>@Model.ServiceCode</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">طرح بیمه تکمیلی</label>
                                <div class="form-control-plaintext bg-light p-2 rounded">
                                    <i class="fas fa-shield-alt text-success"></i>
                                    <strong>@(Model.InsurancePlans?.FirstOrDefault(x => x.Value == Model.InsurancePlanId.ToString())?.Text ?? "نامشخص")</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">بیمه پایه</label>
                                <div class="form-control-plaintext bg-light p-2 rounded">
                                    <i class="fas fa-hospital text-info"></i>
                                    <strong>
                                    @if (Model.PrimaryInsurancePlanId > 0 && Model.PrimaryInsurancePlans?.Any() == true)
                                    {
                                        @(Model.PrimaryInsurancePlans.FirstOrDefault(x => x.Value == Model.PrimaryInsurancePlanId.ToString())?.Text ?? "نامشخص")
                                    }
                                    else
                                    {
                                        <span class="text-warning">بیمه پایه یافت نشد</span>
                                    }
                                </strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- اطلاعات مالی -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-success border-bottom pb-2">
                                <i class="fas fa-calculator"></i>
                                اطلاعات مالی
                            </h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">قیمت کل خدمت</label>
                                <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                    <i class="fas fa-money-bill-wave text-success"></i>
                                    <strong class="text-success">@Tomans(Model.TariffPrice)</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">سهم پایه (نمایشی)</label>
                                <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                    <i class="fas fa-shield-alt text-info"></i>
                                    @{
                                        // اگر InsurerShare در تعرفه تکمیلی صفر است، با خط تیره نشان بدهید تا گمراه نکند
                                        var baseShare = (Model.InsurerShare ?? 0m) <= 0 ? "-" : Tomans(Model.InsurerShare);
                                    }
                                    <strong class="text-info">@baseShare</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">باقی‌مانده پس از پایه (R)</label>
                                <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                    <i class="fas fa-user text-warning"></i>
                                    <strong class="text-warning">@Tomans(Model.PatientShare)</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">درصد پوشش تکمیلی</label>
                                <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                    <i class="fas fa-percentage text-primary"></i>
                                    <strong class="text-primary">@Pct(Model.SupplementaryCoveragePercent).ToString("0", new CultureInfo("fa-IR"))%</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- اطلاعات تکمیلی -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-info border-bottom pb-2">
                                <i class="fas fa-cog"></i>
                                اطلاعات تکمیلی
                            </h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">اولویت</label>
                                <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                    <i class="fas fa-sort-numeric-up text-secondary"></i>
                                    <strong>@Model.Priority</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">وضعیت</label>
                                <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                    @if (Model.IsActive)
                                    {
                                        <i class="fas fa-check-circle text-success"></i>
                                        <strong class="text-success">فعال</strong>
                                    }
                                    else
                                    {
                                        <i class="fas fa-times-circle text-danger"></i>
                                        <strong class="text-danger">غیرفعال</strong>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">شناسه تعرفه</label>
                                <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                    <i class="fas fa-hashtag text-secondary"></i>
                                    <strong>@Model.InsuranceTariffId</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- پیش‌نمایش محاسبات -->
                    @{
                        var R = Model.PatientShare ?? 0m; // باقی‌مانده پس از پایه، از DB بر حسب ریال
                        var pct = Pct(Model.SupplementaryCoveragePercent);
                        var suppAmountRial = SupplementaryCoverageAmount(R, pct, Model.SupplementaryMaxPayment);
                        var finalRial = FinalPatientShare(R, pct, Model.SupplementaryMaxPayment);
                    }
                    
                    <div class="row">
                        <div class="col-12">
                            <div class="card bg-light">
                                <div class="card-header">
                                    <h6 class="card-title text-primary">
                                        <i class="fas fa-chart-pie"></i>
                                        پیش‌نمایش محاسبات
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="row text-center">
                                        <div class="col-md-2">
                                            <div class="border rounded p-2 bg-white">
                                                <small class="text-muted">قیمت کل خدمت</small>
                                                <div class="font-weight-bold text-success">@Tomans(Model.TariffPrice)</div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="border rounded p-2 bg-white">
                                                <small class="text-muted">سهم بیمه پایه</small>
                                                <div class="font-weight-bold text-info">
                                                    @((Model.InsurerShare ?? 0m) > 0 ? Tomans(Model.InsurerShare) : "-")
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="border rounded p-2 bg-white">
                                                <small class="text-muted">باقی‌مانده پس از پایه (R)</small>
                                                <div class="font-weight-bold text-warning">@Tomans(R)</div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="border rounded p-2 bg-white">
                                                <small class="text-muted">درصد پوشش تکمیلی</small>
                                                <div class="font-weight-bold text-primary">@pct.ToString("0", new CultureInfo("fa-IR"))%</div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="border rounded p-2 bg-white">
                                                <small class="text-muted">پوشش تکمیلی (مبلغ)</small>
                                                <div class="font-weight-bold text-success">@Tomans(suppAmountRial)</div>
                                                @if (Model.SupplementaryMaxPayment.HasValue && Model.SupplementaryMaxPayment.Value > 0)
                                                {
                                                    <div class="small text-muted">با سقف @Tomans(Model.SupplementaryMaxPayment)</div>
                                                }
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="border rounded p-2 bg-white">
                                                <small class="text-muted">سهم نهایی بیمار</small>
                                                <div class="font-weight-bold text-danger">@Tomans(finalRial)</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i>
                                بازگشت به لیست
                            </a>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Edit", new { id = Model.InsuranceTariffId })" class="btn btn-primary">
                                <i class="fas fa-edit"></i>
                                ویرایش تعرفه
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            console.log('🏥 MEDICAL: Details page loaded successfully');
            console.log('🏥 MEDICAL DEBUG: Details Model Data:', {
                InsuranceTariffId: @(Model.InsuranceTariffId ?? 0),
                ServiceId: @Model.ServiceId,
                InsurancePlanId: @Model.InsurancePlanId,
                TariffPrice: '@(Model.TariffPrice?.ToString("G", CultureInfo.InvariantCulture) ?? "null")',
                PatientShare: '@(Model.PatientShare?.ToString("G", CultureInfo.InvariantCulture) ?? "null")',
                InsurerShare: '@(Model.InsurerShare?.ToString("G", CultureInfo.InvariantCulture) ?? "null")',
                SupplementaryCoveragePercent: '@(Model.SupplementaryCoveragePercent?.ToString("G", CultureInfo.InvariantCulture) ?? "null")',
                SupplementaryMaxPayment: '@(Model.SupplementaryMaxPayment?.ToString("G", CultureInfo.InvariantCulture) ?? "null")',
                Priority: @Model.Priority,
                PrimaryInsurancePlanId: @Model.PrimaryInsurancePlanId,
                IsActive: @Model.IsActive.ToString().ToLower()
            });
        });
    </script>
}