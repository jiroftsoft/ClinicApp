@model ClinicApp.ViewModels.Insurance.Supplementary.SupplementaryTariffCreateEditViewModel

@{
    ViewBag.Title = "جزئیات تعرفه بیمه تکمیلی";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    
    // تنظیم Culture برای فرمت اعداد
    System.Threading.Thread.CurrentThread.CurrentCulture = new System.Globalization.CultureInfo("fa-IR");
    System.Threading.Thread.CurrentThread.CurrentUICulture = new System.Globalization.CultureInfo("fa-IR");
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-info-circle text-info"></i>
                        جزئیات تعرفه بیمه تکمیلی
                    </h3>
                    <div class="card-tools">
                        <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-left"></i>
                            بازگشت به لیست
                        </a>
                        <a href="@Url.Action("Edit", new { id = Model.InsuranceTariffId })" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i>
                            ویرایش
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- اطلاعات تعرفه -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-primary border-bottom pb-2">
                                <i class="fas fa-clipboard-list"></i>
                                اطلاعات تعرفه
                            </h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">نام خدمت</label>
                                <div class="form-control-plaintext bg-light p-2 rounded">
                                    <i class="fas fa-stethoscope text-primary"></i>
                                    <strong>@Model.ServiceName</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">کد خدمت</label>
                                <div class="form-control-plaintext bg-light p-2 rounded">
                                    <i class="fas fa-barcode text-primary"></i>
                                    <strong>@Model.ServiceCode</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">طرح بیمه تکمیلی</label>
                                <div class="form-control-plaintext bg-light p-2 rounded">
                                    <i class="fas fa-shield-alt text-success"></i>
                                    <strong>@(Model.InsurancePlans?.FirstOrDefault(x => x.Value == Model.InsurancePlanId.ToString())?.Text ?? "نامشخص")</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">بیمه پایه</label>
                                <div class="form-control-plaintext bg-light p-2 rounded">
                                    <i class="fas fa-hospital text-info"></i>
                                    <strong>
                                    @if (Model.PrimaryInsurancePlanId > 0 && Model.PrimaryInsurancePlans?.Any() == true)
                                    {
                                        @(Model.PrimaryInsurancePlans.FirstOrDefault(x => x.Value == Model.PrimaryInsurancePlanId.ToString())?.Text ?? "نامشخص")
                                    }
                                    else
                                    {
                                        <span class="text-warning">بیمه پایه یافت نشد</span>
                                    }
                                </strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- اطلاعات مالی -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-success border-bottom pb-2">
                                <i class="fas fa-calculator"></i>
                                اطلاعات مالی
                            </h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">قیمت تعرفه (تومان)</label>
                                <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                    <i class="fas fa-money-bill-wave text-success"></i>
                                    <strong class="text-success">@(Model.TariffPrice?.ToString("N0") ?? "0")</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">سهم بیمار (تومان)</label>
                                <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                    <i class="fas fa-user text-warning"></i>
                                    <strong class="text-warning">@(Model.PatientShare?.ToString("N0") ?? "0")</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">سهم بیمه (تومان)</label>
                                <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                    <i class="fas fa-shield-alt text-info"></i>
                                    <strong class="text-info">@(Model.InsurerShare?.ToString("N0") ?? "0")</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">درصد پوشش تکمیلی</label>
                                <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                    <i class="fas fa-percentage text-primary"></i>
                                    <strong class="text-primary">@(Model.SupplementaryCoveragePercent?.ToString("F0") ?? "0")%</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- اطلاعات تکمیلی -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-info border-bottom pb-2">
                                <i class="fas fa-cog"></i>
                                اطلاعات تکمیلی
                            </h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">اولویت</label>
                                <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                    <i class="fas fa-sort-numeric-up text-secondary"></i>
                                    <strong>@Model.Priority</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">وضعیت</label>
                                <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                    @if (Model.IsActive)
                                    {
                                        <i class="fas fa-check-circle text-success"></i>
                                        <strong class="text-success">فعال</strong>
                                    }
                                    else
                                    {
                                        <i class="fas fa-times-circle text-danger"></i>
                                        <strong class="text-danger">غیرفعال</strong>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="form-label font-weight-bold">شناسه تعرفه</label>
                                <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                    <i class="fas fa-hashtag text-secondary"></i>
                                    <strong>@Model.InsuranceTariffId</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- پیش‌نمایش محاسبات -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card bg-light">
                                <div class="card-header">
                                    <h6 class="card-title text-primary">
                                        <i class="fas fa-chart-pie"></i>
                                        پیش‌نمایش محاسبات
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="row text-center">
                                        <div class="col-md-2">
                                            <div class="border rounded p-2 bg-white">
                                                <small class="text-muted">قیمت کل خدمت</small>
                                                <div class="font-weight-bold text-success">
                                                    @(Model.TariffPrice?.ToString("N0") ?? "0") تومان
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="border rounded p-2 bg-white">
                                                <small class="text-muted">سهم بیمه پایه</small>
                                                <div class="font-weight-bold text-info">
                                                    @(Model.InsurerShare?.ToString("N0") ?? "0") تومان
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="border rounded p-2 bg-white">
                                                <small class="text-muted">مبلغ باقی‌مانده</small>
                                                <div class="font-weight-bold text-warning">
                                                    @(Model.PatientShare?.ToString("N0") ?? "0") تومان
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="border rounded p-2 bg-white">
                                                <small class="text-muted">درصد پوشش تکمیلی</small>
                                                <div class="font-weight-bold text-primary">
                                                    @(Model.SupplementaryCoveragePercent?.ToString("F0") ?? "0")%
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="border rounded p-2 bg-white">
                                                <small class="text-muted">سهم نهایی بیمار</small>
                                                <div class="font-weight-bold text-danger">
                                                    @((Model.PatientShare - (Model.PatientShare * Model.SupplementaryCoveragePercent / 100))?.ToString("N0") ?? "0") تومان
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="border rounded p-2 bg-white">
                                                <small class="text-muted">سهم بیمه تکمیلی</small>
                                                <div class="font-weight-bold text-success">
                                                    @((Model.PatientShare * Model.SupplementaryCoveragePercent / 100)?.ToString("N0") ?? "0") تومان
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i>
                                بازگشت به لیست
                            </a>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Edit", new { id = Model.InsuranceTariffId })" class="btn btn-primary">
                                <i class="fas fa-edit"></i>
                                ویرایش تعرفه
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            console.log('🏥 MEDICAL: Details page loaded successfully');
            
            // Debug: نمایش اطلاعات Model
            console.log('🏥 MEDICAL DEBUG: Details Model Data:', {
                InsuranceTariffId: @(Model.InsuranceTariffId ?? 0),
                ServiceId: @Model.ServiceId,
                InsurancePlanId: @Model.InsurancePlanId,
                TariffPrice: @(Model.TariffPrice?.ToString("F2") ?? "null"),
                PatientShare: @(Model.PatientShare?.ToString("F2") ?? "null"),
                InsurerShare: @(Model.InsurerShare?.ToString("F2") ?? "null"),
                SupplementaryCoveragePercent: @(Model.SupplementaryCoveragePercent?.ToString("F2") ?? "null"),
                Priority: @Model.Priority,
                PrimaryInsurancePlanId: @Model.PrimaryInsurancePlanId,
                IsActive: @Model.IsActive.ToString().ToLower()
            });
            
            console.log('🏥 MEDICAL DEBUG: Details Model Data:', {
                ServiceName: '@Model.ServiceName',
                ServiceCode: '@Model.ServiceCode',
                PrimaryInsurancePlanId: @Model.PrimaryInsurancePlanId,
                PrimaryInsurancePlansCount: @Model.PrimaryInsurancePlans.Count,
                InsurancePlansCount: @Model.InsurancePlans.Count,
                DepartmentsCount: @Model.Departments.Count
            });
            
            // Debug: بررسی PrimaryInsurancePlans
            console.log('🏥 MEDICAL DEBUG: PrimaryInsurancePlans:', @Html.Raw(Json.Encode(Model.PrimaryInsurancePlans)));
        });
    </script>
}