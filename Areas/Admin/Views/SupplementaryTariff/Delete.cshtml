@model ClinicApp.ViewModels.Insurance.Supplementary.SupplementaryTariffDetailsViewModel
@{
    ViewBag.Title = "حذف تعرفه بیمه تکمیلی";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link href="~/Content/css/medical-environment-styles.css" rel="stylesheet" />
    <style>
        .delete-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }

        .delete-card .card-header {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
            color: white;
            border: none;
            border-radius: 15px 15px 0 0;
            padding: 25px;
        }

        .delete-card .card-body {
            padding: 30px;
        }

        .warning-section {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 20px;
        }

        .info-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 20px;
        }

        .btn-danger {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
            border: none;
            border-radius: 25px;
            color: white;
            padding: 12px 30px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            color: white;
        }

        .btn-secondary {
            background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
            border: none;
            border-radius: 25px;
            color: white;
            padding: 12px 30px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            color: white;
        }

        .back-button {
            background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
            border: none;
            border-radius: 25px;
            color: white;
            padding: 12px 30px;
            font-weight: 500;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .back-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            color: white;
            text-decoration: none;
        }

        .detail-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px solid rgba(255,255,255,0.2);
        }

        .detail-item:last-child {
            border-bottom: none;
        }

        .detail-label {
            font-weight: 600;
            opacity: 0.9;
        }

        .detail-value {
            font-weight: 500;
        }

        .currency-format {
            font-family: 'Courier New', monospace;
            font-weight: bold;
        }

        .status-badge {
            padding: 8px 20px;
            border-radius: 25px;
            font-weight: 500;
            font-size: 0.9rem;
        }

        .badge-success {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            color: white;
        }

        .badge-danger {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
            color: white;
        }

        .badge-warning {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
        }

        .badge-secondary {
            background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
            color: white;
        }

        .alert-medical {
            border-radius: 15px;
            border: none;
            padding: 20px;
            margin-bottom: 20px;
        }

        .alert-medical-danger {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
            color: white;
        }

        .alert-medical-warning {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
        }

        .alert-medical-info {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
    </style>
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row">
        <div class="col-12">
            <div class="delete-card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h2 class="mb-0">
                                <i class="fas fa-trash-alt me-2"></i>
                                حذف تعرفه بیمه تکمیلی
                            </h2>
                            <p class="mb-0 mt-2 opacity-75">
                                حذف دائمی تعرفه بیمه تکمیلی
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <span class="status-badge @Model.StatusCssClass">
                                @Model.StatusText
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Warning Section -->
    <div class="row">
        <div class="col-12">
            <div class="warning-section">
                <h5 class="mb-4">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    هشدار حذف
                </h5>
                <div class="alert-medical alert-medical-danger">
                    <h6 class="mb-3">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        توجه: این عمل قابل بازگشت نیست!
                    </h6>
                    <ul class="mb-0">
                        <li>تعرفه بیمه تکمیلی به صورت دائمی حذف خواهد شد</li>
                        <li>تمام محاسبات مرتبط با این تعرفه متوقف خواهد شد</li>
                        <li>بیمارانی که از این تعرفه استفاده می‌کنند، دیگر پوشش تکمیلی نخواهند داشت</li>
                        <li>این عمل بر روی گزارشات و آمار سیستم تأثیر خواهد گذاشت</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Information Section -->
    <div class="row">
        <div class="col-12">
            <div class="info-section">
                <h5 class="mb-4">
                    <i class="fas fa-info-circle me-2"></i>
                    اطلاعات تعرفه
                </h5>
                <div class="detail-item">
                    <span class="detail-label">شناسه تعرفه:</span>
                    <span class="detail-value">@Model.InsuranceTariffId</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">نام خدمت:</span>
                    <span class="detail-value">@Model.ServiceTitle</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">طرح بیمه:</span>
                    <span class="detail-value">@Model.InsurancePlanName</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">قیمت تعرفه:</span>
                    <span class="detail-value currency-format">@(Model.TariffPrice?.ToString("N0") ?? "0") تومان</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">سهم بیمار:</span>
                    <span class="detail-value currency-format">@(Model.PatientShare?.ToString("N0") ?? "0") تومان</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">سهم بیمه:</span>
                    <span class="detail-value currency-format">@(Model.InsurerShare?.ToString("N0") ?? "0") تومان</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">درصد پوشش تکمیلی:</span>
                    <span class="detail-value">@(Model.SupplementaryCoveragePercent?.ToString("F2") ?? "0")%</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">سقف پرداخت تکمیلی:</span>
                    <span class="detail-value currency-format">@(Model.SupplementaryMaxPayment?.ToString("N0") ?? "0") تومان</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">اولویت:</span>
                    <span class="detail-value">@(Model.Priority?.ToString() ?? "0")</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">تاریخ شروع:</span>
                    <span class="detail-value">@(Model.StartDate?.ToString("yyyy/MM/dd") ?? "نامشخص")</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">تاریخ پایان:</span>
                    <span class="detail-value">@(Model.EndDate?.ToString("yyyy/MM/dd") ?? "نامشخص")</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">وضعیت:</span>
                    <span class="detail-value">@(Model.IsActive ? "فعال" : "غیرفعال")</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Calculation Impact -->
    <div class="row">
        <div class="col-12">
            <div class="info-section">
                <h5 class="mb-4">
                    <i class="fas fa-calculator me-2"></i>
                    تأثیر بر محاسبات
                </h5>
                <div class="detail-item">
                    <span class="detail-label">مبلغ کل خدمت:</span>
                    <span class="detail-value currency-format">@(Model.TariffPrice?.ToString("N0") ?? "0") تومان</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">پوشش بیمه اصلی:</span>
                    <span class="detail-value currency-format">@(Model.InsurerShare?.ToString("N0") ?? "0") تومان</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">مبلغ باقی‌مانده:</span>
                    <span class="detail-value currency-format">@Model.RemainingAmountAfterPrimary.ToString("N0") تومان</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">پوشش تکمیلی:</span>
                    <span class="detail-value currency-format">@Model.SupplementaryCoverageAmount.ToString("N0") تومان</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">سهم نهایی بیمار:</span>
                    <span class="detail-value currency-format">@Model.FinalPatientShare.ToString("N0") تومان</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row">
        <div class="col-12 text-center">
            <a href="@Url.Action("Details", new { id = Model.InsuranceTariffId })" class="back-button">
                <i class="fas fa-arrow-right me-2"></i>
                بازگشت
            </a>
            <button type="button" class="btn-danger" onclick="confirmDelete()">
                <i class="fas fa-trash-alt me-2"></i>
                حذف تعرفه
            </button>
        </div>
    </div>

    <!-- Hidden Delete Form -->
    @using (Html.BeginForm("Delete", "SupplementaryTariff", FormMethod.Post, new { @class = "d-none", id = "deleteForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.InsuranceTariffId)
    }
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            if (confirm('آیا مطمئن هستید که می‌خواهید این تعرفه بیمه تکمیلی را حذف کنید؟\n\nاین عمل قابل بازگشت نیست و تمام محاسبات مرتبط متوقف خواهد شد.')) {
                if (confirm('آیا واقعاً مطمئن هستید؟\n\nاین تعرفه برای همیشه حذف خواهد شد.')) {
                    $('#deleteForm').submit();
                }
            }
        }
    </script>
}
