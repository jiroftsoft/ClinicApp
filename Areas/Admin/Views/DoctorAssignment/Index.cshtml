@model ClinicApp.ViewModels.DoctorManagementVM.DoctorAssignmentIndexViewModel
@{
    ViewBag.Title = Model.PageTitle;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">@Model.PageTitle</h1>
                    <p class="text-muted">@Model.PageSubtitle</p>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "Admin" })">خانه</a></li>
                        <li class="breadcrumb-item active">مدیریت انتسابات</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">

            <!-- آمار کلی -->
            @if (Model.IsDataLoaded && Model.Stats != null)
            {
                @Html.Partial("_AssignmentStats", Model.Stats)
            }

            <!-- فیلترها -->
            @if (Model.Filters != null)
            {
                @Html.Partial("_AssignmentFilters", Model.Filters)
            }

            <!-- جدول انتسابات -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-list"></i>
                        لیست انتسابات پزشکان
                    </h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" id="refreshBtn" title="بروزرسانی">
                            <i class="fas fa-sync-alt"></i>
                        </button>
                        <button type="button" class="btn btn-tool" id="clearFiltersBtn" title="پاک کردن فیلترها">
                            <i class="fas fa-filter"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="کوچک کردن">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @Html.AntiForgeryToken()
                    <div class="table-responsive">
                        <table id="assignmentsTable" 
                               class="table table-hover table-striped"
                               data-refresh-url="@Url.Action("GetAssignmentsData", "DoctorAssignment")"
                               data-filter-url="@Url.Action("FilterAssignments", "DoctorAssignment")"
                               data-export-url="@Url.Action("ExportAssignments", "DoctorAssignment")"
                               data-doctor-info-url="@Url.Action("GetDoctorInfo", "DoctorAssignment")"
                               data-assignments-url="@Url.Action("GetDoctorAssignmentsAjax", "DoctorAssignment")">
                            <thead>
                                <tr>
                                    <th>نام پزشک</th>
                                    <th>دپارتمان</th>
                                    <th>سرفصل خدماتی</th>
                                    <th>تاریخ انتساب</th>
                                    <th>وضعیت</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- داده‌ها از طریق AJAX بارگذاری می‌شوند -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </section>
</div>

@section Scripts {
    <script src="~/Scripts/app/utility.js"></script>
    <script src="~/Scripts/app/doctor-assignment-index.js"></script>
}