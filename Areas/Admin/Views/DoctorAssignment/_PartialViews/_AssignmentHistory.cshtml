@using System.Linq
@model List<ClinicApp.ViewModels.DoctorManagementVM.AssignmentHistoryViewModel>

<div class="history-card p-4">
    <h4 class="mb-3">
        <i class="fas fa-history me-2"></i>
        تاریخچه انتسابات
    </h4>

    @if (Model != null && Model.Any())
    {
        <div class="timeline">
            @foreach (var history in Model.OrderByDescending(h => h.ActionDate))
            {
                <div class="timeline-item">
                    <div class="timeline-marker @history.TimelineMarkerClass">
                        <i class="@history.TimelineIcon"></i>
                    </div>
                    <div class="timeline-content">
                        <div class="timeline-header">
                            <h6 class="mb-1">@history.ActionTitle</h6>
                            <small class="text-muted">
                                <i class="fas fa-calendar me-1"></i>
                                @history.ActionDateFormatted
                            </small>
                        </div>
                        <div class="timeline-body">
                            <p class="mb-2">@history.ActionDescription</p>
                            @if (!string.IsNullOrEmpty(history.DepartmentName))
                            {
                                <div class="history-detail">
                                    <strong>دپارتمان:</strong> @history.DepartmentName
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(history.ServiceCategories))
                            {
                                <div class="history-detail">
                                    <strong>صلاحیت‌ها:</strong> @history.ServiceCategories
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(history.PerformedBy))
                            {
                                <div class="history-detail">
                                    <strong>انجام شده توسط:</strong> @history.PerformedBy
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(history.Notes))
                            {
                                <div class="history-notes">
                                    <strong>یادداشت:</strong> @history.Notes
                                </div>
                            }
                        </div>
                        <div class="timeline-footer">
                            <span class="badge @history.ActionTypeBadgeClass">
                                @history.ActionTypeText
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-history"></i>
            <h5>هیچ تاریخچه‌ای یافت نشد</h5>
            <p>هنوز هیچ عملیاتی روی انتسابات این پزشک انجام نشده است.</p>
        </div>
    }
</div>

<style>
    .history-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }
    .timeline {
        position: relative;
        padding-left: 30px;
    }
    .timeline::before {
        content: '';
        position: absolute;
        left: 15px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: linear-gradient(to bottom, #667eea, #764ba2);
    }
    .timeline-item {
        position: relative;
        margin-bottom: 30px;
    }
    .timeline-marker {
        position: absolute;
        left: -22px;
        top: 0;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 0.8rem;
    }
    .timeline-content {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 20px;
        border-left: 4px solid #667eea;
    }
    .timeline-header {
        margin-bottom: 15px;
    }
    .timeline-body {
        margin-bottom: 15px;
    }
    .history-detail {
        margin-bottom: 8px;
        font-size: 0.9rem;
    }
    .history-notes {
        margin-top: 10px;
        padding: 10px;
        background: #fff3cd;
        border-radius: 5px;
        font-size: 0.9rem;
    }
    .timeline-footer {
        text-align: right;
    }
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #6c757d;
    }
    .empty-state i {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.5;
    }
</style>
