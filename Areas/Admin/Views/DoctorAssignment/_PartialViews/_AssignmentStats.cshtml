@model ClinicApp.ViewModels.DoctorManagementVM.AssignmentStatsViewModel

<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stats-card p-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-1">@Model.AssignedDoctors</h3>
                    <p class="mb-0 opacity-75">پزشکان انتساب شده</p>
                    <small class="trend-indicator trend-up">
                        <i class="fas fa-arrow-up me-1"></i>
                        @Model.CompletionPercentageFormatted تکمیل
                    </small>
                </div>
                <div class="stats-icon">
                    <i class="fas fa-user-md"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stats-card p-4" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-1">@Model.TotalAssignments</h3>
                    <p class="mb-0 opacity-75">کل انتسابات</p>
                    <small class="trend-indicator trend-up">
                        <i class="fas fa-arrow-up me-1"></i>
                        @Model.ActiveAssignments فعال
                    </small>
                </div>
                <div class="stats-icon">
                    <i class="fas fa-link"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stats-card p-4" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-1">@Model.ActiveAssignments</h3>
                    <p class="mb-0 opacity-75">انتسابات فعال</p>
                    <small class="trend-indicator trend-stable">
                        <i class="fas fa-check-circle me-1"></i>
                        @Model.InactiveAssignments غیرفعال
                    </small>
                </div>
                <div class="stats-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stats-card p-4" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-1">@Model.ActiveDepartments</h3>
                    <p class="mb-0 opacity-75">دپارتمان‌های فعال</p>
                    <small class="trend-indicator trend-up">
                        <i class="fas fa-building me-1"></i>
                        @Model.ServiceCategories صلاحیت
                    </small>
                </div>
                <div class="stats-icon">
                    <i class="fas fa-building"></i>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.HasActiveAssignments || Model.HasInactiveAssignments)
{
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="stats-item">
                <div class="stats-number">@Model.ActiveAssignments</div>
                <div class="text-muted">انتسابات فعال</div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="stats-item">
                <div class="stats-number">@Model.InactiveAssignments</div>
                <div class="text-muted">انتسابات غیرفعال</div>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            <strong>آخرین بروزرسانی:</strong> @Model.LastUpdateFormatted
        </div>
    </div>
</div>

<style>
    .stats-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        color: white;
        transition: transform 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }
    
    .stats-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }
    
    .stats-icon {
        font-size: 2.5rem;
        opacity: 0.8;
    }
    
    .trend-indicator {
        font-size: 0.8rem;
        opacity: 0.9;
    }
    
    .trend-up {
        color: #28a745;
    }
    
    .trend-down {
        color: #dc3545;
    }
    
    .trend-stable {
        color: #ffc107;
    }
    
    .stats-item {
        text-align: center;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 10px;
        border: 1px solid #e9ecef;
    }
    
    .stats-number {
        font-size: 2rem;
        font-weight: bold;
        color: #495057;
    }
</style>
