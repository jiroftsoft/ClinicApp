@model List<ClinicApp.ViewModels.DoctorManagementVM.DoctorServiceCategoryViewModel>

<div class="service-categories-card p-4">
    <h4 class="mb-3">
        <i class="fas fa-stethoscope me-2"></i>
        صلاحیت‌های خدماتی
    </h4>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="service-category-item">
                        <div class="category-header">
                            <h6 class="mb-2">@category.ServiceCategoryName</h6>
                            <div class="category-badges">
                                @if (category.IsActive)
                                {
                                    <span class="badge bg-success category-badge">فعال</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary category-badge">غیرفعال</span>
                                }
                                @if (category.IsPrimary)
                                {
                                    <span class="badge bg-primary category-badge">اصلی</span>
                                }
                            </div>
                        </div>
                        <div class="category-details">
                            <p class="text-muted mb-2">
                                <i class="fas fa-calendar me-1"></i>
                                تاریخ اخذ: @(category.CertificationDate?.ToString("yyyy/MM/dd") ?? "نامشخص")
                            </p>
                            @if (!string.IsNullOrEmpty(category.CertificationNumber))
                            {
                                <p class="text-muted mb-2">
                                    <i class="fas fa-id-card me-1"></i>
                                    شماره گواهی: @category.CertificationNumber
                                </p>
                            }
                            @if (!string.IsNullOrEmpty(category.Description))
                            {
                                <p class="text-muted mb-0">
                                    <i class="fas fa-comment me-1"></i>
                                    @category.Description
                                </p>
                            }
                        </div>
                        <div class="category-actions">
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-sm btn-outline-primary" 
                                        onclick="editServiceCategory(@category.Id)" title="ویرایش">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-warning" 
                                        onclick="toggleServiceCategoryStatus(@category.Id)" title="تغییر وضعیت">
                                    <i class="fas fa-toggle-on"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                        onclick="removeServiceCategory(@category.Id)" title="حذف">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-stethoscope"></i>
            <h5>هیچ صلاحیت خدماتی یافت نشد</h5>
            <p>این پزشک هنوز هیچ صلاحیت خدماتی ندارد.</p>
            @if (ViewBag.ShowAddButton != null && ViewBag.ShowAddButton)
            {
                <a href="@Url.Action("AssignToDepartment", "DoctorAssignment", new { doctorId = ViewBag.DoctorId })" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>
                    افزودن صلاحیت
                </a>
            }
        </div>
    }
</div>

<style>
    .service-categories-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }
    .service-category-item {
        border: 1px solid #e9ecef;
        border-radius: 10px;
        padding: 20px;
        height: 100%;
        transition: all 0.3s ease;
        background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    }
    .service-category-item:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    }
    .category-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 15px;
    }
    .category-header h6 {
        color: #667eea;
        font-weight: 600;
        margin: 0;
        flex: 1;
    }
    .category-badges {
        display: flex;
        gap: 5px;
        flex-wrap: wrap;
    }
    .category-badge {
        font-size: 0.75rem;
        padding: 4px 8px;
        border-radius: 12px;
    }
    .category-details {
        margin-bottom: 15px;
    }
    .category-details p {
        font-size: 0.9rem;
        margin-bottom: 8px;
    }
    .category-actions {
        border-top: 1px solid #e9ecef;
        padding-top: 15px;
    }
    .category-actions .btn-group {
        width: 100%;
    }
    .category-actions .btn {
        flex: 1;
        font-size: 0.8rem;
        padding: 6px 8px;
    }
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #6c757d;
    }
    .empty-state i {
        font-size: 4rem;
        margin-bottom: 20px;
        opacity: 0.5;
    }
</style>

<script>
    function editServiceCategory(categoryId) {
        window.location.href = '@Url.Action("EditServiceCategory", "DoctorServiceCategory")/' + categoryId;
    }

    function toggleServiceCategoryStatus(categoryId) {
        Swal.fire({
            title: 'تغییر وضعیت',
            text: 'آیا می‌خواهید وضعیت این صلاحیت را تغییر دهید؟',
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'بله، تغییر بده',
            cancelButtonText: 'انصراف'
        }).then((result) => {
            if (result.isConfirmed) {
                performToggleServiceCategory(categoryId);
            }
        });
    }

    function performToggleServiceCategory(categoryId) {
        $.post('@Url.Action("ToggleServiceCategoryStatus", "DoctorServiceCategory")', { id: categoryId })
            .done(function (data) {
                if (data.success) {
                    Swal.fire({
                        title: 'تغییر موفق',
                        text: 'وضعیت صلاحیت با موفقیت تغییر یافت',
                        icon: 'success',
                        confirmButtonText: 'باشه'
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        title: 'خطا در تغییر',
                        text: data.message,
                        icon: 'error',
                        confirmButtonText: 'باشه'
                    });
                }
            })
            .fail(function () {
                Swal.fire({
                    title: 'خطا در ارتباط با سرور',
                    text: 'لطفاً دوباره تلاش کنید',
                    icon: 'error',
                    confirmButtonText: 'باشه'
                });
            });
    }

    function removeServiceCategory(categoryId) {
        Swal.fire({
            title: 'آیا مطمئن هستید؟',
            text: 'این عملیات قابل بازگشت نیست!',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'بله، حذف کن',
            cancelButtonText: 'انصراف'
        }).then((result) => {
            if (result.isConfirmed) {
                performRemoveServiceCategory(categoryId);
            }
        });
    }

    function performRemoveServiceCategory(categoryId) {
        $.post('@Url.Action("RemoveServiceCategory", "DoctorServiceCategory")', { id: categoryId })
            .done(function (data) {
                if (data.success) {
                    Swal.fire({
                        title: 'حذف موفق',
                        text: 'صلاحیت با موفقیت حذف شد',
                        icon: 'success',
                        confirmButtonText: 'باشه'
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        title: 'خطا در حذف',
                        text: data.message,
                        icon: 'error',
                        confirmButtonText: 'باشه'
                    });
                }
            })
            .fail(function () {
                Swal.fire({
                    title: 'خطا در ارتباط با سرور',
                    text: 'لطفاً دوباره تلاش کنید',
                    icon: 'error',
                    confirmButtonText: 'باشه'
                });
            });
    }
</script>
