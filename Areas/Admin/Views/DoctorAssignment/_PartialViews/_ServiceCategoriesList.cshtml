@using System.Linq
@model List<ClinicApp.ViewModels.DoctorManagementVM.DoctorServiceCategoryViewModel>

<div class="service-categories-card p-4">
    <h4 class="mb-3">
        <i class="fas fa-stethoscope me-2"></i>
        صلاحیت‌های خدماتی
    </h4>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="service-category-item">
                        <div class="category-header">
                            <h6 class="mb-2">@category.ServiceCategoryTitle</h6>
                            <div class="category-badges">
                                @if (category.IsActive)
                                {
                                    <span class="badge bg-success category-badge">فعال</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary category-badge">غیرفعال</span>
                                }
                                @if (!string.IsNullOrEmpty(category.AuthorizationLevel))
                                {
                                    <span class="badge bg-primary category-badge">@category.AuthorizationLevel</span>
                                }
                            </div>
                        </div>
                        <div class="category-details">
                            <p class="text-muted mb-2">
                                <i class="fas fa-calendar me-1"></i>
                                تاریخ اعطا: @(category.GrantedDate?.ToString("yyyy/MM/dd") ?? "نامشخص")
                            </p>
                            @if (!string.IsNullOrEmpty(category.CertificateNumber))
                            {
                                <p class="text-muted mb-2">
                                    <i class="fas fa-id-card me-1"></i>
                                    شماره گواهی: @category.CertificateNumber
                                </p>
                            }
                            @if (!string.IsNullOrEmpty(category.Notes))
                            {
                                <p class="text-muted mb-0">
                                    <i class="fas fa-comment me-1"></i>
                                    @category.Notes
                                </p>
                            }
                        </div>
                        <div class="category-actions">
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-sm btn-outline-primary" 
                                        onclick="editServiceCategory(@category.ServiceCategoryId)" title="ویرایش">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-warning" 
                                        onclick="toggleServiceCategoryStatus(@category.ServiceCategoryId)" title="تغییر وضعیت">
                                    <i class="fas fa-toggle-on"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                        onclick="removeServiceCategory(@category.ServiceCategoryId)" title="حذف">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-stethoscope"></i>
            <h5>هیچ صلاحیت خدماتی یافت نشد</h5>
            <p>این پزشک هنوز هیچ صلاحیت خدماتی ندارد.</p>
            @if (ViewBag.ShowAddButton != null && ViewBag.ShowAddButton)
            {
                <a href="@Url.Action("AssignToDepartment", "DoctorAssignment", new { doctorId = ViewBag.DoctorId })" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>
                    افزودن صلاحیت
                </a>
            }
        </div>
    }
</div>

<style>
    .service-categories-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }
    .service-category-item {
        border: 1px solid #e9ecef;
        border-radius: 10px;
        padding: 20px;
        transition: all 0.3s ease;
    }
    .service-category-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }
    .category-header {
        display: flex;
        justify-content: between;
        align-items: start;
        margin-bottom: 15px;
    }
    .category-badges {
        display: flex;
        gap: 5px;
        flex-wrap: wrap;
    }
    .category-badge {
        border-radius: 15px;
        padding: 4px 8px;
        font-size: 0.75rem;
    }
    .category-details {
        margin-bottom: 15px;
    }
    .category-actions {
        text-align: center;
    }
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #6c757d;
    }
    .empty-state i {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.5;
    }
</style>

