@model ClinicApp.ViewModels.DoctorManagementVM.DoctorAssignmentOperationViewModel
@{
    ViewBag.Title = "انتساب جدید پزشک";
    ViewBag.IsEdit = false;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">انتساب جدید پزشک</h1>
                    <p class="text-muted">انتساب پزشک به دپارتمان‌ها و سرفصل‌های خدماتی</p>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "Admin" })">خانه</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">مدیریت انتسابات</a></li>
                        <li class="breadcrumb-item active">انتساب جدید</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            
            <!-- فرم انتساب -->
            @Html.Partial("_AssignmentForm", Model)

        </div>
    </section>
</div>

@section Scripts {
    <script src="~/Scripts/app/utility.js"></script>
    <script src="~/Scripts/app/assignment-form.js"></script>
}