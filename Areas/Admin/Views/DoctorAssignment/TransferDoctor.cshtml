@model ClinicApp.ViewModels.DoctorManagementVM.DoctorTransferViewModel
@{
    ViewBag.Title = "انتقال پزشک";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link href="~/Content/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/select2/css/select2.min.css" rel="stylesheet" />
    <style>
        .transfer-form {
            background: white;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }
        .form-section {
            border-left: 4px solid #667eea;
            padding-left: 20px;
            margin-bottom: 30px;
        }
        .form-section h5 {
            color: #667eea;
            font-weight: 600;
        }
        .doctor-info-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 10px;
            padding: 20px;
        }
        .transfer-arrow {
            font-size: 2rem;
            color: #667eea;
            text-align: center;
            margin: 20px 0;
        }
        .department-comparison {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin: 20px 0;
        }
        .btn-submit {
            border-radius: 25px;
            font-weight: 600;
            padding: 12px 30px;
            transition: all 0.3s ease;
        }
        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.8);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }
        .service-preservation {
            background: #e8f5e8;
            border: 1px solid #28a745;
            border-radius: 10px;
            padding: 15px;
            margin: 15px 0;
        }
    </style>
}

<div class="loading-overlay">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">در حال پردازش...</span>
    </div>
</div>

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-0 text-primary">
                        <i class="fas fa-exchange-alt me-2"></i>
                        انتقال پزشک
                    </h2>
                    <p class="text-muted mb-0">انتقال پزشک از دپارتمان فعلی به دپارتمان جدید</p>
                </div>
                <div>
                    <a href="@Url.Action("Index", "DoctorAssignment")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-right me-2"></i>
                        بازگشت به لیست
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Doctor Information Card -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="doctor-info-card">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h4 class="mb-2">
                            <i class="fas fa-user-md me-2"></i>
                            @Model.DoctorName
                        </h4>
                        <p class="mb-0 opacity-75">
                            <i class="fas fa-id-card me-2"></i>
                            کد ملی: @Model.DoctorNationalCode
                        </p>
                    </div>
                    <div class="col-md-4 text-end">
                        <div class="d-flex justify-content-end">
                            <div class="text-center me-4">
                                <h5 class="mb-1">@ViewBag.CurrentAssignments</h5>
                                <small class="opacity-75">انتسابات فعلی</small>
                            </div>
                            <div class="text-center">
                                <h5 class="mb-1">@ViewBag.ServiceCategories</h5>
                                <small class="opacity-75">صلاحیت‌ها</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Transfer Form -->
    <div class="row">
        <div class="col-12">
            <div class="transfer-form p-4">
                @using (Html.BeginForm("TransferDoctor", "DoctorAssignment", FormMethod.Post, new { id = "transferForm", @class = "needs-validation", novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.DoctorId)
                    @Html.HiddenFor(m => m.DoctorName)

                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <!-- Current Department -->
                    <div class="form-section">
                        <h5>
                            <i class="fas fa-hospital me-2"></i>
                            دپارتمان فعلی
                        </h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.FromDepartmentName, "دپارتمان فعلی", new { @class = "form-label fw-bold" })
                                    @Html.TextBoxFor(m => m.FromDepartmentName, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">وضعیت فعلی</label>
                                    <div class="form-control-plaintext">
                                        <span class="badge bg-success">فعال</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Transfer Arrow -->
                    <div class="transfer-arrow">
                        <i class="fas fa-arrow-down"></i>
                    </div>

                    <!-- Target Department -->
                    <div class="form-section">
                        <h5>
                            <i class="fas fa-hospital-alt me-2"></i>
                            دپارتمان مقصد
                        </h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.ToDepartmentId, "دپارتمان مقصد", new { @class = "form-label fw-bold" })
                                    @Html.DropDownListFor(m => m.ToDepartmentId, 
                                        new SelectList(ViewBag.Departments, "Value", "Text"), 
                                        "انتخاب دپارتمان مقصد...", 
                                        new { @class = "form-select", required = "required" })
                                    @Html.ValidationMessageFor(m => m.ToDepartmentId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">وضعیت جدید</label>
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="isActiveTransfer" checked>
                                        <label class="form-check-label" for="isActiveTransfer">
                                            انتساب فعال
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Service Categories Preservation -->
                    <div class="form-section">
                        <h5>
                            <i class="fas fa-stethoscope me-2"></i>
                            صلاحیت‌های خدماتی
                        </h5>
                        <div class="service-preservation">
                            <div class="form-check">
                                @Html.CheckBoxFor(m => m.PreserveServiceCategories, new { @class = "form-check-input" })
                                <label class="form-check-label fw-bold" for="@Html.IdFor(m => m.PreserveServiceCategories)">
                                    حفظ صلاحیت‌های خدماتی فعلی
                                </label>
                            </div>
                            <p class="text-muted mb-0 mt-2">
                                <i class="fas fa-info-circle me-1"></i>
                                در صورت انتخاب این گزینه، تمام صلاحیت‌های خدماتی فعلی پزشک حفظ خواهد شد
                            </p>
                        </div>
                    </div>

                    <!-- Transfer Reason -->
                    <div class="form-section">
                        <h5>
                            <i class="fas fa-comment me-2"></i>
                            دلیل انتقال
                        </h5>
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.TransferReason, "دلیل انتقال", new { @class = "form-label fw-bold" })
                                    @Html.TextAreaFor(m => m.TransferReason, new { @class = "form-control", rows = "4", placeholder = "دلیل انتقال پزشک را توضیح دهید..." })
                                    @Html.ValidationMessageFor(m => m.TransferReason, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Department Comparison -->
                    <div class="department-comparison" id="departmentComparison" style="display: none;">
                        <h6 class="mb-3">
                            <i class="fas fa-balance-scale me-2"></i>
                            مقایسه دپارتمان‌ها
                        </h6>
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-primary">دپارتمان فعلی</h6>
                                <ul class="list-unstyled" id="currentDeptInfo">
                                    <!-- Will be populated via JavaScript -->
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-success">دپارتمان مقصد</h6>
                                <ul class="list-unstyled" id="targetDeptInfo">
                                    <!-- Will be populated via JavaScript -->
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <button type="button" class="btn btn-outline-secondary" onclick="validateForm()">
                                        <i class="fas fa-check-circle me-2"></i>
                                        اعتبارسنجی
                                    </button>
                                    <button type="button" class="btn btn-outline-info" onclick="checkTransferCompatibility()">
                                        <i class="fas fa-link me-2"></i>
                                        بررسی سازگاری
                                    </button>
                                </div>
                                <div>
                                    <a href="@Url.Action("Index", "DoctorAssignment")" class="btn btn-secondary me-2">
                                        <i class="fas fa-times me-2"></i>
                                        انصراف
                                    </a>
                                    <button type="submit" class="btn btn-warning btn-submit">
                                        <i class="fas fa-exchange-alt me-2"></i>
                                        انجام انتقال
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Compatibility Modal -->
<div class="modal fade" id="compatibilityModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-link me-2"></i>
                    بررسی سازگاری انتقال
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="compatibilityContent">
                    <!-- Content will be loaded here -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/content/plugins/sweetalert2/sweetalert2@11.js"></script>
    <script src="~/content/plugins/select2/js/select2.min.js"></script>
    <script src="~/content/plugins/select2/js/fa.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        // محافظت jQuery - اطمینان از بارگذاری کامل jQuery
        window.ensureJQuery(function() {
            $(document).ready(function () {
                initializeSelect2();
                initializeFormValidation();
                setupEventHandlers();
            });
        });

        function initializeSelect2() {
            $('#ToDepartmentId').select2({
                placeholder: 'انتخاب دپارتمان مقصد...',
                allowClear: true,
                language: 'fa',
                width: '100%'
            });
        }

        function initializeFormValidation() {
            $('#transferForm').validate({
                rules: {
                    ToDepartmentId: {
                        required: true,
                        notEqual: $('#FromDepartmentId').val()
                    },
                    TransferReason: {
                        required: true,
                        minlength: 10,
                        maxlength: 500
                    }
                },
                messages: {
                    ToDepartmentId: {
                        required: 'لطفاً دپارتمان مقصد را انتخاب کنید',
                        notEqual: 'دپارتمان مقصد باید با دپارتمان فعلی متفاوت باشد'
                    },
                    TransferReason: {
                        required: 'لطفاً دلیل انتقال را وارد کنید',
                        minlength: 'دلیل انتقال باید حداقل 10 کاراکتر باشد',
                        maxlength: 'دلیل انتقال نمی‌تواند بیشتر از 500 کاراکتر باشد'
                    }
                },
                errorClass: 'text-danger',
                highlight: function (element) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function (element) {
                    $(element).removeClass('is-invalid');
                },
                submitHandler: function (form) {
                    showLoading();
                    return true;
                }
            });

            // Custom validation rule for not equal
            $.validator.addMethod("notEqual", function(value, element, param) {
                return this.optional(element) || value !== param;
            }, "مقدار انتخاب شده باید متفاوت باشد");
        }

        function setupEventHandlers() {
            $('#ToDepartmentId').on('change', function() {
                const targetDeptId = $(this).val();
                if (targetDeptId) {
                    loadDepartmentComparison(targetDeptId);
                } else {
                    $('#departmentComparison').hide();
                }
            });
        }

        function validateForm() {
            if ($('#transferForm').valid()) {
                showSuccess('اعتبارسنجی موفق', 'فرم شما معتبر است و آماده ارسال می‌باشد');
            } else {
                showError('خطا در اعتبارسنجی', 'لطفاً خطاهای فرم را برطرف کنید');
            }
        }

        function checkTransferCompatibility() {
            const doctorId = $('#DoctorId').val();
            const fromDeptId = $('#FromDepartmentId').val();
            const toDeptId = $('#ToDepartmentId').val();

            if (!toDeptId) {
                showError('خطا', 'لطفاً ابتدا دپارتمان مقصد را انتخاب کنید');
                return;
            }

            if (fromDeptId === toDeptId) {
                showError('خطا', 'دپارتمان مقصد باید با دپارتمان فعلی متفاوت باشد');
                return;
            }

            showLoading();

            $.post('@Url.Action("ValidateAssignment", "DoctorAssignment")', {
                doctorId: doctorId,
                fromDepartmentId: fromDeptId,
                toDepartmentId: toDeptId
            })
            .done(function (data) {
                if (data.success) {
                    showCompatibilityModal(data.data);
                } else {
                    showError('خطا در بررسی سازگاری', data.message);
                }
            })
            .fail(function () {
                showError('خطا در ارتباط با سرور', 'لطفاً دوباره تلاش کنید');
            })
            .always(function () {
                hideLoading();
            });
        }

        function showCompatibilityModal(compatibility) {
            let content = '<div class="alert alert-info">';
            content += '<h6><i class="fas fa-info-circle me-2"></i>وضعیت سازگاری انتقال</h6>';
            
            if (compatibility.IsCompatible) {
                content += '<div class="alert alert-success">';
                content += '<i class="fas fa-check-circle me-2"></i>انتقال قابل انجام است';
                content += '</div>';
                
                if (compatibility.Warnings && compatibility.Warnings.length > 0) {
                    content += '<div class="alert alert-warning">';
                    content += '<h6>هشدارها:</h6><ul>';
                    compatibility.Warnings.forEach(function (warning) {
                        content += `<li>${warning}</li>`;
                    });
                    content += '</ul></div>';
                }
            } else {
                content += '<div class="alert alert-danger">';
                content += '<i class="fas fa-times-circle me-2"></i>انتقال قابل انجام نیست';
                content += '</div>';
                
                if (compatibility.Reasons && compatibility.Reasons.length > 0) {
                    content += '<ul>';
                    compatibility.Reasons.forEach(function (reason) {
                        content += `<li>${reason}</li>`;
                    });
                    content += '</ul>';
                }
            }
            
            content += '</div>';

            $('#compatibilityContent').html(content);
            $('#compatibilityModal').modal('show');
        }

        function loadDepartmentComparison(targetDeptId) {
            $.get('@Url.Action("GetDepartmentInfo", "DoctorDepartment")', { id: targetDeptId })
                .done(function (data) {
                    if (data.success) {
                        populateDepartmentComparison(data.data);
                        $('#departmentComparison').show();
                    }
                });
        }

        function populateDepartmentComparison(deptInfo) {
            const targetInfo = $('#targetDeptInfo');
            targetInfo.empty();
            
            targetInfo.append(`<li><strong>نام:</strong> ${deptInfo.Name}</li>`);
            targetInfo.append(`<li><strong>کد:</strong> ${deptInfo.Code}</li>`);
            targetInfo.append(`<li><strong>وضعیت:</strong> <span class="badge bg-success">فعال</span></li>`);
            targetInfo.append(`<li><strong>تعداد پزشکان:</strong> ${deptInfo.DoctorCount}</li>`);
            targetInfo.append(`<li><strong>تعداد سرویس‌ها:</strong> ${deptInfo.ServiceCount}</li>`);
        }

        // Form submission handling
        $('#transferForm').on('submit', function (e) {
            if (!$(this).valid()) {
                e.preventDefault();
                showError('خطا در اعتبارسنجی', 'لطفاً خطاهای فرم را برطرف کنید');
                return false;
            }

            const fromDeptId = $('#FromDepartmentId').val();
            const toDeptId = $('#ToDepartmentId').val();

            if (fromDeptId === toDeptId) {
                e.preventDefault();
                showError('خطا', 'دپارتمان مقصد باید با دپارتمان فعلی متفاوت باشد');
                return false;
            }

            Swal.fire({
                title: 'تایید انتقال',
                text: 'آیا از انتقال پزشک اطمینان دارید؟ این عملیات قابل بازگشت است.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ffc107',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'بله، انتقال بده',
                cancelButtonText: 'انصراف'
            }).then((result) => {
                if (result.isConfirmed) {
                    showLoading();
                    return true;
                } else {
                    e.preventDefault();
                    return false;
                }
            });
        });

        function showLoading() {
            $('.loading-overlay').show();
        }

        function hideLoading() {
            $('.loading-overlay').hide();
        }

        function showSuccess(title, message) {
            Swal.fire({
                title: title,
                text: message,
                icon: 'success',
                confirmButtonText: 'باشه'
            });
        }

        function showError(title, message) {
            Swal.fire({
                title: title,
                text: message,
                icon: 'error',
                confirmButtonText: 'باشه'
            });
        }

        // Keyboard shortcuts
        $(document).keydown(function (e) {
            // Ctrl+T for transfer
            if (e.ctrlKey && e.keyCode === 84) {
                e.preventDefault();
                $('#transferForm').submit();
            }
            
            // Ctrl+Shift+V for validation
            if (e.ctrlKey && e.shiftKey && e.keyCode === 86) {
                e.preventDefault();
                validateForm();
            }
        });
    </script>
}
