@model ClinicApp.ViewModels.DoctorManagementVM.DoctorAssignmentDetailsViewModel
@{
    ViewBag.Title = "جزئیات انتسابات پزشک";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">جزئیات انتسابات پزشک</h1>
                    <p class="text-muted">@Model.DoctorName - @Model.DoctorNationalCode</p>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "Admin" })">خانه</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">مدیریت انتسابات</a></li>
                        <li class="breadcrumb-item active">جزئیات</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            
            <!-- اطلاعات پزشک -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-user-md"></i>
                        اطلاعات پزشک
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>نام کامل:</strong></td>
                                    <td>@Model.DoctorName</td>
                                </tr>
                                <tr>
                                    <td><strong>کد ملی:</strong></td>
                                    <td>@Model.DoctorNationalCode</td>
                                </tr>
                                <tr>
                                    <td><strong>تخصص:</strong></td>
                                    <td>@Model.DoctorSpecialization</td>
                                </tr>
                                <tr>
                                    <td><strong>شماره نظام پزشکی:</strong></td>
                                    <td>@Model.DoctorLicenseNumber</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>وضعیت:</strong></td>
                                    <td>
                                        <span class="badge @(Model.IsActive ? "badge-success" : "badge-danger")">
                                            @(Model.IsActive ? "فعال" : "غیرفعال")
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>تاریخ ثبت:</strong></td>
                                    <td>@Model.RegistrationDate</td>
                                </tr>
                                <tr>
                                    <td><strong>آخرین بروزرسانی:</strong></td>
                                    <td>@Model.LastModifiedDate</td>
                                </tr>
                                <tr>
                                    <td><strong>تعداد انتسابات:</strong></td>
                                    <td>
                                        <span class="badge badge-info">@Model.TotalAssignments</span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- انتسابات دپارتمان -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-building"></i>
                        انتسابات دپارتمان
                    </h3>
                    <div class="card-tools">
                        <a href="@Url.Action("AssignToDepartment", "DoctorDepartment", new { doctorId = Model.DoctorId })" 
                           class="btn btn-primary btn-sm">
                            <i class="fas fa-plus"></i>
                            انتساب جدید
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.DepartmentAssignments != null && Model.DepartmentAssignments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>دپارتمان</th>
                                        <th>نقش</th>
                                        <th>تاریخ انتساب</th>
                                        <th>وضعیت</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var assignment in Model.DepartmentAssignments)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@assignment.DepartmentName</strong>
                                                <br>
                                                <small class="text-muted">@assignment.DepartmentCode</small>
                                            </td>
                                            <td>
                                                <span class="badge badge-secondary">@assignment.Role</span>
                                            </td>
                                            <td>@assignment.AssignmentDate</td>
                                            <td>
                                                <span class="badge @(assignment.IsActive ? "badge-success" : "badge-danger")">
                                                    @(assignment.IsActive ? "فعال" : "غیرفعال")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Edit", "DoctorDepartment", new { id = assignment.Id })" 
                                                       class="btn btn-sm btn-warning" title="ویرایش">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" 
                                                            class="btn btn-sm @(assignment.IsActive ? "btn-danger" : "btn-success")"
                                                            onclick="toggleAssignmentStatus(@assignment.Id, @assignment.IsActive.ToString().ToLower())"
                                                            title="@(assignment.IsActive ? "غیرفعال کردن" : "فعال کردن")">
                                                        <i class="fas @(assignment.IsActive ? "fa-pause" : "fa-play")"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            هیچ انتساب دپارتمانی یافت نشد.
                            <a href="@Url.Action("AssignToDepartment", "DoctorDepartment", new { doctorId = Model.DoctorId })" 
                               class="btn btn-primary btn-sm ml-2">
                                <i class="fas fa-plus"></i>
                                انتساب جدید
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- انتسابات سرفصل خدماتی -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-list-alt"></i>
                        انتسابات سرفصل خدماتی
                    </h3>
                    <div class="card-tools">
                        <a href="@Url.Action("AssignToServiceCategory", "DoctorServiceCategory", new { doctorId = Model.DoctorId })" 
                           class="btn btn-primary btn-sm">
                            <i class="fas fa-plus"></i>
                            انتساب جدید
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.ServiceCategoryAssignments != null && Model.ServiceCategoryAssignments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>سرفصل خدماتی</th>
                                        <th>سطح دسترسی</th>
                                        <th>شماره گواهی</th>
                                        <th>تاریخ اعطا</th>
                                        <th>وضعیت</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var assignment in Model.ServiceCategoryAssignments)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@assignment.ServiceCategoryName</strong>
                                                <br>
                                                <small class="text-muted">@assignment.ServiceCategoryCode</small>
                                            </td>
                                            <td>
                                                <span class="badge badge-info">@assignment.AuthorizationLevel</span>
                                            </td>
                                            <td>@assignment.CertificateNumber</td>
                                            <td>@assignment.GrantedDate</td>
                                            <td>
                                                <span class="badge @(assignment.IsActive ? "badge-success" : "badge-danger")">
                                                    @(assignment.IsActive ? "فعال" : "غیرفعال")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Edit", "DoctorServiceCategory", new { id = assignment.Id})" 
                                                       class="btn btn-sm btn-warning" title="ویرایش">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" 
                                                            class="btn btn-sm @(assignment.IsActive ? "btn-danger" : "btn-success")"
                                                            onclick="toggleServiceAssignmentStatus(@assignment.Id, @assignment.IsActive.ToString().ToLower())"
                                                            title="@(assignment.IsActive ? "غیرفعال کردن" : "فعال کردن")">
                                                        <i class="fas @(assignment.IsActive ? "fa-pause" : "fa-play")"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            هیچ انتساب سرفصل خدماتی یافت نشد.
                            <a href="@Url.Action("AssignToServiceCategory", "DoctorServiceCategory", new { doctorId = Model.DoctorId })" 
                               class="btn btn-primary btn-sm ml-2">
                                <i class="fas fa-plus"></i>
                                انتساب جدید
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- تاریخچه تغییرات -->
            @if (Model.AssignmentHistory != null && Model.AssignmentHistory.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-history"></i>
                            تاریخچه تغییرات
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="timeline">
                            @foreach (var history in Model.AssignmentHistory)
                            {
                                <div class="time-label">
                                    <span class="bg-blue">@history.Date</span>
                                </div>
                                <div>
                                    <i class="fas @GetHistoryIcon(history.OperationType) bg-@GetHistoryColor(history.OperationType)"></i>
                                    <div class="timeline-item">
                                        <span class="time">
                                            <i class="fas fa-clock"></i> @history.Time
                                        </span>
                                        <h3 class="timeline-header">
                                            @history.Title
                                        </h3>
                                        <div class="timeline-body">
                                            @history.Description
                                        </div>
                                        <div class="timeline-footer">
                                            <small class="text-muted">
                                                توسط: @history.ModifiedBy
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- دکمه‌های عملیات -->
            <div class="card">
                <div class="card-body text-center">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-right"></i>
                        بازگشت به لیست
                    </a>
                    <a href="@Url.Action("Edit", new { id = Model.DoctorId })" class="btn btn-warning">
                        <i class="fas fa-edit"></i>
                        ویرایش انتسابات
                    </a>
                    <a href="@Url.Action("RemoveAssignments", "DoctorRemoval", new { id = Model.DoctorId })" 
                       class="btn btn-danger">
                        <i class="fas fa-trash"></i>
                        حذف انتسابات
                    </a>
                </div>
            </div>

        </div>
    </section>
</div>

@section Scripts {
    <script>
        function toggleAssignmentStatus(assignmentId, isActive) {
            var action = isActive ? 'غیرفعال' : 'فعال';
            var message = 'آیا از ' + action + ' کردن این انتساب اطمینان دارید؟';
            
            if (confirm(message)) {
                $.ajax({
                    url: '@Url.Action("ToggleAssignmentStatus", "DoctorDepartment")',
                    type: 'POST',
                    data: { id: assignmentId },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('خطا در تغییر وضعیت: ' + response.message);
                        }
                    },
                    error: function() {
                        alert('خطا در ارتباط با سرور');
                    }
                });
            }
        }

        function toggleServiceAssignmentStatus(assignmentId, isActive) {
            var action = isActive ? 'غیرفعال' : 'فعال';
            var message = 'آیا از ' + action + ' کردن این انتساب اطمینان دارید؟';
            
            if (confirm(message)) {
                $.ajax({
                    url: '@Url.Action("ToggleAssignmentStatus", "DoctorServiceCategory")',
                    type: 'POST',
                    data: { id: assignmentId },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('خطا در تغییر وضعیت: ' + response.message);
                        }
                    },
                    error: function() {
                        alert('خطا در ارتباط با سرور');
                    }
                });
            }
        }
    </script>
}

@functions {
    string GetHistoryIcon(string operationType)
    {
        return operationType switch
        {
            "Create" => "fa-plus",
            "Update" => "fa-edit",
            "Delete" => "fa-trash",
            "Activate" => "fa-play",
            "Deactivate" => "fa-pause",
            _ => "fa-info"
        };
    }

    string GetHistoryColor(string operationType)
    {
        return operationType switch
        {
            "Create" => "green",
            "Update" => "blue",
            "Delete" => "red",
            "Activate" => "green",
            "Deactivate" => "orange",
            _ => "gray"
        };
    }
}
