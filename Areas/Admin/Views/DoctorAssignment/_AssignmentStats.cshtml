@model ClinicApp.ViewModels.DoctorManagementVM.AssignmentStatsViewModel

<div class="row">
    <div class="col-lg-3 col-6">
        <!-- Total Assignments -->
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@Model.TotalAssignments</h3>
                <p>کل انتسابات</p>
            </div>
            <div class="icon">
                <i class="fas fa-link"></i>
            </div>
            <a href="#" class="small-box-footer">
                جزئیات بیشتر <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <!-- Active Assignments -->
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@Model.ActiveAssignments</h3>
                <p>انتسابات فعال</p>
            </div>
            <div class="icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <a href="#" class="small-box-footer">
                جزئیات بیشتر <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <!-- Assigned Doctors -->
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@Model.AssignedDoctors</h3>
                <p>پزشکان انتساب یافته</p>
            </div>
            <div class="icon">
                <i class="fas fa-user-md"></i>
            </div>
            <a href="#" class="small-box-footer">
                جزئیات بیشتر <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <!-- Completion Percentage -->
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@Model.CompletionPercentage%</h3>
                <p>درصد تکمیل</p>
            </div>
            <div class="icon">
                <i class="fas fa-chart-pie"></i>
            </div>
            <a href="#" class="small-box-footer">
                جزئیات بیشتر <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
</div>

<!-- Additional Stats Row -->
<div class="row mt-3">
    <div class="col-md-4">
        <div class="info-box">
            <span class="info-box-icon bg-info"><i class="fas fa-building"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">دپارتمان‌های فعال</span>
                <span class="info-box-number">@Model.ActiveDepartments</span>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="info-box">
            <span class="info-box-icon bg-success"><i class="fas fa-list-alt"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">سرفصل‌های خدماتی</span>
                <span class="info-box-number">@Model.ServiceCategories</span>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="info-box">
            <span class="info-box-icon bg-warning"><i class="fas fa-clock"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">آخرین بروزرسانی</span>
                <span class="info-box-number">@Model.LastUpdate.ToString("HH:mm")</span>
            </div>
        </div>
    </div>
</div>

<!-- Progress Bar for Completion -->
<div class="row mt-3">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-chart-line"></i>
                    پیشرفت انتسابات
                </h3>
            </div>
            <div class="card-body">
                <div class="progress">
                    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" 
                         role="progressbar" 
                         style="width: @Model.CompletionPercentage%" 
                         aria-valuenow="@Model.CompletionPercentage" 
                         aria-valuemin="0" 
                         aria-valuemax="100">
                        @Model.CompletionPercentage%
                    </div>
                </div>
                <small class="text-muted">
                    @Model.ActiveAssignments از @Model.TotalAssignments انتساب فعال است
                </small>
            </div>
        </div>
    </div>
</div>
