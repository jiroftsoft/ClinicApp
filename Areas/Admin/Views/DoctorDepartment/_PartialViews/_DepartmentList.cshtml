@model List<ClinicApp.ViewModels.DoctorManagementVM.DoctorDepartmentListItem>

<div class="department-card p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0">
            <i class="fas fa-list me-2"></i>
            لیست انتسابات دپارتمان
        </h5>
        <div class="loading-spinner">
            <i class="fas fa-spinner fa-spin"></i>
            در حال بارگذاری...
        </div>
    </div>
    
    <div class="table-responsive">
        <table id="assignmentsTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ردیف</th>
                    <th>نام پزشک</th>
                    <th>دپارتمان</th>
                    <th>نقش</th>
                    <th>تاریخ شروع</th>
                    <th>وضعیت</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int rowNumber = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@rowNumber</td>
                            <td>@item.DoctorName</td>
                            <td>@item.DepartmentName</td>
                            <td>@item.Role</td>
                            <td>
                                @if (item.StartDate.HasValue)
                                {
                                    @item.StartDate.Value.ToString("yyyy/MM/dd")
                                }
                                else
                                {
                                    <span class="text-muted">نامشخص</span>
                                }
                            </td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success status-badge">فعال</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary status-badge">غیرفعال</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Details", "DoctorDepartment", new { id = item.Id })" 
                                       class="btn btn-sm btn-outline-info" title="مشاهده">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", "DoctorDepartment", new { id = item.Id })" 
                                       class="btn btn-sm btn-outline-warning" title="ویرایش">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                            onclick="deleteAssignment(@item.Id)" title="حذف">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        rowNumber++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">
                            <i class="fas fa-inbox fa-2x mb-2"></i>
                            <br>
                            هیچ انتسابی یافت نشد
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .department-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }
    .status-badge {
        border-radius: 20px;
        padding: 5px 12px;
        font-size: 0.85rem;
    }
    .loading-spinner {
        display: none;
    }
    .btn-group .btn {
        margin-right: 2px;
    }
    .btn-group .btn:last-child {
        margin-right: 0;
    }
</style>
