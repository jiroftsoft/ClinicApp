@model ClinicApp.ViewModels.DoctorManagementVM.DepartmentStatisticsViewModel

<div class="row">
    <div class="col-md-3">
        <div class="metric-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3>@Model.TotalAssignments</h3>
                    <p>کل انتسابات</p>
                </div>
                <i class="fas fa-hospital fa-2x opacity-50"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="metric-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3>@Model.ActiveAssignments</h3>
                    <p>انتسابات فعال</p>
                </div>
                <i class="fas fa-check-circle fa-2x opacity-50"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="metric-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3>@Model.TotalDoctors</h3>
                    <p>پزشکان انتساب شده</p>
                </div>
                <i class="fas fa-user-md fa-2x opacity-50"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="metric-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3>@Model.TotalDepartments</h3>
                    <p>دپارتمان‌های فعال</p>
                </div>
                <i class="fas fa-building fa-2x opacity-50"></i>
            </div>
        </div>
    </div>
</div>

<style>
    .metric-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
        transition: transform 0.3s ease;
    }
    .metric-card:hover {
        transform: translateY(-5px);
    }
    .metric-card h3 {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 10px;
    }
    .metric-card p {
        opacity: 0.9;
        margin-bottom: 0;
    }
</style>
