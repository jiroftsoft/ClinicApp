@model ClinicApp.ViewModels.DoctorManagementVM.DoctorDepartmentViewModel
@{
    ViewBag.Title = "ویرایش انتساب دپارتمان";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link href="~/Content/plugins/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/select2/css/select2-bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <style>
        .edit-form-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }
        .form-section {
            border: 1px solid #e9ecef;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }
        .form-section h5 {
            color: #667eea;
            border-bottom: 2px solid #667eea;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
        .select2-container--bootstrap4 .select2-selection--single {
            height: 38px;
            border: 1px solid #ced4da;
        }
        .loading-spinner {
            display: none;
        }
        .help-text {
            font-size: 0.875rem;
            color: #6c757d;
            margin-top: 5px;
        }
        .readonly-field {
            background-color: #f8f9fa;
            cursor: not-allowed;
        }
    </style>
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-0 text-primary">
                        <i class="fas fa-edit me-2"></i>
                        ویرایش انتساب دپارتمان
                    </h2>
                    <p class="text-muted mb-0">ویرایش اطلاعات انتساب پزشک به دپارتمان</p>
                </div>
                <div>
                    <a href="@Url.Action("Details", "DoctorDepartment", new { id = Model.Id })" class="btn btn-info me-2">
                        <i class="fas fa-eye me-2"></i>
                        مشاهده جزئیات
                    </a>
                    <a href="@Url.Action("Index", "DoctorDepartment")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-right me-2"></i>
                        بازگشت به لیست
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Form -->
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="edit-form-card p-4">
                @using (Html.BeginForm("Edit", "DoctorDepartment", FormMethod.Post, new { id = "editForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <!-- Doctor Information (Read-only) -->
                    <div class="form-section">
                        <h5>
                            <i class="fas fa-user-md me-2"></i>
                            اطلاعات پزشک
                        </h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold">نام پزشک</label>
                                    <input type="text" class="form-control readonly-field" value="@Model.DoctorName" readonly>
                                    <div class="help-text">نام پزشک قابل تغییر نیست</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold">شناسه پزشک</label>
                                    <input type="text" class="form-control readonly-field" value="@Model.DoctorId" readonly>
                                    <div class="help-text">شناسه پزشک قابل تغییر نیست</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Department Information (Read-only) -->
                    <div class="form-section">
                        <h5>
                            <i class="fas fa-hospital me-2"></i>
                            اطلاعات دپارتمان
                        </h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold">نام دپارتمان</label>
                                    <input type="text" class="form-control readonly-field" value="@Model.DepartmentName" readonly>
                                    <div class="help-text">نام دپارتمان قابل تغییر نیست</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold">نام کلینیک</label>
                                    <input type="text" class="form-control readonly-field" value="@Model.ClinicName" readonly>
                                    <div class="help-text">نام کلینیک قابل تغییر نیست</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Editable Assignment Details -->
                    <div class="form-section">
                        <h5>
                            <i class="fas fa-cog me-2"></i>
                            جزئیات انتساب (قابل ویرایش)
                        </h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Role, "نقش در دپارتمان", new { @class = "form-label fw-bold" })
                                    <select id="Role" name="Role" class="form-control select2" required>
                                        <option value="">انتخاب نقش...</option>
                                        <option value="رئیس دپارتمان" @(Model.Role == "رئیس دپارتمان" ? "selected" : "")>رئیس دپارتمان</option>
                                        <option value="پزشک معاون" @(Model.Role == "پزشک معاون" ? "selected" : "")>پزشک معاون</option>
                                        <option value="پزشک عادی" @(Model.Role == "پزشک عادی" ? "selected" : "")>پزشک عادی</option>
                                        <option value="مشاور" @(Model.Role == "مشاور" ? "selected" : "")>مشاور</option>
                                        <option value="پزشک متخصص" @(Model.Role == "پزشک متخصص" ? "selected" : "")>پزشک متخصص</option>
                                    </select>
                                    @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
                                    <div class="help-text">نقش پزشک در دپارتمان را مشخص کنید</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.IsActive, "وضعیت", new { @class = "form-label fw-bold" })
                                    <div class="form-check">
                                        @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" })
                                        <label class="form-check-label" for="@Html.IdFor(m => m.IsActive)">
                                            فعال
                                        </label>
                                    </div>
                                    @Html.ValidationMessageFor(m => m.IsActive, "", new { @class = "text-danger" })
                                    <div class="help-text">وضعیت فعال بودن انتساب</div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.StartDateShamsi, "تاریخ شروع", new { @class = "form-label fw-bold" })
                                    @Html.TextBoxFor(m => m.StartDateShamsi, new { @class = "form-control persian-date", placeholder = "مثال: 1402/01/01", autocomplete = "off" })
                                    @Html.ValidationMessageFor(m => m.StartDateShamsi, "", new { @class = "text-danger" })
                                    <div class="help-text">تاریخ شروع فعالیت در دپارتمان</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.EndDateShamsi, "تاریخ پایان (اختیاری)", new { @class = "form-label fw-bold" })
                                    @Html.TextBoxFor(m => m.EndDateShamsi, new { @class = "form-control persian-date", placeholder = "مثال: 1402/12/29", autocomplete = "off" })
                                    @Html.ValidationMessageFor(m => m.EndDateShamsi, "", new { @class = "text-danger" })
                                    <div class="help-text">تاریخ پایان فعالیت (در صورت موقت بودن)</div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Notes, "یادداشت‌ها", new { @class = "form-label fw-bold" })
                                    @Html.TextAreaFor(m => m.Notes, new { @class = "form-control", rows = "3", placeholder = "یادداشت‌های مربوط به انتساب..." })
                                    @Html.ValidationMessageFor(m => m.Notes, "", new { @class = "text-danger" })
                                    <div class="help-text">توضیحات اضافی در مورد انتساب</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Validation Summary -->
                    <div id="validationSummary" class="alert alert-danger" style="display: none;">
                        <h6>خطاهای اعتبارسنجی:</h6>
                        <ul id="validationErrors"></ul>
                    </div>

                    <!-- Action Buttons -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-warning me-3" id="submitBtn">
                                    <i class="fas fa-save me-2"></i>
                                    ذخیره تغییرات
                                </button>
                                <button type="button" class="btn btn-outline-secondary me-3" onclick="resetForm()">
                                    <i class="fas fa-undo me-2"></i>
                                    بازگردانی
                                </button>
                                <a href="@Url.Action("Details", "DoctorDepartment", new { id = Model.Id })" class="btn btn-outline-danger">
                                    <i class="fas fa-times me-2"></i>
                                    انصراف
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Content/plugins/select2/js/select2.full.min.js"></script>
    <script src="~/Content/plugins/sweetalert2/sweetalert2@11.js"></script>
    
    <script>
        // محافظت jQuery - اطمینان از بارگذاری کامل jQuery
        (function() {
            function ensureJQuery(callback) {
                if (typeof jQuery !== 'undefined' && typeof $.fn !== 'undefined') {
                    callback();
                } else {
                    setTimeout(function() {
                        ensureJQuery(callback);
                    }, 50);
                }
            }

            ensureJQuery(function() {
                $(document).ready(function () {
                    initializeSelect2();
                    initializePersianDatePickers();
                    setupEventHandlers();
                });
            });
        })();

        function initializeSelect2() {
            $('.select2').select2({
                theme: 'bootstrap4',
                width: '100%',
                placeholder: 'انتخاب کنید...',
                allowClear: true
            });
        }

        function initializePersianDatePickers() {
            $('.persian-date').persianDatepicker({
                format: 'YYYY/MM/DD',
                initialValue: false,
                autoClose: true,
                onSelect: function(unix) {
                    var date = new Date(unix);
                    var persianDate = date.getFullYear() + '/' + String(date.getMonth() + 1).padStart(2, '0') + '/' + String(date.getDate()).padStart(2, '0');
                    $(this.element).val(persianDate);
                }
            });
        }

        function setupEventHandlers() {
            // Form submission
            $('#editForm').on('submit', function(e) {
                e.preventDefault();
                submitForm();
            });
        }

        function submitForm() {
            // Clear previous validation errors
            $('#validationSummary').hide();
            $('#validationErrors').empty();

            // Show loading
            $('#submitBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>در حال ذخیره...');

            // Get form data
            const formData = new FormData($('#editForm')[0]);

            $.ajax({
                url: '@Url.Action("Edit", "DoctorDepartment")',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    if (response.success) {
                        showSuccess('ویرایش موفق', 'اطلاعات انتساب با موفقیت بروزرسانی شد');
                        setTimeout(function() {
                            window.location.href = '@Url.Action("Details", "DoctorDepartment", new { id = Model.Id })';
                        }, 1500);
                    } else {
                        showValidationErrors(response.errors);
                    }
                },
                error: function(xhr, status, error) {
                    showError('خطا در ذخیره', 'لطفاً دوباره تلاش کنید');
                },
                complete: function() {
                    $('#submitBtn').prop('disabled', false).html('<i class="fas fa-save me-2"></i>ذخیره تغییرات');
                }
            });
        }

        function showValidationErrors(errors) {
            if (errors && errors.length > 0) {
                const errorList = $('#validationErrors');
                errors.forEach(function(error) {
                    errorList.append(`<li>${error}</li>`);
                });
                $('#validationSummary').show();
                $('html, body').animate({
                    scrollTop: $('#validationSummary').offset().top - 100
                }, 500);
            }
        }

        function resetForm() {
            Swal.fire({
                title: 'آیا مطمئن هستید؟',
                text: 'تمام تغییرات پاک خواهد شد',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'بله، بازگردانی کن',
                cancelButtonText: 'انصراف'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Reload the page to reset all fields
                    window.location.reload();
                }
            });
        }

        function showSuccess(title, message) {
            Swal.fire({
                title: title,
                text: message,
                icon: 'success',
                confirmButtonText: 'باشه'
            });
        }

        function showError(title, message) {
            Swal.fire({
                title: title,
                text: message,
                icon: 'error',
                confirmButtonText: 'باشه'
            });
        }

        // Keyboard shortcuts
        $(document).keydown(function (e) {
            // Ctrl+S for save
            if (e.ctrlKey && e.keyCode === 83) {
                e.preventDefault();
                submitForm();
            }
            
            // Ctrl+R for reset
            if (e.ctrlKey && e.keyCode === 82) {
                e.preventDefault();
                resetForm();
            }
            
            // Ctrl+B for back
            if (e.ctrlKey && e.keyCode === 66) {
                e.preventDefault();
                window.location.href = '@Url.Action("Details", "DoctorDepartment", new { id = Model.Id })';
            }
        });
    </script>
}
