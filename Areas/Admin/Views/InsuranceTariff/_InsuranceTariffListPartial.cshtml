@model ClinicApp.Interfaces.PagedResult<ClinicApp.ViewModels.Insurance.InsuranceTariff.InsuranceTariffIndexViewModel>

@if (Model != null && Model.Items != null && Model.Items.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>خدمت</th>
                    <th>طرح بیمه</th>
                    <th>ارائه‌دهنده</th>
                    <th>قیمت تعرفه</th>
                    <th>سهم بیمار</th>
                    <th>سهم بیمه</th>
                    <th>تاریخ ایجاد</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tariff in Model.Items)
                {
                    <tr>
                        <td>
                            <div>
                                <strong>@tariff.ServiceTitle</strong>
                                @if (!string.IsNullOrEmpty(tariff.ServiceCode))
                                {
                                    <br><small class="text-muted">کد: @tariff.ServiceCode</small>
                                }
                            </div>
                        </td>
                        <td>
                            <div>
                                <strong>@tariff.InsurancePlanName</strong>
                            </div>
                        </td>
                        <td>
                            <span class="badge badge-info">@tariff.InsuranceProviderName</span>
                        </td>
                        <td>
                            @if (tariff.TariffPrice.HasValue)
                            {
                                <span class="text-success font-weight-bold">
                                    @tariff.TariffPrice.Value.ToString("N0") تومان
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (tariff.PatientShare.HasValue)
                            {
                                <span class="text-warning font-weight-bold">
                                    @tariff.PatientShare.Value.ToString("F1")%
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (tariff.InsurerShare.HasValue)
                            {
                                <span class="text-info font-weight-bold">
                                    @tariff.InsurerShare.Value.ToString("F1")%
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            <div>
                                @tariff.CreatedAtShamsi
                                @if (!string.IsNullOrEmpty(tariff.CreatedByUserName))
                                {
                                    <br><small class="text-muted">@tariff.CreatedByUserName</small>
                                }
                            </div>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="@Url.Action("Details", new { id = tariff.InsuranceTariffId })" 
                                   class="btn btn-sm btn-info" title="جزئیات">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("Edit", new { id = tariff.InsuranceTariffId })" 
                                   class="btn btn-sm btn-warning" title="ویرایش">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = tariff.InsuranceTariffId })" 
                                   class="btn btn-sm btn-danger" title="حذف">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    if (Model.TotalItems > Model.PageSize)
    {
        <nav aria-label="صفحه‌بندی تعرفه‌های بیمه">
            <ul class="pagination justify-content-center">
                @{
                    var totalPages = (int)Math.Ceiling((double)Model.TotalItems / Model.PageSize);
                    var currentPage = Model.PageNumber;
                }

                <!-- Previous Page -->
                @if (currentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="#" data-page="@(currentPage - 1)">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                }

                <!-- Page Numbers -->
                @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="#" data-page="@i">@i</a>
                    </li>
                }

                <!-- Next Page -->
                @if (currentPage < totalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="#" data-page="@(currentPage + 1)">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>

        <div class="text-center text-muted">
            نمایش @((currentPage - 1) * Model.PageSize + 1) تا @Math.Min(currentPage * Model.PageSize, Model.TotalItems) 
            از @Model.TotalItems تعرفه بیمه
        </div>
    }
}
else
{
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="fas fa-money-bill-wave fa-3x text-muted"></i>
        </div>
        <h4 class="text-muted">تعرفه بیمه‌ای یافت نشد</h4>
        <p class="text-muted">هنوز هیچ تعرفه بیمه‌ای تعریف نشده است.</p>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus"></i>
            ایجاد اولین تعرفه بیمه
        </a>
    </div>
}

