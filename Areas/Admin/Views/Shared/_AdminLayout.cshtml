    <!-- اسکریپت‌های پزشکی -->
    <script>
        (function () {
            const html = document.documentElement;
            const themeKey = 'shafa-clinic-theme';
            const sidebarKey = 'shafa-clinic-sidebar-collapsed';

            function applyTheme(t) {
                html.setAttribute('data-bs-theme', t);
                localStorage.setItem(themeKey, t);

                // برای سیستم‌های پزشکی، تم تاریک را برای کاهش فشار چشم در شب توصیه می‌کنیم
                if (t === 'dark') {
                    document.body.classList.add('dark-mode');
                } else {
                    document.body.classList.remove('dark-mode');
                }
            }

            function currentTheme() {
                return localStorage.getItem(themeKey) || 'light';
            }

            function toggleTheme() {
                const t = currentTheme() === 'light' ? 'dark' : 'light';
                applyTheme(t);

                // به روزرسانی آیکون تم
                const themeBtn = document.getElementById('btnTheme');
                if (themeBtn) {
                    const icon = themeBtn.querySelector('i');
                    if (icon) {
                        icon.className = t === 'dark' ? 'bi bi-brightness-high' : 'bi bi-moon-stars';
                    }
                }
            }

            function applySidebar(collapsed) {
                document.body.classList.toggle('sidebar-collapsed', collapsed);
                localStorage.setItem(sidebarKey, collapsed ? '1' : '0');
            }

            // راه‌اندازی اولیه
            document.addEventListener('DOMContentLoaded', function () {
                applyTheme(currentTheme());
                applySidebar(localStorage.getItem(sidebarKey) === '1');

                // به روزرسانی آیکون تم بر اساس حالت فعلی
                const themeBtn = document.getElementById('btnTheme');
                if (themeBtn) {
                    const icon = themeBtn.querySelector('i');
                    if (icon) {
                        icon.className = currentTheme() === 'dark' ? 'bi bi-brightness-high' : 'bi bi-moon-stars';
                    }
                }
            });

            // افزودن event listenerها
            document.getElementById('btnTheme')?.addEventListener('click', toggleTheme);

            document.getElementById('btnSidebar')?.addEventListener('click', function () {
                const now = !document.body.classList.contains('sidebar-collapsed');
                applySidebar(now);
            });

            // Lazy loading برای تصاویر
            if ('loading' in HTMLImageElement.prototype) {
                document.querySelectorAll('img.lazy').forEach(img => {
                    img.src = img.dataset.src;
                });
            } else {
                // برای مرورگرهای قدیمی
                const script = document.createElement('script');
                script.src = 'https://cdn.jsdelivr.net/npm/vanilla-lazyload@17.8.3/dist/lazyload.min.js';
                script.onload = function () {
                    new LazyLoad({
                        elements_selector: '.lazy'
                    });
                };
                document.body.appendChild(script);
            }

            // نمایش اعلان اضطراری به صورت هوشمند
            function showEmergencyBanner() {
                const now = new Date();
                const hour = now.getHours();

                // نمایش بنر اضطراری در ساعات خارج از ساعات کاری
                if (hour < 8 || hour >= 20) {
                    const banner = document.getElementById('emergencyBanner');
                    if (banner) {
                        banner.style.display = 'block';
                    }
                }
            }

            // فراخوانی هر 12 ساعت
            showEmergencyBanner();
            setInterval(showEmergencyBanner, 12 * 60 * 60 * 1000);
        })();
    </script>

