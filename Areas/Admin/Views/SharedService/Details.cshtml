@model ClinicApp.ViewModels.SharedServiceDetailsViewModel
@{
    ViewBag.Title = "جزئیات خدمت مشترک";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-eye"></i>
                        جزئیات خدمت مشترک
                    </h4>
                    <p class="mb-0">مشاهده اطلاعات کامل خدمت مشترک</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Information Section -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle"></i>
                        اطلاعات اصلی
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Service Information -->
                        <div class="col-md-6">
                            <div class="info-box bg-light">
                                <span class="info-box-icon bg-primary">
                                    <i class="fas fa-cogs"></i>
                                </span>
                                <div class="info-box-content">
                                    <span class="info-box-text">اطلاعات خدمت</span>
                                    <span class="info-box-number">@Model.ServiceTitle</span>
                                    <div class="progress">
                                        <div class="progress-bar bg-primary" style="width: 100%"></div>
                                    </div>
                                    <span class="progress-description">
                                        کد: @Model.ServiceCode
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Department Information -->
                        <div class="col-md-6">
                            <div class="info-box bg-light">
                                <span class="info-box-icon bg-success">
                                    <i class="fas fa-building"></i>
                                </span>
                                <div class="info-box-content">
                                    <span class="info-box-text">اطلاعات دپارتمان</span>
                                    <span class="info-box-number">@Model.DepartmentName</span>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" style="width: 100%"></div>
                                    </div>
                                    <span class="progress-description">
                                        شناسه: @Model.DepartmentId
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <!-- Status Information -->
                        <div class="col-md-6">
                            <div class="info-box bg-light">
                                <span class="info-box-icon @(Model.IsActive ? "bg-success" : "bg-warning")">
                                    <i class="fas @(Model.IsActive ? "fa-check-circle" : "fa-pause-circle")"></i>
                                </span>
                                <div class="info-box-content">
                                    <span class="info-box-text">وضعیت فعال</span>
                                    <span class="info-box-number">@Model.IsActiveText</span>
                                    <div class="progress">
                                        <div class="progress-bar @(Model.IsActive ? "bg-success" : "bg-warning")" style="width: 100%"></div>
                                    </div>
                                    <span class="progress-description">
                                        @(Model.IsActive ? "خدمت در دسترس است" : "خدمت غیرفعال است")
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Price Information -->
                        <div class="col-md-6">
                            <div class="info-box bg-light">
                                <span class="info-box-icon bg-info">
                                    <i class="fas fa-money-bill-wave"></i>
                                </span>
                                <div class="info-box-content">
                                    <span class="info-box-text">قیمت خدمت</span>
                                    <span class="info-box-number">@Model.ServicePriceFormatted</span>
                                    <div class="progress">
                                        <div class="progress-bar bg-info" style="width: 100%"></div>
                                    </div>
                                    <span class="progress-description">
                                        قیمت پایه خدمت
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Information Section -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-list-alt"></i>
                        جزئیات کامل
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <td><strong>شناسه خدمت مشترک:</strong></td>
                                        <td>@Model.SharedServiceId</td>
                                    </tr>
                                    <tr>
                                        <td><strong>شناسه خدمت:</strong></td>
                                        <td>@Model.ServiceId</td>
                                    </tr>
                                    <tr>
                                        <td><strong>عنوان خدمت:</strong></td>
                                        <td>@Model.ServiceTitle</td>
                                    </tr>
                                    <tr>
                                        <td><strong>کد خدمت:</strong></td>
                                        <td>@Model.ServiceCode</td>
                                    </tr>
                                    <tr>
                                        <td><strong>قیمت خدمت:</strong></td>
                                        <td>@Model.ServicePriceFormatted</td>
                                    </tr>
                                    <tr>
                                        <td><strong>توضیحات خدمت:</strong></td>
                                        <td>@(string.IsNullOrEmpty(Model.ServiceDescription) ? "توضیحی ارائه نشده" : Model.ServiceDescription)</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <td><strong>شناسه دپارتمان:</strong></td>
                                        <td>@Model.DepartmentId</td>
                                    </tr>
                                    <tr>
                                        <td><strong>نام دپارتمان:</strong></td>
                                        <td>@Model.DepartmentName</td>
                                    </tr>
                                    <tr>
                                        <td><strong>توضیحات دپارتمان:</strong></td>
                                        <td>@(string.IsNullOrEmpty(Model.DepartmentDescription) ? "توضیحی ارائه نشده" : Model.DepartmentDescription)</td>
                                    </tr>
                                    <tr>
                                        <td><strong>وضعیت فعال:</strong></td>
                                        <td>
                                            <span class="badge @(Model.IsActive ? "badge-success" : "badge-warning")">
                                                @Model.IsActiveText
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>توضیحات خاص دپارتمان:</strong></td>
                                        <td>@(string.IsNullOrEmpty(Model.DepartmentSpecificNotes) ? "توضیحی ارائه نشده" : Model.DepartmentSpecificNotes)</td>
                                    </tr>
                                    <tr>
                                        <td><strong>ضریب فنی Override:</strong></td>
                                        <td>@(Model.OverrideTechnicalFactor?.ToString("N2") ?? "استفاده از مقدار پیش‌فرض")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>ضریب حرفه‌ای Override:</strong></td>
                                        <td>@(Model.OverrideProfessionalFactor?.ToString("N2") ?? "استفاده از مقدار پیش‌فرض")</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Audit Information Section -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-history"></i>
                        اطلاعات ردیابی
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <h6><i class="fas fa-plus-circle text-success"></i> اطلاعات ایجاد:</h6>
                            <ul class="list-unstyled">
                                <li><strong>تاریخ ایجاد:</strong> @Model.CreatedAtShamsi</li>
                                <li><strong>ایجادکننده:</strong> @Model.CreatedByUserName</li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <h6><i class="fas fa-edit text-warning"></i> اطلاعات آخرین ویرایش:</h6>
                            <ul class="list-unstyled">
                                @if (Model.UpdatedAt.HasValue)
                                {
                                    <li><strong>تاریخ ویرایش:</strong> @Model.UpdatedAtShamsi</li>
                                    <li><strong>ویرایش‌کننده:</strong> @Model.UpdatedByUserName</li>
                                }
                                else
                                {
                                    <li><span class="text-muted">هنوز ویرایش نشده است</span></li>
                                }
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <h6><i class="fas fa-trash text-danger"></i> اطلاعات حذف:</h6>
                            <ul class="list-unstyled">
                                @if (Model.IsDeleted)
                                {
                                    <li><strong>وضعیت:</strong> <span class="badge badge-danger">حذف شده</span></li>
                                    <li><strong>تاریخ حذف:</strong> @Model.DeletedAtShamsi</li>
                                    <li><strong>حذف‌کننده:</strong> @Model.DeletedByUserName</li>
                                }
                                else
                                {
                                    <li><span class="text-muted">حذف نشده است</span></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions Section -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-tools"></i>
                        عملیات
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <a href="@Url.Action("Edit", new { id = Model.SharedServiceId })" class="btn btn-warning">
                                <i class="fas fa-edit"></i>
                                ویرایش خدمت مشترک
                            </a>
                            <button type="button" class="btn @(Model.IsActive ? "btn-secondary" : "btn-success") toggle-active" 
                                    data-id="@Model.SharedServiceId" data-active="@Model.IsActive.ToString().ToLower()" 
                                    title="@(Model.IsActive ? "غیرفعال کردن" : "فعال کردن")">
                                <i class="fas @(Model.IsActive ? "fa-pause" : "fa-play")"></i>
                                @(Model.IsActive ? "غیرفعال کردن" : "فعال کردن")
                            </button>
                        </div>
                        <div>
                            <a href="@Url.Action("Delete", new { id = Model.SharedServiceId })" class="btn btn-danger">
                                <i class="fas fa-trash"></i>
                                حذف خدمت مشترک
                            </a>
                            <a href="@Url.Action("Index")" class="btn btn-light">
                                <i class="fas fa-arrow-right"></i>
                                بازگشت به لیست
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Related Information Section -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-link"></i>
                        اطلاعات مرتبط
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6><i class="fas fa-cogs text-primary"></i> اطلاعات خدمت:</h6>
                            <ul class="list-unstyled">
                                <li><strong>شناسه:</strong> @Model.ServiceId</li>
                                <li><strong>عنوان:</strong> @Model.ServiceTitle</li>
                                <li><strong>کد:</strong> @Model.ServiceCode</li>
                                <li><strong>قیمت:</strong> @Model.ServicePriceFormatted</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="fas fa-building text-success"></i> اطلاعات دپارتمان:</h6>
                            <ul class="list-unstyled">
                                <li><strong>شناسه:</strong> @Model.DepartmentId</li>
                                <li><strong>نام:</strong> @Model.DepartmentName</li>
                                <li><strong>توضیحات:</strong> @(string.IsNullOrEmpty(Model.DepartmentDescription) ? "توضیحی ارائه نشده" : Model.DepartmentDescription)</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // مدیریت تغییر وضعیت فعال/غیرفعال
            $('.toggle-active').click(function() {
                var id = $(this).data('id');
                var isActive = $(this).data('active') === 'true';
                var newStatus = !isActive;

                if (confirm('آیا از تغییر وضعیت این خدمت مشترک اطمینان دارید؟')) {
                    $.ajax({
                        url: '@Url.Action("ToggleActive")',
                        type: 'POST',
                        data: { id: id, isActive: newStatus },
                        success: function(response) {
                            if (response.success) {
                                location.reload();
                            } else {
                                alert('خطا: ' + response.message);
                            }
                        },
                        error: function() {
                            alert('خطا در ارتباط با سرور');
                        }
                    });
                }
            });
        });
    </script>
}
