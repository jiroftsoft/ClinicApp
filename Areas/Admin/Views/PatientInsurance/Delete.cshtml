@model ClinicApp.ViewModels.Insurance.PatientInsurance.PatientInsuranceDetailsViewModel
@{
    ViewBag.Title = "حذف بیمه بیمار";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <style>
        .delete-confirmation-card {
            background: #ffffff;
            border-radius: 10px;
            padding: 2rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-left: 4px solid #dc3545;
        }
        .warning-icon {
            color: #dc3545;
            font-size: 3rem;
            margin-bottom: 1rem;
        }
        .patient-info {
            background-color: #f8f9fa;
            padding: 1.5rem;
            border-radius: 0.5rem;
            border: 1px solid #dee2e6;
            margin: 1rem 0;
        }
        .patient-name {
            font-size: 1.3rem;
            font-weight: 600;
            color: #495057;
        }
        .patient-code {
            font-family: 'Courier New', monospace;
            background-color: #e9ecef;
            padding: 0.5rem 1rem;
            border-radius: 0.3rem;
            font-size: 1rem;
            border: 1px solid #ced4da;
        }
        .insurance-info {
            background-color: #e8f5e8;
            border: 1px solid #c3e6c3;
            padding: 1rem;
            border-radius: 0.5rem;
            margin: 1rem 0;
        }
        .plan-name {
            font-size: 1.2rem;
            font-weight: 600;
            color: #495057;
        }
        .provider-badge {
            background-color: #e3f2fd;
            color: #1976d2;
            padding: 0.3rem 0.8rem;
            border-radius: 0.3rem;
            font-size: 0.9rem;
            font-weight: 500;
        }
        .policy-info {
            background-color: #fff3cd;
            border: 1px solid #ffeaa7;
            padding: 0.8rem;
            border-radius: 0.5rem;
            margin: 1rem 0;
        }
        .policy-number {
            font-family: 'Courier New', monospace;
            font-weight: 600;
            color: #856404;
        }
        .coverage-info {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            padding: 1rem;
            border-radius: 0.5rem;
            margin: 1rem 0;
        }
        .coverage-percent {
            font-size: 1.5rem;
            font-weight: 700;
            color: #28a745;
        }
        .deductible-amount {
            font-size: 1.2rem;
            font-weight: 600;
            color: #dc3545;
        }
        .primary-badge {
            background-color: #28a745;
            color: white;
            font-size: 0.9rem;
            padding: 0.3rem 0.6rem;
            border-radius: 0.3rem;
        }
        .supplementary-badge {
            background-color: #17a2b8;
            color: white;
            font-size: 0.9rem;
            padding: 0.3rem 0.6rem;
            border-radius: 0.3rem;
        }
        .btn-delete {
            background-color: #dc3545;
            border-color: #dc3545;
            font-weight: 600;
        }
        .btn-delete:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }
        .btn-cancel {
            background-color: #6c757d;
            border-color: #6c757d;
            font-weight: 600;
        }
        .btn-cancel:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
        .impact-warning {
            background-color: #fff3cd;
            border: 1px solid #ffeaa7;
            border-radius: 0.5rem;
            padding: 1rem;
            margin: 1rem 0;
        }
        .impact-warning .warning-text {
            color: #856404;
            font-weight: 500;
        }
        .appointment-warning {
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            border-radius: 0.5rem;
            padding: 1rem;
            margin: 1rem 0;
        }
        .appointment-warning .warning-text {
            color: #721c24;
            font-weight: 500;
        }
    </style>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>حذف بیمه بیمار</h2>
                <a href="@Url.Action("Index", "PatientInsurance")" class="btn btn-secondary">
                    <i class="fas fa-arrow-right"></i> بازگشت به لیست
                </a>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="delete-confirmation-card">
                        <div class="text-center">
                            <i class="fas fa-exclamation-triangle warning-icon"></i>
                            <h3 class="text-danger mb-3">آیا از حذف این بیمه بیمار اطمینان دارید؟</h3>
                        </div>

                        <div class="patient-info">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">نام بیمار:</label>
                                        <div class="patient-name">@Model.PatientName</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">کد بیمار:</label>
                                        <div class="patient-code">@Model.PatientCode</div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">نوع بیمه:</label>
                                <div>
                                    @if (Model.IsPrimary)
                                    {
                                        <span class="primary-badge">بیمه اصلی</span>
                                    }
                                    else
                                    {
                                        <span class="supplementary-badge">بیمه تکمیلی</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="insurance-info">
                            <div class="plan-name">@Model.InsurancePlanName</div>
                            <div class="provider-badge">@Model.InsuranceProviderName</div>
                        </div>

                        <div class="policy-info">
                            <div class="validity-label">شماره بیمه‌نامه:</div>
                            <div class="policy-number">@Model.PolicyNumber</div>
                        </div>

                        <div class="coverage-info">
                            <div class="row text-center">
                                <div class="col-md-6">
                                    <div class="coverage-percent">@Model.CoveragePercent%</div>
                                    <small class="text-muted">پوشش بیمه</small>
                                </div>
                                <div class="col-md-6">
                                    <div class="deductible-amount">@Model.Deductible.ToString("N0") تومان</div>
                                    <small class="text-muted">فرانشیز</small>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">دوره اعتبار:</label>
                            <div>
                                از @Model.StartDateShamsi تا @Model.EndDateShamsi
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">وضعیت:</label>
                            <div>
                                @if (Model.IsActive)
                                {
                                    <span class="badge badge-success">
                                        <i class="fas fa-check-circle"></i> فعال
                                    </span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">
                                        <i class="fas fa-times-circle"></i> غیرفعال
                                    </span>
                                }
                            </div>
                        </div>

                        <div class="appointment-warning">
                            <div class="warning-text">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>هشدار:</strong> حذف این بیمه ممکن است بر قرار ملاقات‌های موجود بیمار تأثیر بگذارد. 
                                لطفاً قبل از حذف، قرار ملاقات‌های مرتبط را بررسی کنید.
                            </div>
                        </div>

                        <div class="impact-warning">
                            <div class="warning-text">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>توجه:</strong> حذف این بیمه بیمار ممکن است بر محاسبات پوشش و پرداخت‌ها تأثیر بگذارد. 
                                این عمل قابل بازگشت نیست.
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <form method="post" action="@Url.Action("Delete", "PatientInsurance", new { id = Model.PatientInsuranceId })" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-delete btn-lg me-3" onclick="return confirm('آیا مطمئن هستید که می‌خواهید این بیمه بیمار را حذف کنید؟ این عمل قابل بازگشت نیست و ممکن است بر قرار ملاقات‌های موجود تأثیر بگذارد.')">
                                    <i class="fas fa-trash-alt"></i> حذف بیمه بیمار
                                </button>
                            </form>
                            <a href="@Url.Action("Index", "PatientInsurance")" class="btn btn-cancel btn-lg">
                                <i class="fas fa-times"></i> انصراف
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
