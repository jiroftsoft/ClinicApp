@model ClinicApp.ViewModels.Insurance.PatientInsurance.PatientInsuranceIndexItemViewModel

<div class="patient-insurance-card" data-patient-insurance-id="@Model.PatientInsuranceId">
    <div class="patient-header">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h5 class="patient-name">@Model.PatientFullName</h5>
                <span class="patient-code">کد بیمار: @Model.PatientCode</span>
            </div>
            <div class="insurance-status">
                @if (Model.IsPrimary)
                {
                    <span class="badge bg-primary">بیمه اصلی</span>
                }
                else
                {
                    <span class="badge bg-secondary">بیمه تکمیلی</span>
                }
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">فعال</span>
                }
                else
                {
                    <span class="badge bg-danger">غیرفعال</span>
                }
            </div>
        </div>
    </div>

    <div class="insurance-info">
        <div class="row">
            <div class="col-md-6">
                <div class="plan-name">@Model.InsurancePlanName</div>
                <div class="provider-badge">@Model.InsuranceProviderName</div>
            </div>
            <div class="col-md-6">
                <div class="policy-info">
                    <small class="text-muted">شماره بیمه:</small>
                    <div class="policy-number">@Model.PolicyNumber</div>
                </div>
            </div>
        </div>
        
        <div class="row mt-3">
            <div class="col-md-6">
                <small class="text-muted">تاریخ شروع:</small>
                <div>@Model.StartDate.ToString("yyyy/MM/dd")</div>
            </div>
            <div class="col-md-6">
                <small class="text-muted">تاریخ پایان:</small>
                <div>@(Model.EndDate?.ToString("yyyy/MM/dd") ?? "نامحدود")</div>
            </div>
        </div>
    </div>

    <div class="card-actions mt-3">
        <div class="btn-group" role="group">
            <a href="@Url.Action("Details", "PatientInsurance", new { id = Model.PatientInsuranceId })" 
               class="btn btn-outline-info btn-sm">
                <i class="fas fa-eye"></i> جزئیات
            </a>
            <a href="@Url.Action("Edit", "PatientInsurance", new { id = Model.PatientInsuranceId })" 
               class="btn btn-outline-primary btn-sm">
                <i class="fas fa-edit"></i> ویرایش
            </a>
            @if (!Model.IsPrimary)
            {
                <button type="button" class="btn btn-outline-success btn-sm set-primary-btn" 
                        data-patient-insurance-id="@Model.PatientInsuranceId"
                        data-patient-name="@Model.PatientFullName">
                    <i class="fas fa-star"></i> بیمه اصلی
                </button>
            }
            <a href="@Url.Action("Delete", "PatientInsurance", new { id = Model.PatientInsuranceId })" 
               class="btn btn-outline-danger btn-sm"
               onclick="return confirm('آیا مطمئن هستید که می‌خواهید این بیمه بیمار را حذف کنید؟')">
                <i class="fas fa-trash"></i> حذف
            </a>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    $('.set-primary-btn').click(function() {
        var patientInsuranceId = $(this).data('patient-insurance-id');
        var patientName = $(this).data('patient-name');
        
        if (confirm('آیا مطمئن هستید که می‌خواهید این بیمه را به عنوان بیمه اصلی تنظیم کنید؟')) {
            $.ajax({
                url: '@Url.Action("SetPrimaryInsurance", "PatientInsurance")',
                type: 'POST',
                data: {
                    id: patientInsuranceId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert('خطا در تنظیم بیمه اصلی: ' + response.message);
                    }
                },
                error: function() {
                    alert('خطا در ارتباط با سرور');
                }
            });
        }
    });
});
</script>
