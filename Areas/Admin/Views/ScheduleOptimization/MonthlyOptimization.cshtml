@model ClinicApp.ViewModels.DoctorManagementVM.WorkloadBalanceResult
@{
    ViewBag.Title = "بهینه‌سازی برنامه کاری ماهانه";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@Html.AntiForgeryToken()

<div class="container-fluid">
    <!-- Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-calendar-alt text-success me-2"></i>
            بهینه‌سازی برنامه کاری ماهانه
        </h1>
        <div class="btn-group" role="group">
            <a href="@Url.Action("Index", "ScheduleOptimization")" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-right me-1"></i>
                بازگشت به داشبورد
            </a>
            <a href="@Url.Action("DailyOptimization", "ScheduleOptimization")" class="btn btn-primary btn-sm">
                <i class="fas fa-calendar-day me-1"></i>
                بهینه‌سازی روزانه
            </a>
            <a href="@Url.Action("WeeklyOptimization", "ScheduleOptimization")" class="btn btn-info btn-sm">
                <i class="fas fa-calendar-week me-1"></i>
                بهینه‌سازی هفتگی
            </a>
        </div>
    </div>

    <!-- Monthly Optimization Form -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-cog me-1"></i>
                تنظیمات بهینه‌سازی ماهانه
            </h6>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("MonthlyOptimization", "ScheduleOptimization", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
            {
                @Html.AntiForgeryToken()
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="doctorId" class="form-label">پزشک</label>
                            <select name="doctorId" id="doctorId" class="form-select" required>
                                <option value="">انتخاب پزشک</option>
                                @if (ViewBag.Doctors != null)
                                {
                                    foreach (var doctor in ViewBag.Doctors)
                                    {
                                        <option value="@doctor.Value">@doctor.Text</option>
                                    }
                                }
                            </select>
                            <div class="invalid-feedback">لطفاً پزشک را انتخاب کنید</div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="monthStart" class="form-label">ماه مورد نظر</label>
                            <input type="text" name="monthStart" id="monthStart" class="form-control persian-date" 
                                   placeholder="انتخاب ماه" required>
                            <div class="invalid-feedback">لطفاً ماه مورد نظر را انتخاب کنید</div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="optimizationType" class="form-label">نوع بهینه‌سازی</label>
                            <select name="optimizationType" id="optimizationType" class="form-select" required>
                                <option value="">انتخاب کنید</option>
                                <option value="workload">متعادل‌سازی بار کاری</option>
                                <option value="break">بهینه‌سازی زمان استراحت</option>
                                <option value="emergency">بهینه‌سازی زمان اورژانس</option>
                                <option value="comprehensive">بهینه‌سازی جامع</option>
                                <option value="seasonal">بهینه‌سازی فصلی</option>
                            </select>
                            <div class="invalid-feedback">لطفاً نوع بهینه‌سازی را انتخاب کنید</div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="priority" class="form-label">اولویت بهینه‌سازی</label>
                            <select name="priority" id="priority" class="form-select" required>
                                <option value="">انتخاب کنید</option>
                                <option value="high">بالا</option>
                                <option value="medium">متوسط</option>
                                <option value="low">کم</option>
                            </select>
                            <div class="invalid-feedback">لطفاً اولویت را انتخاب کنید</div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="maxAppointmentsPerDay" class="form-label">حداکثر نوبت در روز</label>
                            <input type="number" name="maxAppointmentsPerDay" id="maxAppointmentsPerDay" class="form-control" 
                                   min="1" max="50" value="20" required>
                            <div class="invalid-feedback">لطفاً تعداد معتبر وارد کنید</div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="breakDuration" class="form-label">مدت زمان استراحت (دقیقه)</label>
                            <input type="number" name="breakDuration" id="breakDuration" class="form-control" 
                                   min="15" max="120" value="30" required>
                            <div class="invalid-feedback">لطفاً مدت زمان معتبر وارد کنید</div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="maxWorkingDaysPerWeek" class="form-label">حداکثر روزهای کاری در هفته</label>
                            <input type="number" name="maxWorkingDaysPerWeek" id="maxWorkingDaysPerWeek" class="form-control" 
                                   min="1" max="7" value="6" required>
                            <div class="invalid-feedback">لطفاً تعداد معتبر وارد کنید</div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="includeWeekend" class="form-label">شامل آخر هفته</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="includeWeekend" id="includeWeekend" value="true">
                                <label class="form-check-label" for="includeWeekend">
                                    شامل جمعه و شنبه در برنامه کاری
                                </label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="balanceWorkload" class="form-label">متعادل‌سازی بار کاری</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="balanceWorkload" id="balanceWorkload" value="true" checked>
                                <label class="form-check-label" for="balanceWorkload">
                                    توزیع یکنواخت نوبت‌ها در طول ماه
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="considerHolidays" class="form-label">در نظر گرفتن تعطیلات</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="considerHolidays" id="considerHolidays" value="true" checked>
                                <label class="form-check-label" for="considerHolidays">
                                    حذف تعطیلات رسمی از برنامه کاری
                                </label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="optimizeSeasonal" class="form-label">بهینه‌سازی فصلی</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="optimizeSeasonal" id="optimizeSeasonal" value="true">
                                <label class="form-check-label" for="optimizeSeasonal">
                                    تنظیم برنامه بر اساس فصل و شرایط آب و هوایی
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="constraints" class="form-label">محدودیت‌ها و ملاحظات</label>
                            <textarea name="constraints" id="constraints" class="form-control" rows="3" 
                                      placeholder="محدودیت‌ها و ملاحظات خاص را وارد کنید (اختیاری)"></textarea>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-primary btn-lg me-3">
                            <i class="fas fa-magic me-1"></i>
                            اجرای بهینه‌سازی ماهانه
                        </button>
                        <button type="button" class="btn btn-secondary btn-lg" onclick="resetForm()">
                            <i class="fas fa-undo me-1"></i>
                            بازنشانی
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Month Preview -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-calendar-alt me-1"></i>
                پیش‌نمایش ماه
            </h6>
        </div>
        <div class="card-body">
            <div class="row" id="monthPreview">
                <div class="col-12 text-center text-muted py-4">
                    <i class="fas fa-calendar-alt fa-2x mb-2"></i>
                    <p>برای مشاهده پیش‌نمایش ماه، ابتدا پزشک و ماه مورد نظر را انتخاب کنید</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Optimization Results Preview -->
    @if (Model != null)
    {
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-chart-line me-1"></i>
                    نتایج بهینه‌سازی ماهانه
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">وضعیت بهینه‌سازی:</label>
                            <p>
                                <span class="badge bg-success fs-6">@Model.Status</span>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">پیام:</label>
                            <p class="form-control-plaintext">@Model.Message</p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <div class="text-center">
                            <div class="h4 text-primary">@Model.CurrentAppointments</div>
                            <small class="text-muted">نوبت‌های فعلی</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center">
                            <div class="h4 text-success">@Model.SuggestedAppointments</div>
                            <small class="text-muted">نوبت‌های پیشنهادی</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center">
                            <div class="h4 text-info">@Model.WorkloadPercentage.ToString("P1")</div>
                            <small class="text-muted">درصد بار کاری</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center">
                            <div class="h4 text-warning">@Model.BreakTimeMinutes</div>
                            <small class="text-muted">زمان استراحت (دقیقه)</small>
                        </div>
                    </div>
                </div>

                @if (Model.OptimizedSlots != null && Model.OptimizedSlots.Any())
                {
                    <div class="mt-4">
                        <h6 class="fw-bold">اسلات‌های بهینه شده:</h6>
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>روز</th>
                                        <th>زمان شروع</th>
                                        <th>زمان پایان</th>
                                        <th>نوع</th>
                                        <th>وضعیت</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var slot in Model.OptimizedSlots.Take(20))
                                    {
                                        <tr>
                                            <td>@slot.DateDisplay</td>
                                            <td>@slot.StartTimeDisplay</td>
                                            <td>@slot.EndTimeDisplay</td>
                                            <td>@slot.Type</td>
                                            <td>
                                                <span class="badge bg-success">بهینه شده</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }

                @if (Model.Recommendations != null && Model.Recommendations.Any())
                {
                    <div class="mt-4">
                        <h6 class="fw-bold">پیشنهادات بهبود:</h6>
                        <ul class="list-group list-group-flush">
                            @foreach (var recommendation in Model.Recommendations.Take(5))
                            {
                                <li class="list-group-item">
                                    <i class="fas fa-lightbulb text-warning me-2"></i>
                                    @recommendation
                                </li>
                            }
                        </ul>
                    </div>
                }

                <div class="row mt-4">
                    <div class="col-12 text-center">
                        <a href="@Url.Action("MonthlyOptimizationResult", "ScheduleOptimization", new { doctorId = Model.DoctorId, monthStart = DateTime.Today.ToString("yyyy-MM-dd") })" 
                           class="btn btn-info btn-lg me-3">
                            <i class="fas fa-eye me-1"></i>
                            مشاهده جزئیات کامل
                        </a>
                        <button type="button" class="btn btn-success btn-lg" onclick="applyOptimization()">
                            <i class="fas fa-check me-1"></i>
                            اعمال بهینه‌سازی
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Monthly Statistics -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-chart-bar me-1"></i>
                آمار ماهانه
            </h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-8">
                    <canvas id="monthlyChart" width="400" height="200"></canvas>
                </div>
                <div class="col-lg-4">
                    <div class="row">
                        <div class="col-6 mb-3">
                            <div class="text-center">
                                <div class="h5 text-primary">0</div>
                                <small class="text-muted">روزهای کاری</small>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="text-center">
                                <div class="h5 text-success">0</div>
                                <small class="text-muted">نوبت‌های کل</small>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="text-center">
                                <div class="h5 text-info">0</div>
                                <small class="text-muted">ساعات کاری</small>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="text-center">
                                <div class="h5 text-warning">0</div>
                                <small class="text-muted">ساعات استراحت</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Monthly Calendar View -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-calendar me-1"></i>
                نمای تقویم ماهانه
            </h6>
        </div>
        <div class="card-body">
            <div id="monthlyCalendar">
                <!-- Calendar will be generated here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/persian-datepicker")
    @Scripts.Render("~/bundles/plugins")
    
    <script>
        $(document).ready(function() {
            // Initialize Persian DatePicker
            $('.persian-date').persianDatepicker({
                format: 'YYYY/MM',
                initialValue: false,
                autoClose: true,
                persianDigit: false,
                onSelect: function(unix) {
                    // Convert Persian date to Gregorian for model binding
                    var gregorianDate = new Date(unix);
                    var year = gregorianDate.getFullYear();
                    var month = String(gregorianDate.getMonth() + 1).padStart(2, '0');
                    var gregorianDateString = year + '-' + month + '-01';
                    
                    // Set the hidden input for model binding
                    $('input[name="monthStart"]').val(gregorianDateString);
                    
                    // Update month preview
                    updateMonthPreview(gregorianDate);
                    
                    // Generate monthly calendar
                    generateMonthlyCalendar(gregorianDate);
                }
            });

            // Set default values
            $('input[name="monthStart"]').val('@DateTime.Today.ToString("yyyy-MM-01")');
            
            // Initialize monthly chart
            initializeMonthlyChart();
            
            // Form validation
            $('.needs-validation').on('submit', function(event) {
                if (!this.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                $(this).addClass('was-validated');
            });

            // Auto-save functionality
            let autoSaveTimer;
            $('input, select, textarea').on('input change', function() {
                clearTimeout(autoSaveTimer);
                autoSaveTimer = setTimeout(function() {
                    // Auto-save logic can be implemented here
                    console.log('Auto-save triggered');
                }, 30000); // 30 seconds delay
            });
        });

        // Update Month Preview
        function updateMonthPreview(startDate) {
            const monthNames = ['فروردین', 'اردیبهشت', 'خرداد', 'تیر', 'مرداد', 'شهریور', 
                               'مهر', 'آبان', 'آذر', 'دی', 'بهمن', 'اسفند'];
            const monthName = monthNames[startDate.getMonth()];
            const year = startDate.getFullYear();
            const daysInMonth = new Date(startDate.getFullYear(), startDate.getMonth() + 1, 0).getDate();
            
            let previewHtml = `
                <div class="row">
                    <div class="col-12 text-center mb-3">
                        <h4 class="text-primary">${monthName} ${year}</h4>
                        <p class="text-muted">${daysInMonth} روز</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card border-left-success h-100">
                            <div class="card-body text-center">
                                <h6 class="card-title text-success">روزهای کاری</h6>
                                <div class="h4">${Math.floor(daysInMonth * 0.8)}</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card border-left-warning h-100">
                            <div class="card-body text-center">
                                <h6 class="card-title text-warning">تعطیلات</h6>
                                <div class="h4">${Math.floor(daysInMonth * 0.1)}</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card border-left-info h-100">
                            <div class="card-body text-center">
                                <h6 class="card-title text-info">نوبت‌های کل</h6>
                                <div class="h4">${Math.floor(daysInMonth * 0.8 * 20)}</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card border-left-primary h-100">
                            <div class="card-body text-center">
                                <h6 class="card-title text-primary">ساعات کاری</h6>
                                <div class="h4">${Math.floor(daysInMonth * 0.8 * 8)}</div>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            $('#monthPreview').html(previewHtml);
        }

        // Generate Monthly Calendar
        function generateMonthlyCalendar(startDate) {
            const daysInMonth = new Date(startDate.getFullYear(), startDate.getMonth() + 1, 0).getDate();
            const firstDay = new Date(startDate.getFullYear(), startDate.getMonth(), 1).getDay();
            const weekDays = ['یکشنبه', 'دوشنبه', 'سه‌شنبه', 'چهارشنبه', 'پنج‌شنبه', 'جمعه', 'شنبه'];
            
            let calendarHtml = `
                <div class="table-responsive">
                    <table class="table table-bordered table-sm">
                        <thead class="table-dark">
                            <tr>
                                ${weekDays.map(day => `<th class="text-center">${day}</th>`).join('')}
                            </tr>
                        </thead>
                        <tbody>
            `;
            
            let dayCounter = 1;
            let currentWeek = 0;
            const totalWeeks = Math.ceil((daysInMonth + firstDay) / 7);
            
            for (let week = 0; week < totalWeeks; week++) {
                calendarHtml += '<tr>';
                
                for (let dayOfWeek = 0; dayOfWeek < 7; dayOfWeek++) {
                    if ((week === 0 && dayOfWeek < firstDay) || dayCounter > daysInMonth) {
                        calendarHtml += '<td class="text-muted"></td>';
                    } else {
                        const isWeekend = dayOfWeek === 5 || dayOfWeek === 6; // Friday and Saturday
                        const cellClass = isWeekend ? 'table-warning' : '';
                        
                        calendarHtml += `
                            <td class="text-center ${cellClass}">
                                <div class="fw-bold">${dayCounter}</div>
                                <small class="text-muted">${isWeekend ? 'تعطیل' : 'کاری'}</small>
                            </td>
                        `;
                        dayCounter++;
                    }
                }
                
                calendarHtml += '</tr>';
            }
            
            calendarHtml += `
                        </tbody>
                    </table>
                </div>
            `;
            
            $('#monthlyCalendar').html(calendarHtml);
        }

        // Initialize Monthly Chart
        function initializeMonthlyChart() {
            const ctx = document.getElementById('monthlyChart').getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['هفته 1', 'هفته 2', 'هفته 3', 'هفته 4', 'هفته 5'],
                    datasets: [{
                        label: 'نوبت‌های فعلی',
                        data: [0, 0, 0, 0, 0],
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 2,
                        fill: false
                    }, {
                        label: 'نوبت‌های پیشنهادی',
                        data: [0, 0, 0, 0, 0],
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 2,
                        fill: false
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'top'
                        }
                    }
                }
            });
        }

        // Reset Form
        function resetForm() {
            if (confirm('آیا از بازنشانی فرم اطمینان دارید؟')) {
                document.getElementById('optimizationForm').reset();
                $('.needs-validation').removeClass('was-validated');
                
                // Reset default values
                $('input[name="monthStart"]').val('@DateTime.Today.ToString("yyyy-MM-01")');
                $('input[name="maxAppointmentsPerDay"]').val('20');
                $('input[name="breakDuration"]').val('30');
                $('input[name="maxWorkingDaysPerWeek"]').val('6');
                
                // Reset month preview
                $('#monthPreview').html(`
                    <div class="col-12 text-center text-muted py-4">
                        <i class="fas fa-calendar-alt fa-2x mb-2"></i>
                        <p>برای مشاهده پیش‌نمایش ماه، ابتدا پزشک و ماه مورد نظر را انتخاب کنید</p>
