            if (e.ctrlKey && e.keyCode === 70) {
                e.preventDefault();
                $('#SearchTerm').focus();
            }
            
            // Ctrl + R for refresh
            if (e.ctrlKey && e.keyCode === 82) {
                e.preventDefault();
