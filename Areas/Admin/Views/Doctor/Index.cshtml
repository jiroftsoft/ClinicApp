            // Create temporary link for download
            var link = document.createElement('a');
            link.href = url;
            link.download = 'doctors_' + new Date().toISOString().slice(0, 10) + '.xlsx';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            hideLoading();
            
