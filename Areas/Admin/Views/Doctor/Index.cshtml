        function printTable() {
            // Hide unnecessary elements for printing
            $('.search-panel, .bulk-actions, .btn, .pagination').hide();
            
            window.print();
            
            // Show elements back after printing
            setTimeout(function() {
                $('.search-panel, .bulk-actions, .btn, .pagination').show();
            }, 1000);
        }

        // Bulk operations


        // Keyboard shortcuts
        $(document).keydown(function(e) {
            // Ctrl + F for search
            if (e.ctrlKey && e.keyCode === 70) {
                e.preventDefault();
                $('#SearchTerm').focus();
            }
            
            // Ctrl + R for refresh
            if (e.ctrlKey && e.keyCode === 82) {
                e.preventDefault();
                refreshTable();
            }
            
            // Escape key for reset search
            if (e.keyCode === 27) {
                e.preventDefault();
                resetSearch();
            }
        });

