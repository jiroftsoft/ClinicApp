@model ClinicApp.ViewModels.DepartmentCreateEditViewModel
@{
    ViewBag.Title = "Add New Department";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="mb-0">
            <i class="fas fa-plus-circle me-2 text-success"></i>@ViewBag.Title
            <small class="text-muted fs-6">- @Model.ClinicName</small>
        </h4>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Create", "Department", FormMethod.Post, new { role = "form" }))
        {
            @Html.Partial("_CreateOrEdit", Model)

            <hr />
            <div class="d-flex justify-content-end">
                <a href="@Url.Action("Index", new { clinicId = Model.ClinicId })" class="btn btn-secondary me-2">Cancel</a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save me-1"></i> Create
                </button>
            </div>
        }
    </div>
</div>