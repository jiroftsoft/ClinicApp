@model ClinicApp.ViewModels.DepartmentDetailsViewModel
@{
    ViewBag.Title = $"جزئیات دپارتمان: {Model.Name}";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h4 class="mb-0">
            <i class="fas fa-info-circle me-2 text-info"></i>
            جزئیات دپارتمان: <strong>@Model.Name</strong>
            <span class="text-muted fs-6">(@Model.ClinicName)</span>
        </h4>
        <div>
            <a href="@Url.Action("Edit", new { id = Model.DepartmentId })" class="btn btn-warning">
                <i class="fas fa-edit me-1"></i> ویرایش
            </a>
            <a href="@Url.Action("Index", new { clinicId = Model.ClinicId })" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> بازگشت به لیست
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h5><i class="fas fa-sitemap me-2"></i>اطلاعات اصلی</h5>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">نام دپارتمان</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">کلینیک مربوطه</dt>
                    <dd class="col-sm-8">@Model.ClinicName</dd>

                    <dt class="col-sm-4">وضعیت</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">فعال</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">غیرفعال</span>
                        }
                    </dd>
                </dl>
            </div>
            <div class="col-md-6 border-start">
                <h5><i class="fas fa-chart-bar me-2"></i>آمار</h5>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">تعداد پزشکان فعال</dt>
                    <dd class="col-sm-8">@Model.DoctorCount نفر</dd>
                    
                    <dt class="col-sm-4">تعداد دسته‌بندی خدمات</dt>
                    <dd class="col-sm-8">@Model.ServiceCategoryCount مورد</dd>
                </dl>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <h5><i class="fas fa-history me-2"></i>تاریخچه و ردیابی</h5>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">ایجاد شده توسط</dt>
                    <dd class="col-sm-3">@(Model.CreatedByUser ?? "---")</dd>

                    <dt class="col-sm-3">تاریخ ایجاد</dt>
                    <dd class="col-sm-3">@Model.CreatedAtShamsi</dd>

                    <dt class="col-sm-3">آخرین ویرایش توسط</dt>
                    <dd class="col-sm-3">@(Model.UpdatedByUser ?? "---")</dd>

                    <dt class="col-sm-3">تاریخ آخرین ویرایش</dt>
                    <dd class="col-sm-3">@(Model.UpdatedAtShamsi ?? "ویرایش نشده است")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>