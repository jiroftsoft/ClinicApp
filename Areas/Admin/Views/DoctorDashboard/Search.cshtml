@model ClinicApp.ViewModels.DoctorManagementVM.DoctorSearchResultViewModel
@{
    ViewBag.Title = "جستجوی پزشکان";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-search me-2"></i>
                        جستجوی پزشکان
                    </h4>
                </div>
                <div class="card-body">
                    <form method="get" action="@Url.Action("Search")" class="row g-3">
                        <div class="col-md-4">
                            <input type="text" name="searchTerm" class="form-control" placeholder="جستجوی پزشک..." value="@ViewBag.SearchTerm">
                        </div>
                        <div class="col-md-3">
                            <select name="clinicId" class="form-select">
                                <option value="">همه کلینیک‌ها</option>
                                @if (ViewBag.Clinics != null)
                                {
                                    foreach (var clinic in ViewBag.Clinics)
                                    {
                                        <option value="@clinic.Id" @(ViewBag.ClinicId == clinic.Id ? "selected" : "")>@clinic.Name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select name="departmentId" class="form-select">
                                <option value="">همه دپارتمان‌ها</option>
                                @if (ViewBag.Departments != null)
                                {
                                    foreach (var dept in ViewBag.Departments)
                                    {
                                        <option value="@dept.Id" @(ViewBag.DepartmentId == dept.Id ? "selected" : "")>@dept.Name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-search me-1"></i>
                                جستجو
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Results -->
    @if (Model != null && Model.Doctors != null && Model.Doctors.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            نتایج جستجو (@Model.TotalCount مورد)
                        </h5>
                        <a href="@Url.Action("Index", "DoctorDashboard")" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            بازگشت
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>نام پزشک</th>
                                        <th>تخصص</th>
                                        <th>کلینیک</th>
                                        <th>وضعیت</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var doctor in Model.Doctors)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@(string.IsNullOrEmpty(doctor.ProfileImage) ? "/Content/Images/default-avatar.png" : doctor.ProfileImage)" 
                                                         class="rounded-circle me-2" width="40" height="40" alt="تصویر پزشک">
                                                    <div>
                                                        <strong>@doctor.FullName</strong>
                                                        <br>
                                                        <small class="text-muted">@doctor.NationalCode</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@doctor.Specialization</td>
                                            <td>@doctor.ClinicName</td>
                                            <td>
                                                <span class="badge @(doctor.IsActive ? "bg-success" : "bg-danger")">
                                                    @(doctor.IsActive ? "فعال" : "غیرفعال")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("Details", new { id = doctor.Id })" class="btn btn-outline-primary">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Assignments", new { id = doctor.Id })" class="btn btn-outline-info">
                                                        <i class="fas fa-link"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", "DoctorCrud", new { id = doctor.Id })" class="btn btn-outline-warning">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (Model.TotalPages > 1)
                        {
                            <nav aria-label="صفحه‌بندی نتایج">
                                <ul class="pagination justify-content-center">
                                    @for (int i = 1; i <= Model.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("Search", new { 
                                                searchTerm = ViewBag.SearchTerm, 
                                                clinicId = ViewBag.ClinicId, 
                                                departmentId = ViewBag.DepartmentId, 
                                                page = i 
                                            })">@i</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else if (ViewBag.SearchTerm != null)
    {
        <div class="text-center py-5">
            <i class="fas fa-search fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">نتیجه‌ای یافت نشد</h4>
            <p class="text-muted">با معیارهای جستجوی شما هیچ پزشکی یافت نشد</p>
            <a href="@Url.Action("Index", "DoctorDashboard")" class="btn btn-primary">
                <i class="fas fa-arrow-left me-2"></i>
                بازگشت به داشبورد
            </a>
        </div>
    }
</div>
