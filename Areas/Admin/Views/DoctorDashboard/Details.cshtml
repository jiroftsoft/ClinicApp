@model ClinicApp.ViewModels.DoctorManagementVM.DoctorDetailsViewModel
@{
    ViewBag.Title = "جزئیات پزشک";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <style>
        .doctor-profile-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 15px;
            color: white;
            padding: 30px;
            margin-bottom: 30px;
        }
        
        .profile-image {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 4px solid white;
            object-fit: cover;
        }
        
        .info-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            padding: 25px;
            margin-bottom: 20px;
            transition: transform 0.3s ease;
        }
        
        .info-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.12);
        }
        
        .status-badge {
            padding: 8px 16px;
            border-radius: 25px;
            font-size: 14px;
            font-weight: 600;
        }
        
        .status-active {
            background: #28a745;
            color: white;
        }
        
        .status-inactive {
            background: #dc3545;
            color: white;
        }
        
        .info-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 0;
            border-bottom: 1px solid #f0f0f0;
        }
        
        .info-row:last-child {
            border-bottom: none;
        }
        
        .info-label {
            font-weight: 600;
            color: #666;
        }
        
        .info-value {
            color: #333;
        }
        
        .action-btn {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            border: none;
            border-radius: 25px;
            padding: 12px 24px;
            color: white;
            font-weight: 600;
            transition: all 0.3s ease;
            margin: 5px;
        }
        
        .action-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            color: white;
            text-decoration: none;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        
        .stat-item {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            text-align: center;
        }
        
        .stat-number {
            font-size: 24px;
            font-weight: bold;
            color: #667eea;
        }
        
        .stat-label {
            color: #666;
            margin-top: 5px;
        }
    </style>
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "DoctorDashboard")">
                    <i class="fas fa-home"></i>
                    داشبورد
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">جزئیات پزشک</li>
        </ol>
    </nav>

    @if (Model != null)
    {
        <!-- Doctor Profile Header -->
        <div class="doctor-profile-card">
            <div class="row align-items-center">
                <div class="col-md-3 text-center">
                    <img src="@(string.IsNullOrEmpty(Model.ProfileImage) ? "/Content/Images/default-avatar.png" : Model.ProfileImage)" 
                         class="profile-image" alt="تصویر پزشک">
                </div>
                <div class="col-md-6">
                    <h2 class="mb-2">@Model.FullName</h2>
                    <p class="mb-3 text-white-50">@Model.Specialization</p>
                    <div class="d-flex flex-wrap">
                        <span class="status-badge @(Model.IsActive ? "status-active" : "status-inactive") me-3">
                            @(Model.IsActive ? "فعال" : "غیرفعال")
                        </span>
                        <span class="text-white-50">
                            <i class="fas fa-building me-1"></i>
                            @Model.ClinicName
                        </span>
                    </div>
                </div>
                <div class="col-md-3 text-end">
                    <div class="d-flex flex-column">
                        <a href="@Url.Action("Edit", "DoctorCrud", new { id = Model.Id })" class="action-btn mb-2">
                            <i class="fas fa-edit me-2"></i>
                            ویرایش
                        </a>
                        <a href="@Url.Action("Assignments", new { id = Model.Id })" class="action-btn mb-2">
                            <i class="fas fa-link me-2"></i>
                            انتسابات
                        </a>
                        <button class="action-btn" onclick="getQuickActions(@Model.Id)">
                            <i class="fas fa-bolt me-2"></i>
                            عملیات سریع
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Grid -->
        <div class="stats-grid">
            <div class="stat-item">
                <div class="stat-number">@Model.TotalAssignments</div>
                <div class="stat-label">کل انتسابات</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">@Model.ActiveAssignments</div>
                <div class="stat-label">انتسابات فعال</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">@Model.DepartmentCount</div>
                <div class="stat-label">دپارتمان‌ها</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">@Model.ServiceCategoryCount</div>
                <div class="stat-label">صلاحیت‌های خدماتی</div>
            </div>
        </div>

        <div class="row">
            <!-- Personal Information -->
            <div class="col-lg-6">
                <div class="info-card">
                    <h5 class="mb-4">
                        <i class="fas fa-user me-2"></i>
                        اطلاعات شخصی
                    </h5>
                    <div class="info-row">
                        <span class="info-label">نام و نام خانوادگی:</span>
                        <span class="info-value">@Model.FullName</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">کد ملی:</span>
                        <span class="info-value">@Model.NationalCode</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">تاریخ تولد:</span>
                        <span class="info-value">@Model.BirthDate</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">جنسیت:</span>
                        <span class="info-value">@Model.Gender</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">وضعیت تاهل:</span>
                        <span class="info-value">@Model.MaritalStatus</span>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="col-lg-6">
                <div class="info-card">
                    <h5 class="mb-4">
                        <i class="fas fa-phone me-2"></i>
                        اطلاعات تماس
                    </h5>
                    <div class="info-row">
                        <span class="info-label">شماره موبایل:</span>
                        <span class="info-value">@Model.MobileNumber</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">ایمیل:</span>
                        <span class="info-value">@Model.Email</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">تلفن ثابت:</span>
                        <span class="info-value">@Model.PhoneNumber</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">آدرس:</span>
                        <span class="info-value">@Model.Address</span>
                    </div>
                </div>
            </div>

            <!-- Professional Information -->
            <div class="col-lg-6">
                <div class="info-card">
                    <h5 class="mb-4">
                        <i class="fas fa-stethoscope me-2"></i>
                        اطلاعات حرفه‌ای
                    </h5>
                    <div class="info-row">
                        <span class="info-label">تخصص:</span>
                        <span class="info-value">@Model.Specialization</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">شماره نظام پزشکی:</span>
                        <span class="info-value">@Model.MedicalCouncilNumber</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">تاریخ شروع فعالیت:</span>
                        <span class="info-value">@Model.StartDate</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">وضعیت:</span>
                        <span class="info-value">
                            <span class="status-badge @(Model.IsActive ? "status-active" : "status-inactive")">
                                @(Model.IsActive ? "فعال" : "غیرفعال")
                            </span>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Clinic Information -->
            <div class="col-lg-6">
                <div class="info-card">
                    <h5 class="mb-4">
                        <i class="fas fa-building me-2"></i>
                        اطلاعات کلینیک
                    </h5>
                    <div class="info-row">
                        <span class="info-label">کلینیک:</span>
                        <span class="info-value">@Model.ClinicName</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">دپارتمان‌های فعال:</span>
                        <span class="info-value">@Model.DepartmentCount</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">صلاحیت‌های خدماتی:</span>
                        <span class="info-value">@Model.ServiceCategoryCount</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">تاریخ عضویت:</span>
                        <span class="info-value">@Model.CreatedDate</span>
                    </div>
                </div>
            </div>

            <!-- Recent Activities -->
            <div class="col-12">
                <div class="info-card">
                    <h5 class="mb-4">
                        <i class="fas fa-history me-2"></i>
                        فعالیت‌های اخیر
                    </h5>
                    @if (Model.RecentActivities != null && Model.RecentActivities.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>تاریخ</th>
                                        <th>نوع فعالیت</th>
                                        <th>توضیحات</th>
                                        <th>وضعیت</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var activity in Model.RecentActivities.Take(5))
                                    {
                                        <tr>
                                            <td>@activity.Date</td>
                                            <td>@activity.Type</td>
                                            <td>@activity.Description</td>
                                            <td>
                                                <span class="badge @(activity.Status == "موفق" ? "bg-success" : "bg-warning")">
                                                    @activity.Status
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-history fa-2x text-muted mb-3"></i>
                            <p class="text-muted">هیچ فعالیتی ثبت نشده است</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-user-md fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">اطلاعات پزشک یافت نشد</h4>
            <p class="text-muted">پزشک مورد نظر وجود ندارد یا حذف شده است</p>
            <a href="@Url.Action("Index", "DoctorDashboard")" class="btn btn-primary">
                <i class="fas fa-arrow-left me-2"></i>
                بازگشت به داشبورد
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Get Quick Actions
        function getQuickActions(doctorId) {
            $.ajax({
                url: '@Url.Action("GetQuickActions")',
                type: 'GET',
                data: { doctorId: doctorId },
                success: function(response) {
                    if (response.success) {
                        showQuickActionsModal(response.data, doctorId);
                    } else {
                        Swal.fire({
                            title: 'خطا',
                            text: response.message,
                            icon: 'error',
                            confirmButtonText: 'باشه'
                        });
                    }
                },
                error: function() {
                    Swal.fire({
                        title: 'خطا',
                        text: 'خطا در دریافت عملیات سریع',
                        icon: 'error',
                        confirmButtonText: 'باشه'
                    });
                }
            });
        }

        // Show Quick Actions Modal
        function showQuickActionsModal(actions, doctorId) {
            let actionsHtml = '';
            actions.forEach(function(action) {
                actionsHtml += `
                    <a href="${action.actionUrl}" class="btn btn-outline-primary btn-sm me-2 mb-2">
                        <i class="${action.iconClass}"></i>
                        ${action.actionTitle}
                    </a>
                `;
            });

            Swal.fire({
                title: 'عملیات سریع',
                html: `
                    <div class="text-center">
                        <p class="mb-3">انتخاب عملیات برای پزشک:</p>
                        <div class="d-flex flex-wrap justify-content-center">
                            ${actionsHtml}
                        </div>
                    </div>
                `,
                icon: 'info',
                confirmButtonText: 'بستن',
                showCancelButton: false
            });
        }
    </script>
}
