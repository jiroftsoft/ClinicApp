@model ClinicApp.ViewModels.DoctorManagementVM.DoctorServiceCategoryViewModel
@{
    ViewBag.Title = "جزئیات صلاحیت خدماتی پزشک";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@Html.AntiForgeryToken()

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-eye"></i>
                        جزئیات صلاحیت خدماتی پزشک
                    </h3>
                    <div class="card-tools">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-right"></i>
                            بازگشت
                        </a>
                        <a href="@Url.Action("Edit", new { assignmentId = Model.AssignmentId })" class="btn btn-warning">
                            <i class="fas fa-edit"></i>
                            ویرایش
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            <i class="fas fa-exclamation-triangle"></i>
                            @TempData["Error"]
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="text-primary mb-3">اطلاعات پزشک</h5>
                            <div class="info-group">
                                <label class="info-label">نام پزشک:</label>
                                <span class="info-value">@(Model?.DoctorName ?? "-")</span>
                            </div>
                            <div class="info-group">
                                <label class="info-label">کد پزشک:</label>
                                <span class="info-value">@(Model?.DoctorId ?? 0)</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-primary mb-3">اطلاعات دسته‌بندی خدماتی</h5>
                            <div class="info-group">
                                <label class="info-label">عنوان دسته‌بندی:</label>
                                <span class="info-value">@(Model?.ServiceCategoryTitle ?? "-")</span>
                            </div>
                            <div class="info-group">
                                <label class="info-label">کد دسته‌بندی:</label>
                                <span class="info-value">@(Model?.ServiceCategoryId ?? 0)</span>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="text-primary mb-3">جزئیات صلاحیت</h5>
                            <div class="info-group">
                                <label class="info-label">سطح صلاحیت:</label>
                                <span class="info-value">@(Model?.AuthorizationLevel ?? "-")</span>
                            </div>
                            <div class="info-group">
                                <label class="info-label">شماره گواهی:</label>
                                <span class="info-value">@(Model?.CertificateNumber ?? "-")</span>
                            </div>
                            <div class="info-group">
                                <label class="info-label">وضعیت:</label>
                                <span class="badge @(Model?.IsActive == true ? "badge-success" : "badge-danger")">
                                    @(Model?.IsActive == true ? "فعال" : "غیرفعال")
                                </span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-primary mb-3">اطلاعات زمانی</h5>
                            <div class="info-group">
                                <label class="info-label">تاریخ اعطا:</label>
                                <span class="info-value">@(Model?.GrantedDate?.ToString("yyyy/MM/dd") ?? "-")</span>
                            </div>
                            <div class="info-group">
                                <label class="info-label">تاریخ انقضا:</label>
                                <span class="info-value">@(Model?.ExpiryDate?.ToString("yyyy/MM/dd") ?? "-")</span>
                            </div>
                            <div class="info-group">
                                <label class="info-label">تاریخ ایجاد:</label>
                                <span class="info-value">@(Model?.CreatedAt.ToString("yyyy/MM/dd") ?? "-")</span>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model?.Notes))
                    {
                        <hr class="my-4">
                        <div class="row">
                            <div class="col-12">
                                <h5 class="text-primary mb-3">توضیحات</h5>
                                <div class="info-group">
                                    <label class="info-label">توضیحات:</label>
                                    <span class="info-value">@Model.Notes</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .info-group {
        margin-bottom: 1rem;
        padding: 0.5rem 0;
        border-bottom: 1px solid #eee;
    }
    
    .info-label {
        font-weight: bold;
        color: #666;
        display: inline-block;
        width: 120px;
        margin-left: 1rem;
    }
    
    .info-value {
        color: #333;
        font-weight: 500;
    }
</style>
