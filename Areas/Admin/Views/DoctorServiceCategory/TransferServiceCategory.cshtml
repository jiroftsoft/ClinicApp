@model ClinicApp.ViewModels.DoctorManagementVM.DoctorServiceCategoryViewModel
@{
    ViewBag.Title = "انتقال صلاحیت‌های خدماتی پزشک";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link href="~/Content/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/select2/css/select2.min.css" rel="stylesheet" />
    <style>
        .transfer-form {
            background: white;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }
        .form-section {
            border-left: 4px solid #667eea;
            padding-left: 20px;
            margin-bottom: 30px;
        }
        .form-section h5 {
            color: #667eea;
            font-weight: 600;
        }
        .doctor-info-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 10px;
            padding: 20px;
        }
        .current-service-card {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
            color: white;
            border-radius: 10px;
            padding: 20px;
        }
        .btn-submit {
            border-radius: 25px;
            font-weight: 600;
            padding: 12px 30px;
            transition: all 0.3s ease;
        }
        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }
        .validation-summary {
            border-radius: 10px;
            border: none;
        }
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.8);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }
        .transfer-arrow {
            font-size: 2rem;
            color: #667eea;
            text-align: center;
            margin: 20px 0;
        }
    </style>
}

<div class="loading-overlay">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">در حال پردازش...</span>
    </div>
</div>

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-0 text-primary">
                        <i class="fas fa-exchange-alt me-2"></i>
                        انتقال صلاحیت‌های خدماتی پزشک
                    </h2>
                    <p class="text-muted mb-0">انتقال صلاحیت‌های خدماتی پزشک از یک دسته‌بندی به دسته‌بندی دیگر</p>
                </div>
                <div>
                    <a href="@Url.Action("Index", "Doctor")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-right me-2"></i>
                        بازگشت به لیست پزشکان
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Doctor Information Card -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="doctor-info-card">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h4 class="mb-2">
                            <i class="fas fa-user-md me-2"></i>
                            @Model.DoctorName
                        </h4>
                        <p class="mb-0">
                            <i class="fas fa-id-card me-2"></i>
                            پزشک متخصص
                        </p>
                    </div>
                    <div class="col-md-4 text-end">
                        <div class="badge bg-light text-dark fs-6">
                            <i class="fas fa-user-md me-1"></i>
                            پزشک
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Current Service Category Card -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="current-service-card">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h5 class="mb-2">
                            <i class="fas fa-stethoscope me-2"></i>
                            دسته‌بندی خدمات فعلی
                        </h5>
                        <p class="mb-0 fs-5">
                            @Model.ServiceCategoryTitle
                        </p>
                    </div>
                    <div class="col-md-4 text-end">
                        <div class="badge bg-light text-dark fs-6">
                            <i class="fas fa-map-marker-alt me-1"></i>
                            مبدا
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Transfer Arrow -->
    <div class="transfer-arrow">
        <i class="fas fa-arrow-down"></i>
    </div>

    <!-- Transfer Form -->
    <div class="row">
        <div class="col-12">
            <div class="transfer-form p-4">
                @using (Html.BeginForm("TransferServiceCategory", "DoctorServiceCategory", FormMethod.Post, 
                       new { id = "transferForm", @class = "needs-validation", novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.DoctorId)
                    @Html.HiddenFor(m => m.DoctorName)

                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger validation-summary" })

                    <!-- Target Service Category Selection -->
                    <div class="form-section">
                        <h5>
                            <i class="fas fa-stethoscope me-2"></i>
                            انتخاب دسته‌بندی خدمات مقصد
                        </h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.ServiceCategoryId, "دسته‌بندی خدمات مقصد", new { @class = "form-label fw-bold" })
                                    @Html.DropDownListFor(m => m.ServiceCategoryId, 
                                        new SelectList(ViewBag.ServiceCategories ?? new List<object>(), "Value", "Text"), 
                                        "انتخاب دسته‌بندی خدمات مقصد...", 
                                        new { @class = "form-select", required = "required" })
                                    @Html.ValidationMessageFor(m => m.ServiceCategoryId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.AuthorizationLevel, "سطح صلاحیت جدید", new { @class = "form-label fw-bold" })
                                    @Html.DropDownListFor(m => m.AuthorizationLevel, 
                                        new SelectList(new[] {
                                            new { Value = "مبتدی", Text = "مبتدی" },
                                            new { Value = "متوسط", Text = "متوسط" },
                                            new { Value = "پیشرفته", Text = "پیشرفته" },
                                            new { Value = "متخصص", Text = "متخصص" }
                                        }, "Value", "Text"), 
                                        "انتخاب سطح صلاحیت جدید...", 
                                        new { @class = "form-select", required = "required" })
                                    @Html.ValidationMessageFor(m => m.AuthorizationLevel, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Transfer Options -->
                    <div class="form-section">
                        <h5>
                            <i class="fas fa-cog me-2"></i>
                            تنظیمات انتقال
                        </h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="preservePermissions" checked />
                                        <label class="form-check-label" for="preservePermissions">
                                            حفظ صلاحیت‌های دپارتمانی
                                        </label>
                                    </div>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        صلاحیت‌های دپارتمانی پزشک حفظ خواهد شد
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check">
                                        @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input", @checked = "checked" })
                                        <label class="form-check-label" for="@Html.IdFor(m => m.IsActive)">
                                            صلاحیت فعال
                                        </label>
                                    </div>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        پزشک بلافاصله در دسته‌بندی جدید فعال خواهد بود
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Certificate Information -->
                    <div class="form-section">
                        <h5>
                            <i class="fas fa-certificate me-2"></i>
                            اطلاعات گواهی‌نامه جدید
                        </h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.CertificateNumber, "شماره گواهی‌نامه جدید", new { @class = "form-label fw-bold" })
                                    @Html.TextBoxFor(m => m.CertificateNumber, new { @class = "form-control", 
                                        placeholder = "شماره گواهی‌نامه جدید..." })
                                    @Html.ValidationMessageFor(m => m.CertificateNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.CertificateIssuingAuthority, "مرجع صدور جدید", new { @class = "form-label fw-bold" })
                                    @Html.TextBoxFor(m => m.CertificateIssuingAuthority, new { @class = "form-control", 
                                        placeholder = "مرجع صدور گواهی‌نامه جدید..." })
                                    @Html.ValidationMessageFor(m => m.CertificateIssuingAuthority, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="form-section">
                        <h5>
                            <i class="fas fa-comment me-2"></i>
                            توضیحات انتقال
                        </h5>
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.Description, "توضیحات", new { @class = "form-label fw-bold" })
                                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "3", 
                                        placeholder = "توضیحات مربوط به انتقال صلاحیت‌های خدماتی..." })
                                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Buttons -->
                    <div class="form-section">
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <a href="@Url.Action("Index", "Doctor")" class="btn btn-outline-secondary btn-submit">
                                        <i class="fas fa-times me-2"></i>
                                        انصراف
                                    </a>
                                    <button type="submit" class="btn btn-warning btn-submit">
                                        <i class="fas fa-exchange-alt me-2"></i>
                                        انتقال صلاحیت‌ها
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Content/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/Content/plugins/select2/js/select2.full.min.js"></script>
    <script>
        $(document).ready(function () {
            // Initialize Select2
            $('#ServiceCategoryId').select2({
                placeholder: 'انتخاب دسته‌بندی خدمات مقصد...',
                allowClear: true,
                language: 'fa'
            });

            $('#AuthorizationLevel').select2({
                placeholder: 'انتخاب سطح صلاحیت جدید...',
                allowClear: true,
                language: 'fa'
            });

            // Form submission
            $('#transferForm').on('submit', function (e) {
                e.preventDefault();
                
                if (!$(this)[0].checkValidity()) {
                    e.stopPropagation();
                    $(this).addClass('was-validated');
                    return false;
                }

                // Confirm transfer
                Swal.fire({
                    title: 'تأیید انتقال',
                    text: 'آیا از انتقال صلاحیت‌های خدماتی پزشک اطمینان دارید؟',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#ffc107',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'بله، انتقال بده',
                    cancelButtonText: 'انصراف'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Show loading overlay
                        $('.loading-overlay').show();
                        
                        // Submit form
                        this.submit();
                    }
                });
            });

            // Success message
            @if (TempData["Success"] != null)
            {
                <text>
                Swal.fire({
                    title: 'موفقیت',
                    text: '@TempData["Success"]',
                    icon: 'success',
                    confirmButtonText: 'باشه'
                });
                </text>
            }

            // Error message
            @if (TempData["Error"] != null)
            {
                <text>
                Swal.fire({
                    title: 'خطا',
                    text: '@TempData["Error"]',
                    icon: 'error',
                    confirmButtonText: 'باشه'
                });
                </text>
            }
        });
    </script>
}
