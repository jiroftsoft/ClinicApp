@* صفحه صلاحیت‌های دسته‌بندی خدمات پزشک - طراحی Ultimate برای محیط درمانی *@
@model ClinicApp.ViewModels.DoctorManagementVM.DoctorServiceCategoryPermissionsViewModel
@{
    ViewBag.Title = "صلاحیت‌های دسته‌بندی خدمات";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@Html.AntiForgeryToken()

@section Styles {
    <link href="~/Content/plugins/datatables/js/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/persian-datepicker/persian-datepicker.min.css" rel="stylesheet" />
    <style>
        .doctor-header {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            border-radius: 15px;
            padding: 2rem;
            color: white;
            margin-bottom: 2rem;
        }
        
        .doctor-info {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-bottom: 1.5rem;
        }
        
        .info-item {
            text-align: center;
        }
        
        .info-label {
            font-size: 0.9rem;
            opacity: 0.8;
            margin-bottom: 0.5rem;
        }
        
        .info-value {
            font-size: 1.1rem;
            font-weight: 600;
        }
        
        .service-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            border-left: 4px solid #28a745;
            transition: all 0.3s ease;
        }
        
        .service-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.12);
        }
        
        .service-card.inactive {
            border-left-color: #dc3545;
            opacity: 0.7;
        }
        
        .service-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }
        
        .service-name {
            font-size: 1.2rem;
            font-weight: 600;
            color: #333;
        }
        
        .service-status {
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 500;
        }
        
        .status-active {
            background: #d4edda;
            color: #155724;
        }
        
        .status-inactive {
            background: #f8d7da;
            color: #721c24;
        }
        
        .service-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 1rem;
            margin-bottom: 1rem;
        }
        
        .detail-item {
            text-align: center;
        }
        
        .detail-label {
            font-size: 0.8rem;
            color: #6c757d;
            margin-bottom: 0.25rem;
        }
        
        .detail-value {
            font-weight: 600;
            color: #333;
        }
        
        .certificate-info {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1rem;
        }
        
        .certificate-title {
            font-weight: 600;
            color: #495057;
            margin-bottom: 0.5rem;
        }
        
        .certificate-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
            gap: 0.5rem;
        }
        
        .action-buttons {
            display: flex;
            gap: 0.5rem;
            justify-content: flex-end;
        }
        
        .btn-action {
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .btn-action:hover {
            transform: scale(1.05);
        }
        
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255,255,255,0.9);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }
        
        .spinner {
            width: 50px;
            height: 50px;
            border: 5px solid #f3f3f3;
            border-top: 5px solid #f093fb;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }
        
        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .empty-state {
            text-align: center;
            padding: 3rem;
            color: #6c757d;
        }
        
        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }
        
        .permission-badge {
            background: #e3f2fd;
            color: #1976d2;
            padding: 0.25rem 0.5rem;
            border-radius: 10px;
            font-size: 0.8rem;
            margin: 0.25rem;
            display: inline-block;
        }
    </style>
}

<div class="loading-overlay">
    <div class="spinner"></div>
</div>

<div class="container-fluid">
    <!-- Doctor Header -->
    <div class="doctor-header">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="mb-2">
                    <i class="fas fa-user-md me-2"></i>
                    @(Model?.Doctor?.FullName ?? "پزشک")
                </h2>
                <p class="mb-0 opacity-75">مدیریت صلاحیت‌های دسته‌بندی خدمات</p>
            </div>
            <div class="col-md-4 text-end">
                                            <a href="@Url.Action("AssignToServiceCategory", new { doctorId = Model?.Doctor?.DoctorId })" class="btn btn-light">
                    <i class="fas fa-plus me-2"></i>
                    اعطای صلاحیت جدید
                </a>
            </div>
        </div>
        
        <div class="doctor-info">
            <div class="info-item">
                <div class="info-label">کد ملی</div>
                <div class="info-value">@(Model?.Doctor?.NationalCode ?? "-")</div>
            </div>
            <div class="info-item">
                <div class="info-label">شماره نظام پزشکی</div>
                <div class="info-value">@(Model?.Doctor?.MedicalCouncilCode ?? "-")</div>
            </div>
            <div class="info-item">
                <div class="info-label">تخصص</div>
                <div class="info-value">@string.Join("، ", Model?.Doctor?.SpecializationNames ?? new List<string>())</div>
            </div>
            <div class="info-item">
                <div class="info-label">وضعیت</div>
                <div class="info-value">
                    <span class="badge bg-success">فعال</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="row">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body text-center">
                            <h4 class="mb-1">@(Model?.Stats?.TotalPermissions ?? 0)</h4>
                            <small>کل صلاحیت‌ها</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body text-center">
                            <h4 class="mb-1">@(Model?.Stats?.ActivePermissions ?? 0)</h4>
                            <small>صلاحیت‌های فعال</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body text-center">
                            <h4 class="mb-1">@(Model?.Stats?.InactivePermissions ?? 0)</h4>
                            <small>صلاحیت‌های غیرفعال</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body text-center">
                            <h4 class="mb-1">@(Model?.Stats?.LastPermissionDate?.ToString("yyyy/MM/dd") ?? "-")</h4>
                            <small>آخرین صلاحیت</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Service Category Permissions -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-certificate me-2"></i>
                        صلاحیت‌های دسته‌بندی خدمات
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model?.Permissions != null && Model.Permissions.Any())
                    {
                        foreach (var permission in Model.Permissions)
                        {
                            <div class="service-card @(!permission.IsActive ? "inactive" : "")">
                                <div class="service-header">
                                    <div class="service-name">@permission.ServiceCategoryTitle</div>
                                    <div class="service-status @(permission.IsActive ? "status-active" : "status-inactive")">
                                        @(permission.IsActive ? "فعال" : "غیرفعال")
                                    </div>
                                </div>
                                
                                <div class="service-details">
                                    <div class="detail-item">
                                        <div class="detail-label">دپارتمان</div>
                                        <div class="detail-value">@(permission.DepartmentName ?? "-")</div>
                                    </div>
                                    <div class="detail-item">
                                        <div class="detail-label">تاریخ اعطا</div>
                                        <div class="detail-value">@(permission.GrantedDate?.ToString("yyyy/MM/dd") ?? "-")</div>
                                    </div>
                                    <div class="detail-item">
                                        <div class="detail-label">تاریخ انقضا</div>
                                        <div class="detail-value">@(permission.ExpiryDate?.ToString("yyyy/MM/dd") ?? "نامحدود")</div>
                                    </div>
                                    <div class="detail-item">
                                        <div class="detail-label">وضعیت</div>
                                        <div class="detail-value">
                                            <span class="badge bg-@(permission.IsActive ? "success" : "danger")">
                                                @(permission.IsActive ? "فعال" : "غیرفعال")
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(permission.CertificateNumber) || permission.GrantedDate.HasValue)
                                {
                                    <div class="certificate-info">
                                        <div class="certificate-title">
                                            <i class="fas fa-certificate me-2"></i>
                                            اطلاعات گواهی
                                        </div>
                                        <div class="certificate-details">
                                            @if (!string.IsNullOrEmpty(permission.CertificateNumber))
                                            {
                                                <div>
                                                    <strong>شماره گواهی:</strong> @permission.CertificateNumber
                                                </div>
                                            }
                                            @if (permission.GrantedDate.HasValue)
                                            {
                                                <div>
                                                    <strong>تاریخ اعطا:</strong> @permission.GrantedDate.Value.ToString("yyyy/MM/dd")
                                                </div>
                                            }
                                            @if (permission.ExpiryDate.HasValue)
                                            {
                                                <div>
                                                    <strong>تاریخ انقضا:</strong> @permission.ExpiryDate.Value.ToString("yyyy/MM/dd")
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                                
                                @if (!string.IsNullOrEmpty(permission.Notes))
                                {
                                    <div class="mb-3">
                                        <strong>یادداشت:</strong>
                                        <p class="mb-0 text-muted">@permission.Notes</p>
                                    </div>
                                }
                                
                                <div class="action-buttons">
                                    @if (permission.IsActive)
                                    {
                                        <button class="btn btn-warning btn-action" onclick="deactivatePermission('@permission.AssignmentId')">
                                            <i class="fas fa-pause me-1"></i>
                                            غیرفعال کردن
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-success btn-action" onclick="activatePermission('@permission.AssignmentId')">
                                            <i class="fas fa-play me-1"></i>
                                            فعال کردن
                                        </button>
                                    }
                                    
                                    <button class="btn btn-info btn-action" onclick="editPermission('@permission.AssignmentId')">
                                        <i class="fas fa-edit me-1"></i>
                                        ویرایش
                                    </button>
                                    
                                    <button class="btn btn-danger btn-action" onclick="removePermission('@permission.AssignmentId')">
                                        <i class="fas fa-trash me-1"></i>
                                        حذف
                                    </button>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-certificate"></i>
                            <h5>هیچ صلاحیت خدماتی یافت نشد</h5>
                            <p>این پزشک هنوز هیچ صلاحیت دسته‌بندی خدماتی ندارد</p>
                            <a href="@Url.Action("AssignToServiceCategory", new { doctorId = Model?.Doctor?.DoctorId })" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>
                                اعطای اولین صلاحیت
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/content/plugins/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/content/plugins/datatables/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/content/plugins/sweetalert2/sweetalert2@11.js"></script>
    <script src="~/content/plugins/persian-datepicker/persian-datepicker.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // Initialize any necessary components
        });

        function showLoading() {
            $('.loading-overlay').show();
        }

        function hideLoading() {
            $('.loading-overlay').hide();
        }

        function activatePermission(permissionId) {
            Swal.fire({
                title: 'فعال کردن صلاحیت',
                text: 'آیا از فعال کردن این صلاحیت اطمینان دارید؟',
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'بله، فعال کن',
                cancelButtonText: 'انصراف',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    showLoading();
                    
                    $.ajax({
                        url: '@Url.Action("ActivatePermission")',
                        type: 'POST',
                        data: { permissionId: permissionId },
                        success: function(response) {
                            if (response.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'موفق',
                                    text: 'صلاحیت با موفقیت فعال شد',
                                    timer: 2000,
                                    showConfirmButton: false
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'خطا',
                                    text: response.message || 'خطا در فعال کردن صلاحیت'
                                });
                            }
                        },
                        error: function() {
                            Swal.fire({
                                icon: 'error',
                                title: 'خطا',
                                text: 'خطا در ارتباط با سرور'
                            });
                        },
                        complete: function() {
                            hideLoading();
                        }
                    });
                }
            });
        }

        function deactivatePermission(permissionId) {
            Swal.fire({
                title: 'غیرفعال کردن صلاحیت',
                text: 'آیا از غیرفعال کردن این صلاحیت اطمینان دارید؟',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'بله، غیرفعال کن',
                cancelButtonText: 'انصراف',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    showLoading();
                    
                    $.ajax({
                        url: '@Url.Action("DeactivatePermission")',
                        type: 'POST',
                        data: { permissionId: permissionId },
                        success: function(response) {
                            if (response.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'موفق',
                                    text: 'صلاحیت با موفقیت غیرفعال شد',
                                    timer: 2000,
                                    showConfirmButton: false
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'خطا',
                                    text: response.message || 'خطا در غیرفعال کردن صلاحیت'
                                });
                            }
                        },
                        error: function() {
                            Swal.fire({
                                icon: 'error',
                                title: 'خطا',
                                text: 'خطا در ارتباط با سرور'
                            });
                        },
                        complete: function() {
                            hideLoading();
                        }
                    });
                }
            });
        }

        function editPermission(permissionId) {
            window.location.href = '@Url.Action("EditPermission")?permissionId=' + permissionId;
        }

        function removePermission(permissionId) {
            Swal.fire({
                title: 'حذف صلاحیت',
                text: 'آیا از حذف این صلاحیت اطمینان دارید؟ این عملیات غیرقابل بازگشت است.',
                icon: 'error',
                showCancelButton: true,
                confirmButtonText: 'بله، حذف کن',
                cancelButtonText: 'انصراف',
                reverseButtons: true,
                confirmButtonColor: '#dc3545'
            }).then((result) => {
                if (result.isConfirmed) {
                    showLoading();
                    
                    $.ajax({
                        url: '@Url.Action("RemovePermission")',
                        type: 'POST',
                        data: { permissionId: permissionId },
                        success: function(response) {
                            if (response.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'موفق',
                                    text: 'صلاحیت با موفقیت حذف شد',
                                    timer: 2000,
                                    showConfirmButton: false
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'خطا',
                                    text: response.message || 'خطا در حذف صلاحیت'
                                });
                            }
                        },
                        error: function() {
                            Swal.fire({
                                icon: 'error',
                                title: 'خطا',
                                text: 'خطا در ارتباط با سرور'
                            });
                        },
                        complete: function() {
                            hideLoading();
                        }
                    });
                }
            });
        }
    </script>
}
