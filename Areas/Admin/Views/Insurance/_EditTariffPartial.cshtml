@model ClinicApp.ViewModels.EditInsuranceTariffViewModel

@using (Ajax.BeginForm("UpdateTariff", "Insurance", new AjaxOptions { HttpMethod = "POST", OnSuccess = "onTariffSuccess", OnFailure = "onTariffFailure" }, new { id = "editTariffForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.InsuranceTariffId)
    @Html.HiddenFor(model => model.ServiceId)

    <div class="alert alert-info">
        <strong>خدمت:</strong> @Model.ServiceTitle
    </div>

    <div class="row g-3">
        <div class="col-md-4">
            <label for="TariffPrice" class="form-label">قیمت تعرفه</label>
            @Html.TextBoxFor(m => m.TariffPrice, new { @class = "form-control", type = "number" })
            @Html.ValidationMessageFor(model => model.TariffPrice, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-4">
            <label for="PatientShare" class="form-label">سهم بیمار (%)</label>
            @Html.TextBoxFor(m => m.PatientShare, new { @class = "form-control", type = "number" })
            @Html.ValidationMessageFor(model => model.PatientShare, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-4">
            <label for="InsurerShare" class="form-label">سهم بیمه (%)</label>
            @Html.TextBoxFor(m => m.InsurerShare, new { @class = "form-control", type = "number" })
            @Html.ValidationMessageFor(model => model.InsurerShare, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="modal-footer mt-3">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
    </div>
}

<script>
    $.validator.unobtrusive.parse("#editTariffForm");

    // توابع onTariffSuccess و onTariffFailure از فرم افزودن تعرفه به صورت مشترک استفاده می‌شوند.
</script>