@model ClinicApp.ViewModels.InsuranceTariffsViewModel
@{
    ViewBag.Title = "مدیریت تعرفه‌های بیمه: " + Model.InsuranceName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 mb-0">مدیریت تعرفه‌های بیمه: @Model.InsuranceName</h1>
        <button id="btnAddTariff" class="btn btn-primary d-flex align-items-center">
            <i class="fas fa-plus-circle mr-1"></i> افزودن تعرفه جدید
        </button>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center">
                <div class="col-md-6 mb-2 mb-md-0">
                    <div class="input-group">
                        <input type="text" id="searchTerm" class="form-control" placeholder="جستجو در نام خدمات...">
                        <div class="input-group-append">
                            <button id="btnSearch" class="btn btn-outline-secondary" type="button">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 text-md-right">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="showAllServices" checked>
                        <label class="form-check-label" for="showAllServices">نمایش تمام خدمات</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div id="tariffListContainer">
                @Html.Partial("_TariffListPartial", Model.Tariffs)
            </div>
        </div>
    </div>
</div>

<div id="modalContainer"></div>

@section styles {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
}

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            // افزودن تعرفه جدید
            $('#btnAddTariff').click(function () {
                const insuranceId = @Model.InsuranceId;
                $.ajax({
                    url: '@Url.Action("CreateTariff", "Insurance")',
                    type: 'GET',
                    data: { insuranceId: insuranceId },
                    beforeSend: function () {
                        $('#btnAddTariff').prop('disabled', true);
                        $('#btnAddTariff').html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> در حال بارگیری...');
                    },
                    success: function (result) {
                        $('#modalContainer').html(result);
                        $('#tariffModal').modal('show');
                    },
                    error: function (xhr) {
                        showErrorAlert('خطا در بارگیری فرم ایجاد تعرفه');
                    },
                    complete: function () {
                        $('#btnAddTariff').prop('disabled', false);
                        $('#btnAddTariff').html('<i class="fas fa-plus-circle mr-1"></i> افزودن تعرفه جدید');
                    }
                });
            });

            // جستجو
            $('#btnSearch').click(function () {
                filterTariffs();
            });

            // جستجو با Enter
            $('#searchTerm').keypress(function (e) {
                if (e.which === 13) {
                    filterTariffs();
                    return false;
                }
            });

            // نمایش/مخفی کردن خدمات تعریف شده
            $('#showAllServices').change(function () {
                if ($(this).is(':checked')) {
                    $('.existing-tariff').show();
                } else {
                    $('.existing-tariff').hide();
                }
            });
        });

        function filterTariffs() {
            const searchTerm = $('#searchTerm').val().trim().toLowerCase();
            const showAll = $('#showAllServices').is(':checked');

            $('.tariff-row').each(function () {
                const serviceTitle = $(this).data('service-title').toLowerCase();
                const isExisting = $(this).hasClass('existing-tariff');

                let show = serviceTitle.includes(searchTerm);
                if (!showAll && isExisting) {
                    show = false;
                }

                if (show) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        }

        function loadTariffs() {
            const insuranceId = @Model.InsuranceId;

            $.ajax({
                url: '@Url.Action("LoadTariffs", "Insurance")',
                type: 'POST',
                data: { insuranceId: insuranceId },
                beforeSend: function () {
                    $('#tariffListContainer').html(`
                        <div class="text-center p-4">
                            <div class="spinner-border text-primary" role="status">
                                <span class="sr-only">در حال بارگیری...</span>
                            </div>
                        </div>
                    `);
                },
                success: function (result) {
                    $('#tariffListContainer').html(result);
                },
                error: function (xhr) {
                    $('#tariffListContainer').html(`
                        <div class="alert alert-danger text-center m-3">
                            خطایی در بارگیری تعرفه‌ها رخ داده است.
                        </div>
                    `);
                }
            });
        }

        function deleteTariff(tariffId) {
            Swal.fire({
                title: 'تایید حذف',
                text: "آیا از حذف این تعرفه اطمینان دارید؟",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'بله، حذف کن',
                cancelButtonText: 'لغو'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("DeleteTariff", "Insurance")',
                        type: 'POST',
                        data: { id: tariffId },
                        beforeSend: function () {
                            Swal.fire({
                                title: 'در حال پردازش...',
                                text: 'لطفاً منتظر بمانید',
                                allowOutsideClick: false,
                                didOpen: () => {
                                    Swal.showLoading();
                                }
                            });
                        },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire(
                                    'حذف شد!',
                                    response.message,
                                    'success'
                                ).then(() => {
                                    loadTariffs();
                                });
                            } else {
                                Swal.fire(
                                    'خطا!',
                                    response.message,
                                    'error'
                                );
                            }
                        },
                        error: function (xhr) {
                            Swal.fire(
                                'خطا!',
                                'خطای سیستمی رخ داده است. لطفاً بعداً مجدداً تلاش کنید.',
                                'error'
                            );
                        }
                    });
                }
            });
        }

        function showErrorAlert(message) {
            Swal.fire({
                icon: 'error',
                title: 'خطا',
                text: message,
                confirmButtonText: 'بستن'
            });
        }
    </script>
}