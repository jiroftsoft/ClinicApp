@{
    ViewBag.Title = "محاسبه بیمه ترکیبی (اصلی + تکمیلی)";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <style>
        .calculation-card {
            border: 1px solid #e3e6f0;
            border-radius: 0.35rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }
        
        .result-card {
            background: linear-gradient(45deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        
        .coverage-badge {
            font-size: 0.875rem;
            padding: 0.375rem 0.75rem;
        }
        
        .medical-icon {
            color: #1cc88a;
        }
        
        .calculation-step {
            border-left: 3px solid #1cc88a;
            padding-left: 1rem;
            margin-bottom: 1rem;
        }
        
        .amount-display {
            font-size: 1.25rem;
            font-weight: 600;
        }
        
        .percentage-display {
            font-size: 1.1rem;
            font-weight: 500;
        }
    </style>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-calculator medical-icon"></i> محاسبه بیمه ترکیبی</h2>
                <div class="text-muted">
                    <small>محاسبه دقیق سهم بیمه اصلی و تکمیلی</small>
                </div>
            </div>

            <!-- فرم محاسبه -->
            <div class="row">
                <div class="col-lg-8">
                    <div class="card calculation-card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-user-md"></i> اطلاعات محاسبه
                            </h5>
                        </div>
                        <div class="card-body">
                            <form id="calculationForm">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="patientId" class="form-label">بیمار</label>
                                            <select id="patientId" name="patientId" class="form-control" required>
                                                <option value="">انتخاب بیمار...</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="serviceId" class="form-label">خدمت</label>
                                            <select id="serviceId" name="serviceId" class="form-control" required>
                                                <option value="">انتخاب خدمت...</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="serviceAmount" class="form-label">مبلغ خدمت (تومان)</label>
                                            <input type="number" id="serviceAmount" name="serviceAmount" class="form-control" 
                                                   placeholder="مبلغ خدمت را وارد کنید" required min="0" step="1000">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="calculationDate" class="form-label">تاریخ محاسبه</label>
                                            <input type="date" id="calculationDate" name="calculationDate" class="form-control" 
                                                   value="@DateTime.Now.ToString("yyyy-MM-dd")">
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-12">
                                        <button type="submit" class="btn btn-primary btn-lg">
                                            <i class="fas fa-calculator"></i> محاسبه بیمه ترکیبی
                                        </button>
                                        <button type="button" id="clearForm" class="btn btn-secondary btn-lg ml-2">
                                            <i class="fas fa-eraser"></i> پاک کردن
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4">
                    <div class="card calculation-card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-info-circle"></i> راهنمای محاسبه
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="calculation-step">
                                <h6><i class="fas fa-shield-alt"></i> بیمه اصلی</h6>
                                <p class="mb-0">پوشش اولیه (معمولاً 70%)</p>
                            </div>
                            
                            <div class="calculation-step">
                                <h6><i class="fas fa-plus-circle"></i> بیمه تکمیلی</h6>
                                <p class="mb-0">پوشش اضافی از باقی‌مانده</p>
                            </div>
                            
                            <div class="calculation-step">
                                <h6><i class="fas fa-user"></i> سهم بیمار</h6>
                                <p class="mb-0">مبلغ نهایی پرداختی بیمار</p>
                            </div>
                            
                            <div class="alert alert-info mt-3">
                                <i class="fas fa-lightbulb"></i>
                                <strong>نکته:</strong> محاسبه بر اساس استانداردهای پزشکی ایران انجام می‌شود.
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- نتایج محاسبه -->
            <div id="calculationResults" class="row mt-4" style="display: none;">
                <div class="col-12">
                    <div class="card result-card">
                        <div class="card-header">
                            <h5 class="card-title mb-0 text-white">
                                <i class="fas fa-chart-pie"></i> نتایج محاسبه بیمه ترکیبی
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="text-center">
                                        <h6 class="text-white-50">مبلغ کل خدمت</h6>
                                        <h4 class="text-white" id="totalServiceAmount">0 تومان</h4>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="text-center">
                                        <h6 class="text-white-50">پوشش بیمه اصلی</h6>
                                        <h4 class="text-white" id="primaryCoverage">0 تومان</h4>
                                        <small class="text-white-50" id="primaryCoveragePercent">0%</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="text-center">
                                        <h6 class="text-white-50">پوشش بیمه تکمیلی</h6>
                                        <h4 class="text-white" id="supplementaryCoverage">0 تومان</h4>
                                        <small class="text-white-50" id="supplementaryCoveragePercent">0%</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="text-center">
                                        <h6 class="text-white-50">سهم نهایی بیمار</h6>
                                        <h4 class="text-white" id="finalPatientShare">0 تومان</h4>
                                        <small class="text-white-50" id="patientSharePercent">0%</small>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row mt-4">
                                <div class="col-12">
                                    <div class="alert alert-light">
                                        <h6><i class="fas fa-info-circle"></i> جزئیات محاسبه</h6>
                                        <div id="calculationDetails">
                                            <!-- جزئیات محاسبه اینجا نمایش داده می‌شود -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            console.log('🏥 MEDICAL: صفحه محاسبه بیمه ترکیبی بارگذاری شد');
            
            // بارگیری لیست بیماران
            loadPatients();
            
            // بارگیری لیست خدمات
            loadServices();
            
            // مدیریت فرم
            $('#calculationForm').on('submit', function(e) {
                e.preventDefault();
                calculateCombinedInsurance();
            });
            
            // پاک کردن فرم
            $('#clearForm').on('click', function() {
                $('#calculationForm')[0].reset();
                $('#calculationResults').hide();
            });
        });
        
        function loadPatients() {
            // TODO: بارگیری لیست بیماران از API
            console.log('🏥 MEDICAL: بارگیری لیست بیماران...');
        }
        
        function loadServices() {
            // TODO: بارگیری لیست خدمات از API
            console.log('🏥 MEDICAL: بارگیری لیست خدمات...');
        }
        
        function calculateCombinedInsurance() {
            var formData = {
                patientId: $('#patientId').val(),
                serviceId: $('#serviceId').val(),
                serviceAmount: $('#serviceAmount').val(),
                calculationDate: $('#calculationDate').val()
            };
            
            console.log('🏥 MEDICAL: شروع محاسبه بیمه ترکیبی', formData);
            
            // نمایش loading
            showLoadingIndicator();
            
            $.ajax({
                url: '@Url.Action("Calculate", "CombinedInsuranceCalculation")',
                type: 'POST',
                data: formData,
                success: function(response) {
                    hideLoadingIndicator();
                    
                    if (response.success) {
                        console.log('🏥 MEDICAL: محاسبه موفق', response.data);
                        displayCalculationResults(response.data);
                    } else {
                        console.error('🏥 MEDICAL: خطا در محاسبه', response.message);
                        showError(response.message);
                    }
                },
                error: function(xhr, status, error) {
                    hideLoadingIndicator();
                    console.error('🏥 MEDICAL: خطای AJAX', error);
                    showError('خطا در ارتباط با سرور');
                }
            });
        }
        
        function displayCalculationResults(data) {
            // نمایش نتایج
            $('#totalServiceAmount').text(data.serviceAmount.toLocaleString() + ' تومان');
            $('#primaryCoverage').text(data.primaryCoverage.toLocaleString() + ' تومان');
            $('#primaryCoveragePercent').text(data.primaryCoveragePercent.toFixed(1) + '%');
            $('#supplementaryCoverage').text(data.supplementaryCoverage.toLocaleString() + ' تومان');
            $('#supplementaryCoveragePercent').text(data.supplementaryCoveragePercent.toFixed(1) + '%');
            $('#finalPatientShare').text(data.finalPatientShare.toLocaleString() + ' تومان');
            $('#patientSharePercent').text(data.patientSharePercent.toFixed(1) + '%');
            
            // جزئیات محاسبه
            var details = `
                <div class="row">
                    <div class="col-md-6">
                        <strong>وضعیت پوشش:</strong> <span class="badge badge-${data.coverageStatusColor}">${data.coverageStatus}</span>
                    </div>
                    <div class="col-md-6">
                        <strong>کل پوشش بیمه:</strong> ${data.totalInsuranceCoverage.toLocaleString()} تومان (${data.totalCoveragePercent.toFixed(1)}%)
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <strong>صرفه‌جویی از بیمه تکمیلی:</strong> ${data.supplementarySavings.toLocaleString()} تومان
                    </div>
                    <div class="col-md-6">
                        <strong>تاریخ محاسبه:</strong> ${new Date(data.calculationDate).toLocaleDateString('fa-IR')}
                    </div>
                </div>
            `;
            
            if (data.notes) {
                details += `<div class="row mt-2"><div class="col-12"><strong>توضیحات:</strong> ${data.notes}</div></div>`;
            }
            
            $('#calculationDetails').html(details);
            $('#calculationResults').show();
            
            console.log('🏥 MEDICAL: نتایج محاسبه نمایش داده شد');
        }
        
        function showLoadingIndicator() {
            // TODO: نمایش loading indicator
            console.log('🏥 MEDICAL: نمایش loading indicator');
        }
        
        function hideLoadingIndicator() {
            // TODO: مخفی کردن loading indicator
            console.log('🏥 MEDICAL: مخفی کردن loading indicator');
        }
        
        function showError(message) {
            // TODO: نمایش پیام خطا
            console.error('🏥 MEDICAL: خطا', message);
            alert('خطا: ' + message);
        }
    </script>
}
