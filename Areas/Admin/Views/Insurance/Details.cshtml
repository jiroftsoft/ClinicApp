@model ClinicApp.ViewModels.InsuranceDetailsViewModel
@{
    ViewBag.Title = "جزئیات بیمه: " + Model.Name;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .insurance-details-card {
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        border: 1px solid #e0e6ed;
        overflow: hidden;
    }

    .insurance-header {
        background: linear-gradient(to right, #0d6ab2, #0a58ca);
        color: white;
        padding: 1.5rem;
        border-radius: 12px 12px 0 0;
    }

        .insurance-header h2 {
            font-weight: 600;
            margin-bottom: 0;
            display: flex;
            align-items: center;
        }

            .insurance-header h2 i {
                margin-left: 10px;
            }

    .status-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
        display: inline-block;
    }

    .status-active {
        background-color: #e6f4ea;
        color: #137333;
    }

    .status-inactive {
        background-color: #f0f0f0;
        color: #6c757d;
    }

    .insurance-info {
        padding: 1.5rem;
    }

    .info-section {
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid #e0e6ed;
    }

        .info-section:last-child {
            margin-bottom: 0;
            padding-bottom: 0;
            border-bottom: none;
        }

    .info-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #0d6ab2;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
    }

        .info-title i {
            margin-left: 10px;
        }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .info-item {
        margin-bottom: 1rem;
    }

        .info-item label {
            font-weight: 600;
            color: #6c757d;
            margin-bottom: 0.5rem;
            display: block;
        }

        .info-item .value {
            font-size: 1.1rem;
            font-weight: 500;
        }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
        justify-content: flex-end;
        margin-top: 1.5rem;
    }

    .btn-action {
        border-radius: 8px;
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-edit {
        background-color: #fff8e6;
        color: #e0a800;
    }

        .btn-edit:hover {
            background-color: #ffeec9;
        }

    .btn-manage-tariffs {
        background-color: #e9f2fa;
        color: #0d6ab2;
    }

        .btn-manage-tariffs:hover {
            background-color: #d4e3f5;
        }

    .btn-back {
        background-color: #f0f0f0;
        color: #6c757d;
    }

        .btn-back:hover {
            background-color: #e0e0e0;
        }

    .tariffs-container {
        margin-top: 2rem;
    }

    .tariffs-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .tariffs-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #0d6ab2;
        display: flex;
        align-items: center;
    }

        .tariffs-title i {
            margin-left: 10px;
        }

    .btn-add-tariff {
        background: linear-gradient(to right, #0d6ab2, #0a58ca);
        border: none;
        color: white;
        border-radius: 8px;
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .btn-add-tariff:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(13, 106, 202, 0.25);
        }

    .table-tariffs {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin-top: 1rem;
    }

        .table-tariffs th {
            background-color: #e9f2fa;
            color: #0d6ab2;
            font-weight: 600;
            padding: 0.75rem 1rem;
            border-top: none;
            border-bottom: 2px solid #0d6ab2;
            text-align: right;
        }

        .table-tariffs td {
            padding: 0.75rem 1rem;
            vertical-align: middle;
            text-align: right;
            border-bottom: 1px solid #e0e6ed;
        }

        .table-tariffs tbody tr:hover {
            background-color: #f0f7ff;
        }

        .table-tariffs .actions {
            display: flex;
            gap: 0.5rem;
            justify-content: center;
        }

    .btn-tariff {
        border-radius: 6px;
        padding: 0.25rem 0.75rem;
        font-size: 0.85rem;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
    }

    .btn-edit-tariff {
        background-color: #fff8e6;
        color: #e0a800;
    }

        .btn-edit-tariff:hover {
            background-color: #ffeec9;
        }

    .btn-delete-tariff {
        background-color: #ffebee;
        color: #d32f2f;
    }

        .btn-delete-tariff:hover {
            background-color: #ffcdd2;
        }

    .audit-info {
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e0e6ed;
        color: #6c757d;
        font-size: 0.9rem;
    }

    .audit-title {
        font-weight: 600;
        color: #0d6ab2;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
</style>

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="insurance-details-card">
                <div class="insurance-header">
                    <h2>
                        <i class="fas fa-shield-alt"></i>
                        @Model.Name
                        <span class="status-badge @(Model.IsActive ? "status-active" : "status-inactive")" style="margin-right: 10px;">
                            @(Model.IsActive ? "فعال" : "غیرفعال")
                        </span>
                    </h2>
                </div>
                <div class="insurance-info">
                    <div class="info-section">
                        <h3 class="info-title">
                            <i class="fas fa-info-circle"></i>
                            اطلاعات کلی
                        </h3>
                        <div class="info-grid">
                            <div class="info-item">
                                <label>نام بیمه</label>
                                <div class="value">@Model.Name</div>
                            </div>
                            <div class="info-item">
                                <label>توضیحات</label>
                                <div class="value">@(!string.IsNullOrEmpty(Model.Description) ? Model.Description : "-")</div>
                            </div>
                            <div class="info-item">
                                <label>سهم پیش‌فرض بیمار</label>
                                <div class="value">@Model.DefaultPatientShare%</div>
                            </div>
                            <div class="info-item">
                                <label>سهم پیش‌فرض بیمه</label>
                                <div class="value">@Model.DefaultInsurerShare%</div>
                            </div>
                            <div class="info-item">
                                <label>تعداد تعرفه‌ها</label>
                                <div class="value">@Model.TariffCount</div>
                            </div>
                            <div class="info-item">
                                <label>وضعیت</label>
                                <div class="value">
                                    <span class="status-badge @(Model.IsActive ? "status-active" : "status-inactive")">
                                        @(Model.IsActive ? "فعال" : "غیرفعال")
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="tariffs-container">
                        <div class="tariffs-header">
                            <h3 class="tariffs-title">
                                <i class="fas fa-list"></i>
                                لیست تعرفه‌های بیمه
                            </h3>
                            <a href="@Url.Action("ManageTariffs", "Insurance", new { insuranceId = Model.InsuranceId })" class="btn-add-tariff">
                                <i class="fas fa-plus"></i>
                                مدیریت تعرفه‌ها
                            </a>
                        </div>
                        <div id="tariffs-list">
                            @Html.Partial("_InsuranceTariffsListPartial", Model.Tariffs)
                        </div>
                    </div>

                    <div class="audit-info">
                        <div class="audit-title">
                            <i class="fas fa-history"></i>
                            اطلاعات ردیابی
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="info-item">
                                    <label>ایجاد شده توسط</label>
                                    <div class="value">@Model.CreatedByUser</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="info-item">
                                    <label>تاریخ ایجاد</label>
                                    <div class="value">@Model.CreatedAtShamsi</div>
                                </div>
                            </div>
                            @if (Model.UpdatedAt.HasValue)
                            {
                                <div class="col-md-4">
                                    <div class="info-item">
                                        <label>آخرین ویرایش</label>
                                        <div class="value">
                                            @Model.UpdatedAtShamsi توسط @Model.UpdatedByUser
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="action-buttons">
                        <a href="@Url.Action("Index", "Insurance")" class="btn-action btn-back">
                            <i class="fas fa-arrow-left"></i>
                            بازگشت به لیست
                        </a>
                        <a href="@Url.Action("Edit", "Insurance", new { id = Model.InsuranceId })" class="btn-action btn-edit">
                            <i class="fas fa-edit"></i>
                            ویرایش
                        </a>
                        <a href="@Url.Action("ManageTariffs", "Insurance", new { insuranceId = Model.InsuranceId })" class="btn-action btn-manage-tariffs">
                            <i class="fas fa-list"></i>
                            مدیریت تعرفه‌ها
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>