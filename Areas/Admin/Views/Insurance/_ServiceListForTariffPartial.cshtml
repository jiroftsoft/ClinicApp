@model List<ClinicApp.Interfaces.ServiceSelectItem>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
        <h5 class="card-title mb-0">خدمات موجود</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0">
                <thead class="thead-light">
                    <tr>
                        <th>نام خدمت</th>
                        <th>کد خدمت</th>
                        <th>قیمت پایه</th>
                        <th>دسته‌بندی</th>
                        <th class="text-center">عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var service in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => service.Title)</td>
                                <td>@Html.DisplayFor(modelItem => service.ServiceCode)</td>
                                <td>@string.Format("{0:N0}", service.Price)</td>
                                <td>@Html.DisplayFor(modelItem => service.CategoryTitle)</td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-sm btn-primary btn-add-service"
                                            data-service-id="@service.ServiceId"
                                            data-service-title="@service.Title"
                                            data-service-price="@service.Price">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4">
                                <div class="text-muted">هیچ خدمتی یافت نشد</div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('.btn-add-service').click(function () {
            const serviceId = $(this).data('service-id');
            const serviceTitle = $(this).data('service-title');
            const servicePrice = $(this).data('service-price');

            // بررسی اینکه آیا این خدمت قبلاً اضافه شده است
            if ($(`#tariffsTable tr[data-service-id="${serviceId}"]`).length > 0) {
                Swal.fire({
                    icon: 'warning',
                    title: 'توجه',
                    text: 'این خدمت قبلاً به لیست تعرفه‌ها اضافه شده است.',
                    confirmButtonText: 'باشه'
                });
                return;
            }

            // ایجاد سطر جدید
            const newRow = `
                <tr data-service-id="${serviceId}">
                    <td>${serviceTitle}</td>
                    <td>
                        <input type="number" class="form-control tariff-price" value="${servicePrice}" min="0" step="1">
                    </td>
                    <td>
                        <div class="input-group">
                            <input type="number" class="form-control patient-share" value="30" min="0" max="100" step="0.01">
                            <div class="input-group-append">
                                <span class="input-group-text">%</span>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="input-group">
                            <input type="number" class="form-control insurer-share" value="70" min="0" max="100" step="0.01">
                            <div class="input-group-append">
                                <span class="input-group-text">%</span>
                            </div>
                        </div>
                    </td>
                    <td class="text-center">
                        <button type="button" class="btn btn-sm btn-danger btn-remove-service">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </td>
                </tr>
            `;

            $('#tariffsTable tbody').append(newRow);

            // محاسبه خودکار سهم بیمه بر اساس سهم بیمار
            $(newRow).find('.patient-share').on('input', function() {
                const patientShare = parseFloat($(this).val()) || 0;
                if (patientShare >= 0 && patientShare <= 100) {
                    $(this).closest('tr').find('.insurer-share').val((100 - patientShare).toFixed(2));
                }
            });

            // محاسبه خودکار سهم بیمار بر اساس سهم بیمه
            $(newRow).find('.insurer-share').on('input', function() {
                const insurerShare = parseFloat($(this).val()) || 0;
                if (insurerShare >= 0 && insurerShare <= 100) {
                    $(this).closest('tr').find('.patient-share').val((100 - insurerShare).toFixed(2));
                }
            });
        });

        $(document).on('click', '.btn-remove-service', function() {
            $(this).closest('tr').remove();
        });
    });
</script>