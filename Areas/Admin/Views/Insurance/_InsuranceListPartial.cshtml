@model ClinicApp.Interfaces.PagedResult<ClinicApp.ViewModels.InsuranceViewModel>

@if (Model != null && Model.Items.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover table-sm">
            <thead>
                <tr>
                    <th>نام بیمه</th>
                    <th>سهم بیمار</th>
                    <th>سهم بیمه</th>
                    <th>تعداد تعرفه‌ها</th>
                    <th>وضعیت</th>
                    <th class="text-center">عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr data-id="@item.InsuranceId">
                        <td>@item.Name</td>
                        <td>@item.DefaultPatientShare%</td>
                        <td>@item.DefaultInsurerShare%</td>
                        <td>@item.TariffCount</td>
                        <td>
                            <span class="badge @(item.IsActive ? "badge-success" : "badge-secondary")">
                                @(item.IsActive ? "فعال" : "غیرفعال")
                            </span>
                        </td>
                        <td class="text-center">
                            <div class="btn-group btn-group-sm">
                                <button type="button"
                                        class="btn btn-sm btn-outline-primary btn-details"
                                        data-id="@item.InsuranceId"
                                        data-name="@item.Name"
                                        title="جزئیات">
                                    <i class="fas fa-info-circle"></i>
                                </button>
                                <button type="button"
                                        class="btn btn-sm btn-outline-warning btn-edit"
                                        data-id="@item.InsuranceId"
                                        data-name="@item.Name"
                                        title="ویرایش">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button type="button"
                                        class="btn btn-sm btn-outline-danger btn-delete"
                                        data-id="@item.InsuranceId"
                                        data-name="@item.Name"
                                        title="حذف">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- صفحه‌بندی -->
    <div class="d-flex justify-content-between align-items-center p-3 border-top bg-light">
        <div>
            نمایش @((Model.PageNumber - 1) * Model.PageSize + 1) تا @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalItems)) از @Model.TotalItems مورد
        </div>
        <nav>
            <ul class="pagination mb-0">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="#" data-page="1">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#" data-page="@Model.PreviousPageNumber">
                            قبلی
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">
                            <span aria-hidden="true">&laquo;</span>
                        </span>
                    </li>
                    <li class="page-item disabled">
                        <span class="page-link">قبلی</span>
                    </li>
                }

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" href="#" data-page="@i">@i</a>
                    </li>
                }

                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="#" data-page="@Model.NextPageNumber">
                            بعدی
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#" data-page="@Model.TotalPages">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">بعدی</span>
                    </li>
                    <li class="page-item disabled">
                        <span class="page-link">
                            <span aria-hidden="true">&raquo;</span>
                        </span>
                    </li>
                }
            </ul>
        </nav>
    </div>
}
else
{
    <div class="alert alert-info text-center m-3">
        <i class="fas fa-info-circle"></i> هیچ بیمه‌ای یافت نشد.
    </div>
}