@model List<ClinicApp.ViewModels.InsuranceTariffViewModel>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table-tariffs">
            <thead>
                <tr>
                    <th>نام خدمت</th>
                    <th>قیمت تعرفه‌ای</th>
                    <th>سهم بیمار</th>
                    <th>سهم بیمه</th>
                    <th>تاریخ ایجاد</th>
                    <th class="text-center">عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr data-id="@item.InsuranceTariffId">
                        <td>@item.ServiceTitle</td>
                        <td>@(item.TariffPrice.HasValue ? item.TariffPrice.Value.ToString("N0") + " ریال" : "-")</td>
                        <td>@(item.PatientShare.HasValue ? item.PatientShare.Value.ToString("0.##") + "%" : "-")</td>
                        <td>@(item.InsurerShare.HasValue ? item.InsurerShare.Value.ToString("0.##") + "%" : "-")</td>
                        <td>@item.CreatedAtShamsi</td>
                        <td class="text-center actions">
                            <button type="button"
                                    class="btn-tariff btn-edit-tariff"
                                    data-id="@item.InsuranceTariffId"
                                    data-name="@item.ServiceTitle"
                                    title="ویرایش">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button type="button"
                                    class="btn-tariff btn-delete-tariff"
                                    data-id="@item.InsuranceTariffId"
                                    data-name="@item.ServiceTitle"
                                    title="حذف">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center m-3">
        <i class="fas fa-info-circle"></i> هیچ تعرفه‌ای برای این بیمه تعریف نشده است.
    </div>
}