@using ClinicApp.Helpers
@model ClinicApp.ViewModels.ServiceCategoryCreateEditViewModel
@{
    ViewBag.Title = "ایجاد دسته‌بندی خدمات جدید";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- بسته‌های CSS مورد نیاز -->
@section Styles {
    <link href="~/Content/plugins/select2/css/select2.min.css" rel="stylesheet" />
    <style>
        /* استایل‌های اختصاصی برای فرم ایجاد دسته‌بندی خدمات */
        .form-section {
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
            margin-bottom: 20px;
        }

        .form-section-title {
            font-weight: 600;
            color: #1a6dcc;
            margin-bottom: 15px;
            padding-bottom: 8px;
            border-bottom: 1px solid #eee;
        }

        .required:after {
            content: " *";
            color: #d32f2f;
            margin-right: 2px;
        }

        .btn-submit {
            background: linear-gradient(135deg, #1a6dcc 0%, #0d4a9e 100%);
            color: white;
            border: none;
            padding: 8px 20px;
            border-radius: 22px;
            font-weight: 500;
            transition: all 0.2s;
        }

            .btn-submit:hover {
                transform: translateY(-1px);
                box-shadow: 0 3px 8px rgba(26, 109, 204, 0.4);
            }

        .btn-cancel {
            background-color: #f1f3f5;
            color: #495057;
            border-radius: 22px;
            padding: 8px 20px;
            transition: all 0.2s;
        }

            .btn-cancel:hover {
                background-color: #e9ecef;
            }

        .form-control:focus {
            border-color: #1a6dcc;
            box-shadow: 0 0 0 0.2rem rgba(26, 109, 204, 0.25);
        }

        .select2-container .select2-selection--single {
            height: 40px;
            padding: 6px 12px;
        }

        .select2-container--default .select2-selection--single .select2-selection__rendered {
            line-height: 28px;
        }

        .select2-container--default .select2-selection--single .select2-selection__arrow {
            height: 38px;
        }

        /* استایل‌های موبایل */
        @@media (max-width: 768px) {
            .form-section {
                padding: 15px;
            }

            .btn-submit, .btn-cancel {
                width: 100%;
                margin-bottom: 10px;
            }
        }
    </style>
}

<div class="page-content">
    <div class="container-fluid">
        <!-- هدر صفحه -->
        <div class="row align-items-center mb-3">
            <div class="col-md-6">
                <h1 class="page-title mb-0">
                    <i class="fas fa-layer-group text-primary me-2"></i>
                    ایجاد دسته‌بندی خدمات جدید
                </h1>
                <p class="text-muted mb-0">تعریف دسته‌بندی جدید برای خدمات پزشکی کلینیک شفا</p>
            </div>
            <div class="col-md-6 text-md-end mt-2 mt-md-0">
                <a href="@Url.Action("Index", "ServiceCategory")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-right me-1"></i> بازگشت به لیست
                </a>
            </div>
        </div>

        <!-- فرم ایجاد دسته‌بندی خدمات -->
        <div class="row">
            <div class="col-lg-8">
                <div class="form-section">
                    @using (Html.BeginForm("Create", "ServiceCategory", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()

                        <h5 class="form-section-title">اطلاعات اصلی دسته‌بندی</h5>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.Title, new { @class = "form-label required" })
                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "عنوان دسته‌بندی را وارد کنید" })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger small mt-1" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.DepartmentId, new { @class = "form-label required" })
                            @Html.DropDownListFor(model => model.DepartmentId, (IEnumerable<SelectListItem>)ViewBag.Departments, "انتخاب دپارتمان", new { @class = "form-control select2" })
                            @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger small mt-1" })
                        </div>

                        <div class="mb-3 form-check">
                            @Html.CheckBoxFor(model => model.IsActive, new { @class = "form-check-input", @checked = "checked" })
                            @Html.LabelFor(model => model.IsActive, new { @class = "form-check-label" })
                            @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger small mt-1 d-block" })
                        </div>

                        <div class="d-flex flex-wrap gap-2">
                            <button type="submit" class="btn btn-submit">
                                <i class="fas fa-save me-1"></i> ذخیره اطلاعات
                            </button>
                            <a href="@Url.Action("Index", "ServiceCategory")" class="btn btn-cancel">
                                <i class="fas fa-times me-1"></i> انصراف
                            </a>
                        </div>
                    }
                </div>
            </div>

            <div class="col-lg-4">
                <div class="form-section">
                    <h5 class="form-section-title">راهنمای استفاده</h5>
                    <div class="text-muted small">
                        <p class="mb-3">
                            <i class="fas fa-info-circle text-primary me-1"></i>
                            دسته‌بندی‌های خدمات برای سازماندهی خدمات پزشکی در دپارتمان‌های مختلف کلینیک شفا استفاده می‌شوند.
                        </p>
                        <p class="mb-3">
                            <i class="fas fa-info-circle text-primary me-1"></i>
                            مثال‌هایی از دسته‌بندی‌های رایج: "معاینات تخصصی"، "تزریقات"، "آزمایش‌های تشخیصی"
                        </p>
                        <p class="mb-3">
                            <i class="fas fa-exclamation-triangle text-warning me-1"></i>
                            عنوان دسته‌بندی نباید تکراری باشد و حداکثر 200 کاراکتر می‌تواند باشد.
                        </p>
                        <p class="mb-0">
                            <i class="fas fa-exclamation-triangle text-warning me-1"></i>
                            دسته‌بندی‌های غیرفعال در سیستم کلینیک شفا قابل استفاده نخواهند بود.
                        </p>
                    </div>
                </div>

                <div class="form-section">
                    <h5 class="form-section-title">اطلاعات سیستم</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span class="text-muted small">ایجاد شده توسط</span>
                            <span class="fw-bold">@User.Identity.Name</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span class="text-muted small">تاریخ ایجاد</span>
                            <span class="fw-bold">@DateTime.Now.ToPersianDateTime()</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span class="text-muted small">آخرین ویرایش</span>
                            <span class="text-muted">ندارد</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Content/plugins/select2/js/select2.full.min.js"></script>
    <script src="~/Content/plugins/select2/js/fa.min.js"></script>
    <script>
        $(document).ready(function () {
            // فعال‌سازی select2 برای انتخاب دپارتمان
            $('.select2').select2({
                placeholder: "انتخاب دپارتمان",
                language: "fa",
                width: '100%',
                minimumResultsForSearch: -1
            });

            // اعتبارسنجی فرم
            (function () {
                'use strict';
                window.addEventListener('load', function () {
                    var forms = document.getElementsByClassName('needs-validation');
                    Array.prototype.filter.call(forms, function (form) {
                        form.addEventListener('submit', function (event) {
                            if (form.checkValidity() === false) {
                                event.preventDefault();
                                event.stopPropagation();
                            }
                            form.classList.add('was-validated');
                        }, false);
                    });
                }, false);
            })();
        });
    </script>
}