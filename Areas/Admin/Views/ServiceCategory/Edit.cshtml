@using ClinicApp.Helpers
@model ClinicApp.ViewModels.ServiceCategoryCreateEditViewModel
@{
    ViewBag.Title = "ویرایش دسته‌بندی خدمات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- بسته‌های CSS مورد نیاز -->
@section Styles {
    <link href="~/Content/plugins/select2/css/select2.min.css" rel;="stylesheet" />
    <style>
        /* استایل‌های اختصاصی برای فرم ویرایش دسته‌بندی خدمات */
        .form-section {
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
            margin-bottom: 20px;
        }

        .form-section-title {
            font-weight: 600;
            color: #1a6dcc;
            margin-bottom: 15px;
            padding-bottom: 8px;
            border-bottom: 1px solid #eee;
            display: flex;
            align-items: center;
        }

            .form-section-title i {
                margin-left: 8px;
                font-size: 1.1rem;
            }

        .required:after {
            content: " *";
            color: #d32f2f;
            margin-right: 2px;
        }

        .btn-submit {
            background: linear-gradient(135deg, #1a6dcc 0%, #0d4a9e 100%);
            color: white;
            border: none;
            padding: 8px 20px;
            border-radius: 22px;
            font-weight: 500;
            transition: all 0.2s;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .btn-submit:hover {
                transform: translateY(-1px);
                box-shadow: 0 3px 8px rgba(26, 109, 204, 0.4);
            }

            .btn-submit i {
                margin-left: 6px;
            }

        .btn-cancel {
            background-color: #f1f3f5;
            color: #495057;
            border-radius: 22px;
            padding: 8px 20px;
            transition: all 0.2s;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .btn-cancel:hover {
                background-color: #e9ecef;
            }

            .btn-cancel i {
                margin-left: 6px;
            }

        .form-control:focus {
            border-color: #1a6dcc;
            box-shadow: 0 0 0 0.2rem rgba(26, 109, 204, 0.25);
        }

        .select2-container .select2-selection--single {
            height: 40px;
            padding: 6px 12px;
        }

        .select2-container--default .select2-selection--single .select2-selection__rendered {
            line-height: 28px;
        }

        .select2-container--default .select2-selection--single .select2-selection__arrow {
            height: 38px;
        }

        .audit-info {
            background-color: #f8f9fa;
            border-radius: 6px;
            padding: 12px;
            font-size: 0.9rem;
        }

        .audit-info-item {
            display: flex;
            margin-bottom: 6px;
        }

        .audit-info-label {
            font-weight: 600;
            color: #495057;
            min-width: 120px;
        }

        .audit-info-value {
            color: #212529;
        }

        .form-note {
            font-size: 0.85rem;
            color: #6c757d;
            margin-top: 4px;
            font-style: italic;
        }

        /* استایل‌های موبایل */
        @@media (max-width: 768px) {
            .form-section {
                padding: 15px;
            }

            .btn-submit, .btn-cancel {
                width: 100%;
                margin-bottom: 10px;
            }

            .audit-info {
                padding: 10px;
            }
        }
    </style>
}

<div class="page-content">
    <div class="container-fluid">
        <!-- هدر صفحه -->
        <div class="row align-items-center mb-3">
            <div class="col-md-6">
                <h1 class="page-title mb-0">
                    <i class="fas fa-layer-group text-primary me-2"></i>
                    ویرایش دسته‌بندی خدمات
                </h1>
                <p class="text-muted mb-0">ویرایش اطلاعات دسته‌بندی خدمات پزشکی کلینیک شفا</p>
            </div>
            <div class="col-md-6 text-md-end mt-2 mt-md-0">
                <a href="@Url.Action("Index", "ServiceCategory")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-right me-1"></i> بازگشت به لیست
                </a>
            </div>
        </div>

        <!-- فرم ویرایش دسته‌بندی خدمات -->
        <div class="row">
            <div class="col-lg-8">
                <div class="form-section">
                    @using (Html.BeginForm("Edit", "ServiceCategory", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.ServiceCategoryId)

                        <h5 class="form-section-title">
                            <i class="fas fa-edit"></i> اطلاعات اصلی دسته‌بندی
                        </h5>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.Title, new { @class = "form-label required" })
                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "عنوان دسته‌بندی را وارد کنید" })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger small mt-1" })
                            <div class="form-note">مثال: "معاینات تخصصی"، "تزریقات"، "آزمایش‌های تشخیصی"</div>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.DepartmentId, new { @class = "form-label required" })
                            @Html.DropDownListFor(model => model.DepartmentId, (IEnumerable<SelectListItem>)ViewBag.Departments, "انتخاب دپارتمان", new { @class = "form-control select2" })
                            @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger small mt-1" })
                        </div>

                        <div class="mb-3 form-check">
                            @Html.CheckBoxFor(model => model.IsActive, new { @class = "form-check-input" })
                            @Html.LabelFor(model => model.IsActive, new { @class = "form-check-label" })
                            @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger small mt-1 d-block" })
                        </div>

                        <div class="d-flex flex-wrap gap-2">
                            <button type="submit" class="btn btn-submit">
                                <i class="fas fa-save"></i> ذخیره تغییرات
                            </button>
                            <a href="@Url.Action("Index", "ServiceCategory")" class="btn btn-cancel">
                                <i class="fas fa-times"></i> انصراف
                            </a>
                        </div>
                    }
                </div>
            </div>

            <div class="col-lg-4">
                <div class="form-section">
                    <h5 class="form-section-title">
                        <i class="fas fa-info-circle"></i> راهنمای استفاده
                    </h5>
                    <div class="text-muted small">
                        <p class="mb-3">
                            <i class="fas fa-info-circle text-primary me-1"></i>
                            دسته‌بندی‌های خدمات برای سازماندهی خدمات پزشکی در دپارتمان‌های مختلف کلینیک شفا استفاده می‌شوند.
                        </p>
                        <p class="mb-3">
                            <i class="fas fa-info-circle text-primary me-1"></i>
                            مثال‌هایی از دسته‌بندی‌های رایج: "معاینات تخصصی"، "تزریقات"، "آزمایش‌های تشخیصی"
                        </p>
                        <p class="mb-3">
                            <i class="fas fa-exclamation-triangle text-warning me-1"></i>
                            عنوان دسته‌بندی نباید تکراری باشد و حداکثر 200 کاراکتر می‌تواند باشد.
                        </p>
                        <p class="mb-0">
                            <i class="fas fa-exclamation-triangle text-warning me-1"></i>
                            دسته‌بندی‌های غیرفعال در سیستم کلینیک شفا قابل استفاده نخواهند بود.
                        </p>
                    </div>
                </div>

                <div class="form-section">
                    <h5 class="form-section-title">
                        <i class="fas fa-history"></i> اطلاعات سیستم
                    </h5>
                    <div class="audit-info">
                        <div class="audit-info-item">
                            <span class="audit-info-label">ایجاد شده توسط:</span>
                            <span class="audit-info-value">@(Model.CreatedByUser?.FullName)</span>
                        </div>
                        <div class="audit-info-item">
                            <span class="audit-info-label">تاریخ ایجاد:</span>
                            <span class="audit-info-value">@Model.CreatedAt.ToPersianDateTime()</span>
                        </div>
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <div class="audit-info-item">
                                <span class="audit-info-label">آخرین ویرایش:</span>
                                <span class="audit-info-value">@Model.UpdatedAt.Value.ToPersianDateTime()</span>
                            </div>
                            <div class="audit-info-item">
                                <span class="audit-info-label">ویرایش توسط:</span>
                                <span class="audit-info-value">@(Model.UpdatedByUser?.FullName)</span>
                            </div>
                        }
                        else
                        {
                            <div class="audit-info-item">
                                <span class="audit-info-label">آخرین ویرایش:</span>
                                <span class="audit-info-value">ندارد</span>
                            </div>
                        }
                        <div class="audit-info-item">
                            <span class="audit-info-label">وضعیت:</span>
                            <span class="audit-info-value">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">فعال</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">غیرفعال</span>
                                }
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Content/plugins/select2/js/select2.full.min.js"></script>
    <script src="~/Content/plugins/select2/js/fa.min.js"></script>

    <script>
        $(document).ready(function () {
            // فعال‌سازی select2 برای انتخاب دپارتمان
            $('.select2').select2({
                placeholder: "انتخاب دپارتمان",
                language: "fa",
                width: '100%',
                minimumResultsForSearch: -1
            });

            // اعتبارسنجی فرم
            (function () {
                'use strict';
                window.addEventListener('load', function () {
                    var forms = document.getElementsByClassName('needs-validation');
                    Array.prototype.filter.call(forms, function (form) {
                        form.addEventListener('submit', function (event) {
                            if (form.checkValidity() === false) {
                                event.preventDefault();
                                event.stopPropagation();
                            }
                            form.classList.add('was-validated');
                        }, false);
                    });
                }, false);
            })();
        });
    </script>
}