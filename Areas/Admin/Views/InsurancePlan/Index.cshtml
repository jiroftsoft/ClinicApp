@model ClinicApp.ViewModels.Insurance.InsurancePlan.InsurancePlanIndexPageViewModel
@{
    ViewBag.Title = "مدیریت طرح‌های بیمه";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@Html.Partial("_NotificationMessages")

@section Styles {
    <link href="~/Content/css/insurance-plan-index.css" rel="stylesheet" />
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>مدیریت طرح‌های بیمه</h2>
                <a href="@Url.Action("Create", "InsurancePlan")" 
                   class="btn btn-primary" 
                   data-tooltip="ایجاد طرح بیمه جدید در سیستم">
                    <i class="fas fa-plus"></i> افزودن طرح بیمه جدید
                </a>
            </div>

            <!-- Search and Filters -->
            <div class="search-filters">
                <form method="get" action="@Url.Action("Index", "InsurancePlan")" id="searchForm">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="filter-group">
                                <label class="filter-label">جستجو در نام یا کد طرح:</label>
                                <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="نام یا کد طرح بیمه...">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="filter-group">
                                <label class="filter-label">ارائه‌دهنده بیمه:</label>
                                @Html.DropDownList("providerId", Model.InsuranceProviderSelectList ?? new SelectList(new List<SelectListItem>(), "Value", "Text"), new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="filter-group">
                                <label class="filter-label">وضعیت:</label>
                                @Html.DropDownList("isActive", Model.StatusSelectList ?? new SelectList(new List<SelectListItem>(), "Value", "Text"), new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="filter-group">
                                <label class="filter-label">&nbsp;</label>
                                <div>
                                    <button type="submit" 
                                            class="btn btn-primary btn-block btn-search" 
                                            data-tooltip="جستجو در طرح‌های بیمه بر اساس فیلترهای انتخاب شده">
                                        <i class="fas fa-search"></i> جستجو
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Results Summary -->
            <div class="row mb-3">
                <div class="col-12">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>نتایج جستجو:</strong>
                        @if (Model.TotalCount > 0)
                        {
                            <span>@Model.TotalCount طرح بیمه یافت شد</span>
                            if (Model.HasSearchResults)
                            {
                                <span> - </span>
                                <a href="@Url.Action("Index", "InsurancePlan")" class="alert-link">نمایش همه طرح‌ها</a>
                            }
                        }
                        else
                        {
                            <span>هیچ طرح بیمه‌ای یافت نشد</span>
                        }
                    </div>
                </div>
            </div>

            <!-- Insurance Plans List -->
            @if (Model.HasData)
            {
                @Html.Partial("_InsurancePlanListPartial", Model.InsurancePlans)

                <!-- Pagination -->
                var paginationModel = new ClinicApp.ViewModels.Shared.PaginationViewModel
                {
                    CurrentPage = Model.CurrentPage,
                    TotalPages = Model.TotalPages,
                    TotalCount = Model.TotalCount,
                    ActionName = "Index",
                    ControllerName = "InsurancePlan"
                };
                paginationModel.AddRouteValue("searchTerm", Model.SearchTerm);
                paginationModel.AddRouteValue("providerId", Model.ProviderId);
                paginationModel.AddRouteValue("isActive", Model.IsActive);
                
                @Html.Partial("_PaginationPartial", paginationModel)
            }
            else
            {
                @Html.Partial("_InsurancePlanListPartial", new List<ClinicApp.ViewModels.Insurance.InsurancePlan.InsurancePlanIndexViewModel>())
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/app/insurance-plan-index.js"></script>
}
