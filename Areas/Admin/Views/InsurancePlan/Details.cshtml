@model ClinicApp.ViewModels.Insurance.InsurancePlan.InsurancePlanDetailsViewModel
@{
    ViewBag.Title = "جزئیات طرح بیمه";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@Html.Partial("_NotificationMessages")

@section Styles {
    <link href="~/Content/css/details-page-medical.css" rel="stylesheet" />
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>جزئیات طرح بیمه</h2>
                <div>
                    <a href="@Url.Action("ManageTariffs", "InsurancePlan", new { id = Model.InsurancePlanId })" 
                       class="btn btn-success btn-action" 
                       data-tooltip="مدیریت خدمات تحت پوشش این طرح بیمه">
                        <i class="fas fa-tasks"></i> مدیریت تعرفه‌ها
                    </a>
                    <a href="@Url.Action("Edit", "InsurancePlan", new { id = Model.InsurancePlanId })" 
                       class="btn btn-warning btn-action" 
                       data-tooltip="ویرایش اطلاعات طرح بیمه">
                        <i class="fas fa-edit"></i> ویرایش
                    </a>
                    <a href="@Url.Action("Index", "InsurancePlan")" 
                       class="btn btn-secondary btn-action" 
                       data-tooltip="بازگشت به لیست تمام طرح‌های بیمه">
                        <i class="fas fa-arrow-right"></i> بازگشت به لیست
                    </a>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-10">
                    <!-- Plan Header -->
                    <div class="plan-header">
                        <div class="plan-name">@Model.Name</div>
                        <div class="plan-code">@Model.PlanCode</div>
                        <div class="provider-badge">
                            <i class="fas fa-hospital"></i> @Model.InsuranceProviderName
                        </div>
                    </div>

                    <div class="details-container">
                        <!-- Basic Information -->
                        <h4 class="mb-3">
                            <i class="fas fa-info-circle info-icon"></i> اطلاعات پایه
                        </h4>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="detail-row">
                                    <div class="detail-label">نام طرح بیمه</div>
                                    <div class="detail-value">
                                        <strong>@Model.Name</strong>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-row">
                                    <div class="detail-label">کد طرح بیمه</div>
                                    <div class="detail-value">
                                        <span class="plan-code">@Model.PlanCode</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="detail-row">
                            <div class="detail-label">ارائه‌دهنده بیمه</div>
                            <div class="detail-value">
                                <strong>@Model.InsuranceProviderName</strong>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <div class="detail-row">
                                <div class="detail-label">توضیحات</div>
                                <div class="detail-value">@Model.Description</div>
                            </div>
                        }

                        <!-- Coverage Information -->
                        <h4 class="mb-3 mt-4">
                            <i class="fas fa-shield-alt info-icon"></i> اطلاعات پوشش بیمه
                        </h4>

                        <div class="coverage-section">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="coverage-percent">@Model.CoveragePercent%</div>
                                    <div class="text-center text-muted">درصد پوشش بیمه</div>
                                </div>
                                <div class="col-md-6">
                                    <div class="deductible-amount">@Model.Deductible.ToString("N0") تومان</div>
                                    <div class="text-center text-muted">مبلغ فرانشیز</div>
                                </div>
                            </div>
                        </div>

                        <!-- Validity Period -->
                        <h4 class="mb-3 mt-4">
                            <i class="fas fa-calendar-alt info-icon"></i> دوره اعتبار
                        </h4>

                        <div class="validity-section">
                            <div class="validity-date">
                                از @Model.ValidFromShamsi تا @Model.ValidToShamsi
                            </div>
                        </div>

                        <!-- Status -->
                        <h4 class="mb-3 mt-4">
                            <i class="fas fa-toggle-on info-icon"></i> وضعیت
                        </h4>

                        <div class="detail-row">
                            <div class="detail-label">وضعیت طرح بیمه</div>
                            <div class="detail-value">
                                @if (Model.IsActive)
                                {
                                    <span class="badge badge-success status-badge">
                                        <i class="fas fa-check-circle"></i> فعال
                                    </span>
                                }
                                else
                                {
                                    <span class="badge badge-danger status-badge">
                                        <i class="fas fa-times-circle"></i> غیرفعال
                                    </span>
                                }
                            </div>
                        </div>

                        <!-- Plan Services -->
                        @if (Model.PlanServices.Any())
                        {
                            <h4 class="mb-3 mt-4">
                                <i class="fas fa-list info-icon"></i> خدمات تحت پوشش (@Model.PlanServices.Count)
                            </h4>

                            <div class="services-section">
                                @foreach (var service in Model.PlanServices)
                                {
                                    <div class="service-item">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="service-name">@service.ServiceCategoryName</div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="service-coverage">
                                                    <i class="fas fa-shield-alt"></i> 
                                                    @if (service.CoverageOverride.HasValue)
                                                    {
                                                        <span>پوشش خاص: @service.CoverageOverride%</span>
                                                    }
                                                    else
                                                    {
                                                        <span>پوشش پیش‌فرض</span>
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="service-copay">
                                                    <i class="fas fa-money-bill-wave"></i> 
                                                    @if (service.Copay.HasValue)
                                                    {
                                                        <span>سهم بیمار: @service.Copay%</span>
                                                    }
                                                    else
                                                    {
                                                        <span>سهم پیش‌فرض</span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <h4 class="mb-3 mt-4">
                                <i class="fas fa-list info-icon"></i> خدمات تحت پوشش
                            </h4>
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                هیچ خدمتی برای این طرح بیمه تعریف نشده است.
                            </div>
                        }

                        <hr class="my-4">

                        <!-- Tracking Information -->
                        <h5 class="mb-3">
                            <i class="fas fa-history"></i> اطلاعات ردیابی
                        </h5>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="detail-row">
                                    <div class="detail-label">
                                        <i class="fas fa-calendar-plus info-icon"></i>تاریخ ایجاد
                                    </div>
                                    <div class="detail-value">
                                        @Model.CreatedAtShamsi
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-row">
                                    <div class="detail-label">
                                        <i class="fas fa-user-plus info-icon"></i>ایجادکننده
                                    </div>
                                    <div class="detail-value">
                                        @if (!string.IsNullOrEmpty(Model.CreatedByUserName))
                                        {
                                            @Model.CreatedByUserName
                                        }
                                        else
                                        {
                                            <span class="text-muted">نامشخص</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (Model.UpdatedAt.HasValue)
                        {
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="detail-row">
                                        <div class="detail-label">
                                            <i class="fas fa-calendar-edit info-icon"></i>تاریخ آخرین به‌روزرسانی
                                        </div>
                                        <div class="detail-value">
                                            @Model.UpdatedAtShamsi
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="detail-row">
                                        <div class="detail-label">
                                            <i class="fas fa-user-edit info-icon"></i>آخرین به‌روزرساننده
                                        </div>
                                        <div class="detail-value">
                                            @if (!string.IsNullOrEmpty(Model.UpdatedByUserName))
                                            {
                                                @Model.UpdatedByUserName
                                            }
                                            else
                                            {
                                                <span class="text-muted">نامشخص</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
