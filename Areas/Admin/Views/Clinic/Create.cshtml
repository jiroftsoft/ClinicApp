@model ClinicApp.ViewModels.ClinicCreateEditViewModel
@{
    ViewBag.Title = "ایجاد کلینیک جدید";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <style>
        .medical-form-header {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            border-radius: 15px 15px 0 0;
            padding: 2rem;
            position: relative;
            overflow: hidden;
        }

        .medical-form-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 200px;
            height: 200px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            z-index: 1;
        }

        .medical-form-header .content {
            position: relative;
            z-index: 2;
        }

        .form-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 8px 30px rgba(0,0,0,0.12);
            overflow: hidden;
            border: none;
        }

        .form-actions {
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            padding: 2rem;
            border-top: 1px solid #dee2e6;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 1rem;
        }

        .btn-medical-action {
            padding: 0.875rem 2rem;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            border: none;
            cursor: pointer;
        }

        .btn-create {
            background: linear-gradient(45deg, #28a745, #20c997);
            color: white;
        }

        .btn-create:hover {
            background: linear-gradient(45deg, #218838, #1e9f8b);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(40, 167, 69, 0.3);
            color: white;
        }

        .btn-cancel {
            background: linear-gradient(45deg, #6c757d, #9da3a8);
            color: white;
        }

        .btn-cancel:hover {
            background: linear-gradient(45deg, #5a6268, #8b9196);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(108, 117, 125, 0.3);
            color: white;
            text-decoration: none;
        }

        .form-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        }

        .form-subtitle {
            opacity: 0.9;
            font-size: 1.1rem;
            margin-bottom: 0;
        }

        .action-info {
            flex: 1;
        }

        .action-info h6 {
            color: #6c757d;
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        .action-info small {
            color: #9da3a8;
        }

        @@media (max-width: 768px) {
            .form-actions {
                flex-direction: column;
                gap: 1rem;
            }
            
            .btn-medical-action {
                width: 100%;
                justify-content: center;
            }
            
            .action-info {
                text-align: center;
            }
        }
    </style>
}

<div class="container-fluid px-0">
    <div class="form-container">
        <!-- Header Section -->
        <div class="medical-form-header">
            <div class="content">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="form-title mb-2">
                            <i class="fas fa-hospital-alt me-3"></i>
                            @ViewBag.Title
                        </h1>
                        <p class="form-subtitle">ایجاد مرکز درمانی جدید در سیستم مدیریت</p>
                    </div>
                    <div class="text-end">
                        <div class="bg-white bg-opacity-25 rounded-pill px-3 py-2">
                            <i class="fas fa-plus-circle me-2"></i>
                            <span class="fw-bold">مرحله ۱ از ۱</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Form Body -->
        <div class="p-0">
            @using (Html.BeginForm("Create", "Clinic", FormMethod.Post, new { 
                role = "form", 
                @class = "needs-validation",
                novalidate = "novalidate"
            }))
            {
                @Html.Partial("_CreateOrEdit", Model)

                <!-- Form Actions -->
                <div class="form-actions">
                    <div class="action-info">
                        <h6>
                            <i class="fas fa-info-circle me-2"></i>
                            راهنمای تکمیل
                        </h6>
                        <small>پس از ایجاد کلینیک، می‌توانید دپارتمان‌ها و پزشکان را اضافه کنید</small>
                    </div>
                    <div class="d-flex gap-2">
                        <a href="@Url.Action("Index")" class="btn-medical-action btn-cancel">
                            <i class="fas fa-times"></i>
                            انصراف
                        </a>
                        <button type="submit" class="btn-medical-action btn-create">
                            <i class="fas fa-hospital-alt"></i>
                            ایجاد کلینیک
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Form validation enhancement
            const form = document.querySelector('.needs-validation');
            
            if (form) {
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                        
                        // Find first invalid field and focus on it
                        const firstInvalidField = form.querySelector(':invalid');
                        if (firstInvalidField) {
                            firstInvalidField.focus();
                            firstInvalidField.scrollIntoView({ 
                                behavior: 'smooth', 
                                block: 'center' 
                            });
                        }
                    } else {
                        // Show loading state
                        const submitButton = form.querySelector('button[type="submit"]');
                        if (submitButton) {
                            submitButton.disabled = true;
                            submitButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>در حال ایجاد...';
                        }
                    }
                    
                    form.classList.add('was-validated');
                });
            }
            
            // Auto-save draft functionality (optional)
            const formInputs = document.querySelectorAll('input, textarea, select');
            formInputs.forEach(input => {
                input.addEventListener('change', function() {
                    const formData = new FormData(form);
                    const draftData = {};
                    for (let [key, value] of formData.entries()) {
                        draftData[key] = value;
                    }
                    localStorage.setItem('clinic_draft', JSON.stringify(draftData));
                });
            });
            
            // Load draft data if exists
            const draftData = localStorage.getItem('clinic_draft');
            if (draftData) {
                try {
                    const draft = JSON.parse(draftData);
                    Object.keys(draft).forEach(key => {
                        const field = document.querySelector(`[name="${key}"]`);
                        if (field && field.value === '') {
                            field.value = draft[key];
                        }
                    });
                } catch (e) {
                    console.log('Could not load draft data');
                }
            }
            
            // Clear draft on successful submission
            form.addEventListener('submit', function() {
                if (form.checkValidity()) {
                    localStorage.removeItem('clinic_draft');
                }
            });
        });
    </script>
}