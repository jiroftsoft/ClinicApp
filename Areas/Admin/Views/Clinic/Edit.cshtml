@model ClinicApp.ViewModels.ClinicCreateEditViewModel
@{
    ViewBag.Title = $"ویرایش کلینیک: {Model.Name}";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <style>
        .medical-edit-header {
            background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
            color: white;
            border-radius: 15px 15px 0 0;
            padding: 2rem;
            position: relative;
            overflow: hidden;
        }

        .medical-edit-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 200px;
            height: 200px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            z-index: 1;
        }

        .medical-edit-header .content {
            position: relative;
            z-index: 2;
        }

        .edit-form-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 8px 30px rgba(0,0,0,0.12);
            overflow: hidden;
            border: none;
        }

        .edit-form-actions {
            background: linear-gradient(135deg, #fff3cd, #fdeaa7);
            padding: 2rem;
            border-top: 1px solid #fbeedbb3;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 1rem;
        }

        .btn-edit-action {
            padding: 0.875rem 2rem;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            border: none;
            cursor: pointer;
        }

        .btn-save {
            background: linear-gradient(45deg, #ffc107, #fd7e14);
            color: #212529;
        }

        .btn-save:hover {
            background: linear-gradient(45deg, #e0a800, #ea5a0f);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(255, 193, 7, 0.4);
            color: #212529;
        }

        .btn-cancel-edit {
            background: linear-gradient(45deg, #6c757d, #9da3a8);
            color: white;
        }

        .btn-cancel-edit:hover {
            background: linear-gradient(45deg, #5a6268, #8b9196);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(108, 117, 125, 0.3);
            color: white;
            text-decoration: none;
        }

        .edit-form-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        }

        .edit-form-subtitle {
            opacity: 0.9;
            font-size: 1.1rem;
            margin-bottom: 0;
        }

        .edit-clinic-info {
            background: rgba(255,255,255,0.2);
            border-radius: 10px;
            padding: 1rem;
            margin-top: 1rem;
        }

        .clinic-id-badge {
            background: rgba(255,255,255,0.3);
            border-radius: 20px;
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
            font-weight: 600;
        }

        .edit-action-info {
            flex: 1;
        }

        .edit-action-info h6 {
            color: #856404;
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        .edit-action-info small {
            color: #6c5914;
        }

        .btn-details {
            background: linear-gradient(45deg, #17a2b8, #20c997);
            color: white;
            margin-left: 0.5rem;
        }

        .btn-details:hover {
            background: linear-gradient(45deg, #138496, #1e9f8b);
            color: white;
            text-decoration: none;
        }

        @@media (max-width: 768px) {
            .edit-form-actions {
                flex-direction: column;
                gap: 1rem;
            }
            
            .btn-edit-action {
                width: 100%;
                justify-content: center;
            }
            
            .edit-action-info {
                text-align: center;
            }
        }
    </style>
}

<div class="container-fluid px-0">
    <div class="edit-form-container">
        <!-- Header Section -->
        <div class="medical-edit-header">
            <div class="content">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h1 class="edit-form-title mb-2">
                            <i class="fas fa-edit me-3"></i>
                            @ViewBag.Title
                        </h1>
                        <p class="edit-form-subtitle">ویرایش اطلاعات مرکز درمانی</p>
                        <div class="edit-clinic-info">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="clinic-id-badge">
                                        <i class="fas fa-id-badge me-1"></i>
                                        شناسه: #@Model.ClinicId.ToString("D4")
                                    </span>
                                </div>
                                <div>
                                    <span class="badge bg-white bg-opacity-25 text-dark">
                                        <i class="fas fa-calendar me-1"></i>
                                        @if (Model.IsActive)
                                        {
                                            <span>فعال</span>
                                        }
                                        else
                                        {
                                            <span>غیرفعال</span>
                                        }
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-end">
                        <a href="@Url.Action("Details", new { id = Model.ClinicId })" class="btn-edit-action btn-details">
                            <i class="fas fa-eye"></i>
                            مشاهده جزئیات
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Form Body -->
        <div class="p-0">
            @using (Html.BeginForm("Update", "Clinic", FormMethod.Post, new { 
                role = "form", 
                @class = "needs-validation",
                novalidate = "novalidate"
            }))
            {
                @Html.Partial("_CreateOrEdit", Model)

                <!-- Form Actions -->
                <div class="edit-form-actions">
                    <div class="edit-action-info">
                        <h6>
                            <i class="fas fa-info-circle me-2"></i>
                            نکات مهم
                        </h6>
                        <small>تغییرات اعمال‌شده بلافاصله در سیستم نوبت‌دهی نمایش داده می‌شود</small>
                    </div>
                    <div class="d-flex gap-2">
                        <a href="@Url.Action("Index")" class="btn-edit-action btn-cancel-edit">
                            <i class="fas fa-times"></i>
                            انصراف
                        </a>
                        <button type="submit" class="btn-edit-action btn-save">
                            <i class="fas fa-save"></i>
                            ذخیره تغییرات
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Form validation enhancement
            const form = document.querySelector('.needs-validation');
            
            if (form) {
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                        
                        // Find first invalid field and focus on it
                        const firstInvalidField = form.querySelector(':invalid');
                        if (firstInvalidField) {
                            firstInvalidField.focus();
                            firstInvalidField.scrollIntoView({ 
                                behavior: 'smooth', 
                                block: 'center' 
                            });
                        }
                    } else {
                        // Show loading state
                        const submitButton = form.querySelector('button[type="submit"]');
                        if (submitButton) {
                            submitButton.disabled = true;
                            submitButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>در حال ذخیره...';
                        }
                    }
                    
                    form.classList.add('was-validated');
                });
            }
            
            // Track changes for unsaved warning
            let formChanged = false;
            const originalFormData = new FormData(form);
            
            form.addEventListener('input', function() {
                formChanged = true;
            });
            
            form.addEventListener('change', function() {
                formChanged = true;
            });
            
            // Warn user about unsaved changes
            window.addEventListener('beforeunload', function(e) {
                if (formChanged) {
                    const confirmationMessage = 'شما تغییراتی انجام داده‌اید که ذخیره نشده است. آیا می‌خواهید صفحه را ترک کنید؟';
                    e.returnValue = confirmationMessage;
                    return confirmationMessage;
                }
            });
            
            // Don't warn on form submission
            form.addEventListener('submit', function() {
                formChanged = false;
            });
            
            // Don't warn on cancel button
            document.querySelector('.btn-cancel-edit').addEventListener('click', function() {
                formChanged = false;
            });
        });
    </script>
}