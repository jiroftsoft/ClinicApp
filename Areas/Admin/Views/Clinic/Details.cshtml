@model ClinicApp.ViewModels.ClinicDetailsViewModel
@{
    ViewBag.Title = $"جزئیات کلینیک {Model.Name}";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <style>
        :root {
            --medical-primary: #2c5aa0;
            --medical-success: #28a745;
            --medical-info: #17a2b8;
            --medical-warning: #ffc107;
            --medical-danger: #dc3545;
            --medical-light: #f8f9fa;
            --medical-gray: #6c757d;
            --medical-dark: #343a40;
        }

        .medical-details-header {
            background: linear-gradient(135deg, var(--medical-primary) 0%, #3d6fb0 100%);
            color: white;
            border-radius: 15px 15px 0 0;
            padding: 2rem;
            position: relative;
            overflow: hidden;
        }

        .medical-details-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 200px;
            height: 200px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            z-index: 1;
        }

        .medical-details-header .content {
            position: relative;
            z-index: 2;
        }

        .clinic-name-display {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        }

        .clinic-subtitle {
            opacity: 0.9;
            font-size: 1.1rem;
            margin-bottom: 1rem;
        }

        .status-badge-large {
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            border-radius: 25px;
            font-weight: 600;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

        .status-active-large {
            background: linear-gradient(45deg, #28a745, #20c997);
            color: white;
        }

        .status-inactive-large {
            background: linear-gradient(45deg, #dc3545, #e74c3c);
            color: white;
        }

        .quick-stats {
            background: white;
            padding: 1.5rem;
            border-radius: 0;
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
            margin: -1rem 1rem 1.5rem 1rem;
            position: relative;
            z-index: 3;
        }

        .stat-item {
            text-align: center;
            padding: 1rem;
            border-radius: 10px;
            background: var(--medical-light);
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .stat-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(44, 90, 160, 0.15);
            border-color: var(--medical-primary);
        }

        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            color: var(--medical-primary);
            margin-bottom: 0.5rem;
        }

        .stat-label {
            color: var(--medical-gray);
            font-weight: 500;
            font-size: 0.9rem;
        }

        .stat-icon {
            font-size: 1.5rem;
            color: var(--medical-primary);
            margin-bottom: 0.5rem;
        }

        .info-section {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 3px 15px rgba(0,0,0,0.08);
            border: 1px solid rgba(44, 90, 160, 0.1);
            transition: all 0.3s ease;
        }

        .info-section:hover {
            box-shadow: 0 8px 25px rgba(44, 90, 160, 0.15);
            transform: translateY(-2px);
        }

        .section-title {
            color: var(--medical-primary);
            font-weight: 600;
            font-size: 1.25rem;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .section-title i {
            width: 24px;
            text-align: center;
        }

        .info-item {
            padding: 0.75rem 0;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .info-item:last-child {
            border-bottom: none;
        }

        .info-label {
            font-weight: 600;
            color: var(--medical-dark);
            min-width: 120px;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .info-value {
            color: var(--medical-gray);
            flex: 1;
        }

        .info-value.highlight {
            color: var(--medical-primary);
            font-weight: 600;
        }

        .action-buttons {
            gap: 1rem;
        }

        .btn-medical {
            background: var(--medical-primary);
            border: none;
            color: white;
            padding: 0.75rem 2rem;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-medical:hover {
            background: #234a87;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(44, 90, 160, 0.3);
            color: white;
            text-decoration: none;
        }

        .btn-medical-warning {
            background: linear-gradient(45deg, var(--medical-warning), #ffcd39);
            color: #212529;
        }

        .btn-medical-warning:hover {
            background: linear-gradient(45deg, #e0a800, var(--medical-warning));
            color: #212529;
        }

        .btn-medical-secondary {
            background: linear-gradient(45deg, var(--medical-gray), #9da3a8);
            color: white;
        }

        .btn-medical-secondary:hover {
            background: linear-gradient(45deg, #5a6268, var(--medical-gray));
            color: white;
        }

        .contact-quick {
            background: linear-gradient(135deg, var(--medical-info), #20c997);
            color: white;
            padding: 1rem;
            border-radius: 10px;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .contact-quick:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(23, 162, 184, 0.3);
        }

        .audit-timeline {
            position: relative;
            padding-left: 2rem;
        }

        .audit-timeline::before {
            content: '';
            position: absolute;
            left: 0.75rem;
            top: 0;
            bottom: 0;
            width: 2px;
            background: var(--medical-primary);
        }

        .audit-item {
            position: relative;
            padding: 1rem 0;
        }

        .audit-item::before {
            content: '';
            position: absolute;
            left: -2.25rem;
            top: 1.5rem;
            width: 10px;
            height: 10px;
            background: var(--medical-primary);
            border-radius: 50%;
            border: 3px solid white;
            box-shadow: 0 0 0 2px var(--medical-primary);
        }

        .department-preview {
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            border-radius: 10px;
            padding: 1.5rem;
            text-align: center;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .department-preview:hover {
            border-color: var(--medical-primary);
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(44, 90, 160, 0.15);
        }

        @@media (max-width: 768px) {
            .clinic-name-display {
                font-size: 1.5rem;
            }
            
            .quick-stats {
                margin: -0.5rem 0.5rem 1rem 0.5rem;
                padding: 1rem;
            }
            
            .stat-item {
                margin-bottom: 1rem;
            }
            
            .action-buttons {
                flex-direction: column;
                gap: 0.5rem;
            }
            
            .btn-medical {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
}

<!-- Medical Details Container -->
<div class="container-fluid px-0">
    
    <!-- Header Section -->
    <div class="info-section" style="border-radius: 15px; overflow: hidden; margin-bottom: 0;">
        <div class="medical-details-header">
            <div class="content">
                <div class="row align-items-center">
                    <div class="col-lg-8">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-hospital-alt me-3" style="font-size: 2.5rem;"></i>
                            <div>
                                <h1 class="clinic-name-display mb-0">@Model.Name</h1>
                                <p class="clinic-subtitle mb-0">مرکز درمانی تخصصی</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 text-end">
                        <div class="mb-3">
                            @if (Model.IsActive)
                            {
                                <span class="status-badge-large status-active-large">
                                    <i class="fas fa-check-circle me-2"></i>فعال
                                </span>
                            }
                            else
                            {
                                <span class="status-badge-large status-inactive-large">
                                    <i class="fas fa-times-circle me-2"></i>غیرفعال
                                </span>
                            }
                        </div>
                        <div class="action-buttons d-flex">
                            <a href="@Url.Action("Edit", new { id = Model.ClinicId })" class="btn btn-medical btn-medical-warning">
                                <i class="fas fa-edit"></i> ویرایش
                            </a>
                            <a href="@Url.Action("Index")" class="btn btn-medical btn-medical-secondary">
                                <i class="fas fa-arrow-right"></i> بازگشت
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="quick-stats">
            <div class="row">
                <div class="col-md-3 col-6 mb-3 mb-md-0">
                    <div class="stat-item">
                        <div class="stat-icon">
                            <i class="fas fa-building"></i>
                        </div>
                        <div class="stat-number">@Model.DepartmentCount</div>
                        <div class="stat-label">دپارتمان فعال</div>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-3 mb-md-0">
                    <div class="stat-item">
                        <div class="stat-icon">
                            <i class="fas fa-user-md"></i>
                        </div>
                        <div class="stat-number">@Model.DoctorCount</div>
                        <div class="stat-label">پزشک متخصص</div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="stat-item">
                        <div class="stat-icon">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                        <div class="stat-number">-</div>
                        <div class="stat-label">نوبت امروز</div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        <div class="contact-quick" onclick="window.open('tel:@Model.PhoneNumber', '_self')">
                            <div class="stat-icon">
                                <i class="fas fa-phone"></i>
                            </div>
                            <div style="font-size: 0.9rem; font-weight: 600;">تماس مستقیم</div>
                            <div style="font-size: 0.8rem;">@Model.PhoneNumber</div>
                        </div>
                    }
                    else
                    {
                        <div class="stat-item">
                            <div class="stat-icon">
                                <i class="fas fa-phone-slash text-muted"></i>
                            </div>
                            <div class="stat-number text-muted">-</div>
                            <div class="stat-label">تماس مستقیم</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Primary Information -->
        <div class="col-lg-8">
            <div class="info-section">
                <h3 class="section-title">
                    <i class="fas fa-info-circle"></i>
                    اطلاعات کلی
                </h3>
                
                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-map-marker-alt text-danger"></i>
                        آدرس:
                    </div>
                    <div class="info-value highlight">
                        @(Model.Address ?? "آدرس ثبت نشده است")
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-phone text-success"></i>
                        تلفن تماس:
                    </div>
                    <div class="info-value">
                        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                        {
                            <a href="tel:@Model.PhoneNumber" class="text-decoration-none">
                                <strong>@Model.PhoneNumber</strong>
                                <i class="fas fa-external-link-alt ms-1 text-muted"></i>
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">شماره تماس ثبت نشده</span>
                        }
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-id-badge text-info"></i>
                        شناسه سیستم:
                    </div>
                    <div class="info-value">
                        <code>#@Model.ClinicId.ToString("D4")</code>
                    </div>
                </div>
            </div>

            <!-- Department Preview -->
            @if (Model.DepartmentCount > 0)
            {
                <div class="info-section">
                    <h3 class="section-title">
                        <i class="fas fa-sitemap"></i>
                        دپارتمان‌ها و خدمات
                    </h3>
                    
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="department-preview">
                                <i class="fas fa-building text-primary mb-2" style="font-size: 2rem;"></i>
                                <h5>@Model.DepartmentCount دپارتمان</h5>
                                <p class="text-muted mb-2">بخش‌های تخصصی فعال</p>
                                <a href="#" class="btn btn-sm btn-outline-primary">مشاهده همه</a>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="department-preview">
                                <i class="fas fa-user-md text-success mb-2" style="font-size: 2rem;"></i>
                                <h5>@Model.DoctorCount پزشک</h5>
                                <p class="text-muted mb-2">متخصصان مجرب</p>
                                <a href="#" class="btn btn-sm btn-outline-success">لیست پزشکان</a>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="department-preview">
                                <i class="fas fa-calendar-plus text-warning mb-2" style="font-size: 2rem;"></i>
                                <h5>نوبت‌دهی</h5>
                                <p class="text-muted mb-2">رزرو آنلاین نوبت</p>
                                <a href="#" class="btn btn-sm btn-outline-warning">نوبت جدید</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Audit Trail & Management -->
        <div class="col-lg-4">
            <div class="info-section">
                <h3 class="section-title">
                    <i class="fas fa-history"></i>
                    تاریخچه سیستم
                </h3>
                
                <div class="audit-timeline">
                    <div class="audit-item">
                        <div class="fw-bold text-success">ایجاد کلینیک</div>
                        <div class="text-muted small">
                            <i class="fas fa-calendar me-1"></i>@Model.CreatedAtShamsi
                        </div>
                        <div class="text-muted small">
                            <i class="fas fa-user me-1"></i>@(Model.CreatedByUser ?? "سیستم")
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.UpdatedAtShamsi))
                    {
                        <div class="audit-item">
                            <div class="fw-bold text-info">آخرین بروزرسانی</div>
                            <div class="text-muted small">
                                <i class="fas fa-calendar me-1"></i>@Model.UpdatedAtShamsi
                            </div>
                            <div class="text-muted small">
                                <i class="fas fa-user me-1"></i>@(Model.UpdatedByUser ?? "سیستم")
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="info-section">
                <h3 class="section-title">
                    <i class="fas fa-tasks"></i>
                    عملیات سریع
                </h3>
                
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Edit", new { id = Model.ClinicId })" class="btn btn-medical btn-medical-warning">
                        <i class="fas fa-edit me-2"></i>ویرایش اطلاعات
                    </a>
                    <button class="btn btn-medical" style="background: var(--medical-info);">
                        <i class="fas fa-plus me-2"></i>افزودن دپارتمان
                    </button>
                    <button class="btn btn-medical" style="background: var(--medical-success);">
                        <i class="fas fa-user-plus me-2"></i>اضافه کردن پزشک
                    </button>
                    <button class="btn btn-outline-secondary">
                        <i class="fas fa-print me-2"></i>چاپ گزارش
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>