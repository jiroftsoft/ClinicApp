@using ClinicApp.Models.Enums
@model List<ClinicApp.ViewModels.Triage.TriageSummaryDto>
@{
    var recentAssessments = Model ?? new List<ClinicApp.ViewModels.Triage.TriageSummaryDto>();
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>شناسه</th>
                <th>بیمار</th>
                <th>شکایت اصلی</th>
                <th>سطح</th>
                <th>وضعیت</th>
                <th>زمان ورود</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @if (recentAssessments.Any())
            {
                foreach (var assessment in recentAssessments.Take(10))
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("Details", "Triage", new { id = assessment.TriageAssessmentId })" class="text-primary">
                                #@assessment.TriageAssessmentId
                            </a>
                        </td>
                        <td>
                            <strong>@assessment.PatientFullName</strong>
                            <br><small class="text-muted">#@assessment.PatientId</small>
                        </td>
                        <td>
                            <span class="text-truncate d-inline-block" style="max-width: 200px;" title="@assessment.ChiefComplaint">
                                @assessment.ChiefComplaint
                            </span>
                        </td>
                        <td>
                            <span class="badge badge-@(assessment.Level == TriageLevel.ESI1 ? "danger" : 
                                                      assessment.Level == TriageLevel.ESI2 ? "warning" :
                                                      assessment.Level == TriageLevel.ESI3 ? "info" :
                                                      assessment.Level == TriageLevel.ESI4 ? "success" : "secondary")">
                                @assessment.Level
                            </span>
                        </td>
                        <td>
                            @if (assessment.TriageEndAtUtc.HasValue)
                            {
                                <span class="badge badge-success">تکمیل شده</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">در انتظار</span>
                            }
                        </td>
                        <td>
                            <small>@assessment.ArrivalAtUtc.ToString("HH:mm")</small>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a href="@Url.Action("Details", "Triage", new { id = assessment.TriageAssessmentId })" 
                                   class="btn btn-info btn-sm" title="مشاهده جزئیات">
                                    <i class="fas fa-eye"></i>
                                </a>
                                @if (!assessment.TriageEndAtUtc.HasValue)
                                {
                                    <a href="@Url.Action("Edit", "Triage", new { id = assessment.TriageAssessmentId })" 
                                       class="btn btn-warning btn-sm" title="ویرایش">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">
                        <i class="fas fa-inbox fa-2x mb-2"></i>
                        <br>هیچ ارزیابی اخیری یافت نشد
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (recentAssessments.Count > 10)
{
    <div class="text-center mt-3">
        <a href="@Url.Action("Index", "Triage")" class="btn btn-outline-primary btn-sm">
            <i class="fas fa-list"></i>
            مشاهده همه ارزیابی‌ها
        </a>
    </div>
}
