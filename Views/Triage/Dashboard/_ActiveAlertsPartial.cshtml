@using ClinicApp.Models.Enums
@model List<ClinicApp.ViewModels.Triage.TriageAlertViewModel>
@{
    var activeAlerts = Model ?? new List<ClinicApp.ViewModels.Triage.TriageAlertViewModel>();
}

<div class="alerts-container">
    @if (activeAlerts.Any())
    {
        foreach (var alert in activeAlerts.OrderByDescending(a => a.Priority))
        {
             <div class="alert alert-@(alert.AlertType == TriageAlertType.Critical ? "danger" :
                                       alert.AlertType == TriageAlertType.Warning ? "warning" :
                                       alert.AlertType == TriageAlertType.Info ? "info" : "secondary") alert-dismissible fade show" role="alert">
                <div class="d-flex align-items-start">
                    <div class="flex-shrink-0">
                         <i class="fas fa-@(alert.AlertType == TriageAlertType.Critical ? "exclamation-triangle" :
                                           alert.AlertType == TriageAlertType.Warning ? "exclamation-circle" :
                                           alert.AlertType == TriageAlertType.Info ? "info-circle" : "bell") fa-lg"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="alert-heading mb-1">
                            @alert.Title
                            @if (alert.Priority > 5)
                            {
                                <span class="badge badge-danger">اولویت بالا</span>
                            }
                        </h6>
                        <p class="mb-2">@alert.Message</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="fas fa-clock"></i>
                                @alert.CreatedAt.ToString("HH:mm")
                            </small>
                            @if (!string.IsNullOrEmpty(alert.ActionUrl))
                            {
                                <a href="@alert.ActionUrl" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-external-link-alt"></i>
                                    @alert.ActionText
                                </a>
                            }
                        </div>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    }
    else
    {
        <div class="text-center text-muted py-4">
            <i class="fas fa-check-circle fa-3x mb-3 text-success"></i>
            <h6>هیچ هشدار فعالی وجود ندارد</h6>
            <p class="mb-0">سیستم در وضعیت عادی قرار دارد</p>
        </div>
    }
</div>

@if (activeAlerts.Count > 5)
{
    <div class="text-center mt-3">
        <a href="@Url.Action("Index", "TriageReport")" class="btn btn-outline-info btn-sm">
            <i class="fas fa-chart-line"></i>
            مشاهده همه هشدارها
        </a>
    </div>
}
