@model ClinicApp.Interfaces.PagedResult<ClinicApp.ViewModels.PatientIndexViewModel>

<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Items.FirstOrDefault().FullName)</th>
                <th>@Html.DisplayNameFor(model => model.Items.FirstOrDefault().NationalCode)</th>
                <th>@Html.DisplayNameFor(model => model.Items.FirstOrDefault().PhoneNumber)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Items.Any())
            {
                foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.NationalCode)</td>
                        <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                        <td class="text-right">
                            @Html.ActionLink("ویرایش", "Edit", new { id = item.PatientId }, new { @class = "btn btn-sm btn-outline-warning" })
                            @Html.ActionLink("جزئیات", "Details", new { id = item.PatientId }, new { @class = "btn btn-sm btn-outline-info" })
                            <button class="btn btn-sm btn-outline-danger delete-btn" data-id="@item.PatientId" data-name="@item.FullName">حذف</button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">هیچ بیماری یافت نشد.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model != null && Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" href="#" data-page="@(Model.PageNumber - 1)">&laquo;</a>
            </li>
            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="#" data-page="@i">@i</a>
                </li>
            }
            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="#" data-page="@(Model.PageNumber + 1)">&raquo;</a>
            </li>
        </ul>
    </nav>
}