@model IEnumerable<ClinicApp.ViewModels.Insurance.PatientInsurance.PatientInsuranceIndexViewModel>

@if (Model != null && Model.Any())
{
    <div class="card border-info" style="border-width: 2px;">
        <div class="card-header bg-info text-white" style="background-color: #17a2b8 !important;">
            <h5 class="card-title mb-0" style="color: #ffffff !important; font-weight: 600;">
                <i class="fa fa-shield" style="color: #ffffff !important;"></i>
                بیمه‌های بیمار
            </h5>
        </div>
        <div class="card-body" style="background-color: #ffffff;">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th style="color: #2c3e50 !important; font-weight: 600;">نوع بیمه</th>
                            <th style="color: #2c3e50 !important; font-weight: 600;">نام طرح</th>
                            <th style="color: #2c3e50 !important; font-weight: 600;">شماره بیمه</th>
                            <th style="color: #2c3e50 !important; font-weight: 600;">تاریخ شروع</th>
                            <th style="color: #2c3e50 !important; font-weight: 600;">تاریخ پایان</th>
                            <th style="color: #2c3e50 !important; font-weight: 600;">وضعیت</th>
                            <th style="color: #2c3e50 !important; font-weight: 600;">درصد پوشش</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var insurance in Model)
                        {
                            <tr>
                                <td>
                                    @if (insurance.IsPrimary)
                                    {
                                        <span class="badge badge-primary" style="background-color: #007bff !important; color: #ffffff !important; font-weight: 600;">
                                            اصلی
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary" style="background-color: #6c757d !important; color: #ffffff !important; font-weight: 600;">
                                            تکمیلی
                                        </span>
                                    }
                                </td>
                                <td style="color: #212529 !important; font-weight: 600;">
                                    @insurance.InsurancePlanName
                                </td>
                                <td style="color: #212529 !important; font-weight: 600;">
                                    @insurance.PolicyNumber
                                </td>
                                <td style="color: #212529 !important; font-weight: 600;">
                                    @insurance.StartDateShamsi
                                </td>
                                <td style="color: #212529 !important; font-weight: 600;">
                                    @insurance.EndDateShamsi
                                </td>
                                <td>
                                    @if (insurance.IsActive)
                                    {
                                        <span class="badge badge-success" style="background-color: #28a745 !important; color: #ffffff !important; font-weight: 600;">
                                            فعال
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger" style="background-color: #dc3545 !important; color: #ffffff !important; font-weight: 600;">
                                            غیرفعال
                                        </span>
                                    }
                                </td>
                                <td style="color: #212529 !important; font-weight: 600;">
                                    @insurance.CoveragePercent%
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card border-warning" style="border-width: 2px;">
        <div class="card-header bg-warning text-dark" style="background-color: #ffc107 !important;">
            <h5 class="card-title mb-0" style="color: #212529 !important; font-weight: 600;">
                <i class="fa fa-exclamation-triangle" style="color: #212529 !important;"></i>
                بیمه‌های بیمار
            </h5>
        </div>
        <div class="card-body text-center" style="background-color: #ffffff;">
            <div class="alert alert-info" style="background-color: #d1ecf1 !important; border-color: #bee5eb !important; color: #0c5460 !important;">
                <i class="fa fa-info-circle" style="color: #0c5460 !important;"></i>
                <strong>هیچ بیمه‌ای برای این بیمار ثبت نشده است.</strong>
                <br>
                <small>برای افزودن بیمه، از بخش مدیریت بیمه‌های بیمار استفاده کنید.</small>
            </div>
        </div>
    </div>
}
