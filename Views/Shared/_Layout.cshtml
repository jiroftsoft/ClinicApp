                console.error('JavaScript syntax error detected:', e.message);
                return false;
            }
        }
        
        // Global Syntax Error Prevention
        window.preventSyntaxErrors = function() {
            // Override console.error to catch syntax errors
            const originalError = console.error;
            console.error = function(...args) {
                if (args[0] && args[0].includes && args[0].includes('Unexpected token')) {
                    console.warn('Syntax error prevented, reloading page...');
                setTimeout(function() {
                    window.location.reload();
                }, 500);
                }
                originalError.apply(console, args);
            };
        };
        
        // Initialize syntax error prevention
        window.preventSyntaxErrors();
