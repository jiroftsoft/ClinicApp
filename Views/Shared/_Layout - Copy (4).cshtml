                toastr.warning("@Html.Raw(TempData["WarningMessage"])");
            </text>
        }
        // اسکرول نوار ناوبری
        document.addEventListener('DOMContentLoaded', function() {
            const navbar = document.querySelector('.main-navbar');
            const scrollThreshold = 50;
            const specialSection = document.getElementById('specialSection');
            // بررسی اولیه وضعیت اسکرول
            if (window.scrollY > scrollThreshold) {
                navbar.classList.add('scrolled');
            }
            // اضافه کردن رویداد اسکرول
            window.addEventListener('scroll', function() {
                if (window.scrollY > scrollThreshold) {
                    navbar.classList.add('scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                }
                // انیمیشن بخش ویژه
                if (specialSection) {
                    const sectionPosition = specialSection.getBoundingClientRect().top;
                    const screenPosition = window.innerHeight / 1.3;
                    if (sectionPosition < screenPosition) {
                        specialSection.classList.add('animated');
                    }
                }
            });
            // انیمیشن‌های ورود به صفحه
            const animateElements = document.querySelectorAll('[data-aos="fade-up"]');
            animateElements.forEach(element => {
                element.style.opacity = '0';
                element.style.transform = 'translateY(25px)';
            });
            setTimeout(() => {
                animateElements.forEach((element, index) => {
                    setTimeout(() => {
                        element.style.transition = 'opacity 0.8s ease, transform 0.8s ease';
                        element.style.opacity = '1';
                        element.style.transform = 'translateY(0)';
                    }, 250 * index);
                });
            }, 400);
            // اضافه کردن افکت هاور به کارت‌ها
            const cards = document.querySelectorAll('.card');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-7px)';
                });
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
            // بررسی بخش ویژه برای انیمیشن
            if (specialSection) {
                const sectionPosition = specialSection.getBoundingClientRect().top;
                const screenPosition = window.innerHeight / 1.3;
                if (sectionPosition < screenPosition) {
                    specialSection.classList.add('animated');
                }
            }
            // اصلاح کامل مشکل مگامنو
            const dropdowns = document.querySelectorAll('.dropdown');
            dropdowns.forEach(dropdown => {
                const toggle = dropdown.querySelector('[data-bs-toggle="dropdown"]');
                const menu = dropdown.querySelector('.dropdown-menu');
                if (toggle && menu) {
                    // اضافه کردن رویداد موس برای نمایش مگامنو
                    dropdown.addEventListener('mouseenter', function() {
                        toggle.classList.add('show');
                        menu.classList.add('show');
                    });
                    // اضافه کردن رویداد موس برای پنهان کردن مگامنو
                    dropdown.addEventListener('mouseleave', function(e) {
                        // بررسی اینکه آیا موس از منو خارج شده یا خیر
                        if (!menu.contains(e.relatedTarget)) {
                            toggle.classList.remove('show');
                            menu.classList.remove('show');
                        }
                    });
                    // مدیریت رویداد برای خود منو
                    menu.addEventListener('mouseleave', function(e) {
                        if (!dropdown.contains(e.relatedTarget)) {
                            toggle.classList.remove('show');
                            menu.classList.remove('show');
                        }
                    });
                }
            });
            // اطمینان از نمایش صحیح مگامنو در موبایل
            const mobileDropdowns = document.querySelectorAll('.dropdown [data-bs-toggle="dropdown"]');
            mobileDropdowns.forEach(toggle => {
                toggle.addEventListener('click', function(e) {
                    if (window.innerWidth <= 992) {
                        const menu = this.nextElementSibling;
                        if (menu && menu.classList.contains('dropdown-menu')) {
                            e.preventDefault();
                            this.classList.toggle('show');
                            menu.classList.toggle('show');
                            // بستن سایر منوها
                            document.querySelectorAll('.dropdown-menu').forEach(m => {
                                if (m !== menu) {
                                    m.classList.remove('show');
                                    m.previousElementSibling.classList.remove('show');
                                }
                            });
                        }
                    }
                });
            });
        });
    </script>
