<!-- JavaScript تخصصی بخش دپارتمان -->
<script>
    $(document).ready(function() {
        initializeDepartmentSection();
    });

    function initializeDepartmentSection() {
        console.log('🏥 Initializing Department Section...');
        
        // تنظیمات اولیه
        setupSelect2();
        setupDepartmentEvents();
        setupDepartmentValidation();
        setupDepartmentActions();
        
        // بارگذاری دپارتمان‌ها
        loadDepartments();
        
        console.log('✅ Department Section initialized successfully');
    }

    function setupSelect2() {
        // تنظیمات Select2 برای دپارتمان‌ها
        $('.select2-department').select2({
            placeholder: 'انتخاب کنید...',
            allowClear: true,
            width: '100%',
            language: {
                noResults: function() {
                    return 'نتیجه‌ای یافت نشد';
                },
                searching: function() {
                    return 'در حال جستجو...';
                }
            }
        });

        // تنظیمات Select2 برای پزشکان
        $('.select2-doctor').select2({
            placeholder: 'انتخاب کنید...',
            allowClear: true,
            width: '100%',
            disabled: true,
            language: {
                noResults: function() {
                    return 'نتیجه‌ای یافت نشد';
                },
                searching: function() {
                    return 'در حال جستجو...';
                }
            }
        });
    }

    function setupDepartmentEvents() {
        // تغییر دپارتمان
        $('#departmentSelect').on('change', function() {
            const departmentId = $(this).val();
            if (departmentId) {
                loadDoctors(departmentId);
                updateDepartmentInfo(departmentId);
            } else {
                clearDoctorSelection();
                hideDepartmentInfo();
            }
            updateSelectionSummary();
        });

        // جستجوی دپارتمان
        $('#searchDepartmentBtn').on('click', function() {
            searchDepartments();
        });

        $('#departmentSearch').on('keypress', function(e) {
            if (e.which === 13) {
                searchDepartments();
            }
        });

        // تغییر پزشک
        $('#doctorSelect').on('change', function() {
            const doctorId = $(this).val();
            if (doctorId) {
                updateDoctorInfo(doctorId);
            } else {
                hideDoctorInfo();
            }
            updateSelectionSummary();
        });

        // جستجوی پزشک
        $('#searchDoctorBtn').on('click', function() {
            searchDoctors();
        });

        $('#doctorSearch').on('keypress', function(e) {
            if (e.which === 13) {
                searchDoctors();
            }
        });
    }

    function setupDepartmentValidation() {
        // اعتبارسنجی Real-time
        $('#departmentSelect').on('change', function() {
            validateDepartmentSelection();
        });

        $('#doctorSelect').on('change', function() {
            validateDoctorSelection();
        });
    }

    function setupDepartmentActions() {
        // دکمه بارگذاری دپارتمان‌ها
        $('#loadDepartmentsBtn').on('click', function() {
            loadDepartments();
        });

        // دکمه ذخیره انتخاب
        $('#saveDepartmentBtn').on('click', function() {
            saveDepartmentSelection();
        });
    }

    function loadDepartments() {
        $.ajax({
            url: '@Url.Action("GetActiveClinics", "ReceptionDepartmentDoctor")',
            type: 'GET',
            dataType: 'json',
            success: function(response) {
                if (response.success && response.data) {
                    populateClinics(response.data);
                } else {
                    showNotification('خطا در بارگذاری کلینیک‌ها', 'error');
                }
            },
            error: function() {
                showNotification('خطا در بارگذاری کلینیک‌ها', 'error');
            }
        });
    }

    function populateDepartments(departments) {
        const select = $('#departmentSelect');
        select.empty().append('<option value="">انتخاب کنید</option>');
        
        departments.forEach(function(department) {
            select.append(`<option value="${department.departmentId}">${department.departmentName}</option>`);
        });
        
        select.trigger('change');
    }

    function loadDoctors(departmentId) {
        $('#doctorSelect').prop('disabled', true).empty().append('<option value="">در حال بارگذاری...</option>');
        
        $.ajax({
            url: '@Url.Action("GetDoctorsByDepartment", "ReceptionDepartment")',
            type: 'GET',
            data: { departmentId: departmentId },
            dataType: 'json',
            success: function(response) {
                const select = $('#doctorSelect');
                select.empty().append('<option value="">انتخاب کنید</option>');
                
                if (response.success && response.data) {
                    response.data.forEach(function(doctor) {
                        select.append(`<option value="${doctor.doctorId}">${doctor.doctorName}</option>`);
                    });
                    select.prop('disabled', false);
                    $('#doctorSearch').prop('disabled', false);
                    $('#searchDoctorBtn').prop('disabled', false);
                } else {
                    select.append('<option value="">هیچ پزشکی یافت نشد</option>');
                }
                
                select.trigger('change');
            },
            error: function() {
                $('#doctorSelect').empty().append('<option value="">خطا در بارگذاری</option>');
            }
        });
    }

    function searchDepartments() {
        const searchTerm = $('#departmentSearch').val().trim();
        
        if (!searchTerm) {
            loadDepartments();
            return;
        }
        
        $.ajax({
            url: '@Url.Action("SearchDepartments", "ReceptionDepartment")',
            type: 'GET',
            data: { searchTerm: searchTerm },
            dataType: 'json',
            success: function(response) {
                if (response.success && response.data) {
                    populateDepartments(response.data);
                } else {
                    showNotification('نتیجه‌ای یافت نشد', 'info');
                }
            },
            error: function() {
                showNotification('خطا در جستجو', 'error');
            }
        });
    }

    function searchDoctors() {
        const departmentId = $('#departmentSelect').val();
        const searchTerm = $('#doctorSearch').val().trim();
        
        if (!departmentId) {
            showNotification('ابتدا دپارتمان را انتخاب کنید', 'warning');
            return;
        }
        
        if (!searchTerm) {
            loadDoctors(departmentId);
            return;
        }
        
        $.ajax({
            url: '@Url.Action("SearchDoctors", "ReceptionDepartment")',
            type: 'GET',
            data: { 
                departmentId: departmentId,
                searchTerm: searchTerm
            },
            dataType: 'json',
            success: function(response) {
                if (response.success && response.data) {
                    populateDoctors(response.data);
                } else {
                    showNotification('نتیجه‌ای یافت نشد', 'info');
                }
            },
            error: function() {
                showNotification('خطا در جستجو', 'error');
            }
        });
    }

    function populateDoctors(doctors) {
        const select = $('#doctorSelect');
        select.empty().append('<option value="">انتخاب کنید</option>');
        
        doctors.forEach(function(doctor) {
            select.append(`<option value="${doctor.doctorId}">${doctor.doctorName}</option>`);
        });
        
        select.trigger('change');
    }

    function updateDepartmentInfo(departmentId) {
        // دریافت اطلاعات دپارتمان
        $.ajax({
            url: '@Url.Action("GetDepartmentInfo", "ReceptionDepartment")',
            type: 'GET',
            data: { departmentId: departmentId },
            dataType: 'json',
            success: function(response) {
                if (response.success && response.data) {
                    const dept = response.data;
                    $('#selectedDepartmentName').text(dept.departmentName);
                    $('#doctorsCount').text(dept.doctorsCount);
                    $('#departmentInfo').show();
                }
            }
        });
    }

    function updateDoctorInfo(doctorId) {
        // دریافت اطلاعات پزشک
        $.ajax({
            url: '@Url.Action("GetDoctorInfo", "ReceptionDepartment")',
            type: 'GET',
            data: { doctorId: doctorId },
            dataType: 'json',
            success: function(response) {
                if (response.success && response.data) {
                    const doctor = response.data;
                    $('#selectedDoctorName').text(doctor.doctorName);
                    $('#selectedDoctorSpecialty').text(doctor.specialty);
                    $('#doctorInfo').show();
                }
            }
        });
    }

    function hideDepartmentInfo() {
        $('#departmentInfo').hide();
    }

    function hideDoctorInfo() {
        $('#doctorInfo').hide();
    }

    function clearDoctorSelection() {
        $('#doctorSelect').empty().append('<option value="">ابتدا دپارتمان را انتخاب کنید</option>').prop('disabled', true);
        $('#doctorSearch').prop('disabled', true);
        $('#searchDoctorBtn').prop('disabled', true);
        hideDoctorInfo();
    }

    function validateDepartmentSelection() {
        const departmentId = $('#departmentSelect').val();
        return departmentId && departmentId !== '';
    }

    function validateDoctorSelection() {
        const doctorId = $('#doctorSelect').val();
        return doctorId && doctorId !== '';
    }

    function updateSelectionSummary() {
        const departmentId = $('#departmentSelect').val();
        const doctorId = $('#doctorSelect').val();
        
        if (departmentId) {
            const departmentName = $('#departmentSelect option:selected').text();
            $('#selectedDepartmentSummary').text(departmentName);
        } else {
            $('#selectedDepartmentSummary').text('انتخاب نشده');
        }
        
        if (doctorId) {
            const doctorName = $('#doctorSelect option:selected').text();
            $('#selectedDoctorSummary').text(doctorName);
        } else {
            $('#selectedDoctorSummary').text('انتخاب نشده');
        }
    }

    function saveDepartmentSelection() {
        if (!validateDepartmentSelection()) {
            showNotification('لطفاً دپارتمان را انتخاب کنید', 'warning');
            return;
        }
        
        if (!validateDoctorSelection()) {
            showNotification('لطفاً پزشک را انتخاب کنید', 'warning');
            return;
        }
        
        const selectionData = {
            departmentId: $('#departmentSelect').val(),
            doctorId: $('#doctorSelect').val()
        };
        
        $.ajax({
            url: '@Url.Action("SaveDepartmentSelection", "ReceptionDepartment")',
            type: 'POST',
            data: selectionData,
            dataType: 'json',
            success: function(response) {
                if (response.success) {
                    showNotification('انتخاب دپارتمان و پزشک با موفقیت ذخیره شد', 'success');
                } else {
                    showNotification(response.message || 'خطا در ذخیره انتخاب', 'error');
                }
            },
            error: function() {
                showNotification('خطا در ذخیره انتخاب', 'error');
            }
        });
    }

    function showNotification(message, type) {
        const alertClass = {
            'success': 'alert-success',
            'error': 'alert-danger',
            'warning': 'alert-warning',
            'info': 'alert-info'
        }[type] || 'alert-info';
        
        const alert = $(`
            <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                ${message}
