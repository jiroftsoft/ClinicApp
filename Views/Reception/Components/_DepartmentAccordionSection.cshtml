@using ClinicApp.ViewModels.Reception
@using ClinicApp.Constants
@model DepartmentAccordionViewModel

<!-- بخش دپارتمان و پزشک - آکاردئون -->
<div class="department-accordion-section" id="departmentAccordionSection">
    
    <!-- Header بخش -->
    <div class="section-header">
        <div class="section-title">
            <h5 class="mb-0">
                <i class="fas fa-hospital me-2"></i>
                دپارتمان و پزشک
            </h5>
            <p class="section-subtitle mb-0">انتخاب تخصص و پزشک معالج</p>
        </div>
        <div class="section-actions">
            <button type="button" class="btn btn-outline-primary btn-sm" id="loadDepartmentsBtn">
                <i class="fas fa-sync me-1"></i>
                <span class="btn-text">بارگذاری دپارتمان‌ها</span>
                <span class="btn-loading d-none">
                    <i class="fas fa-spinner fa-spin me-1"></i>
                    در حال بارگذاری...
                </span>
            </button>
            <button type="button" class="btn btn-outline-success btn-sm" id="saveDepartmentBtn">
                <i class="fas fa-save me-1"></i>
                <span class="btn-text">ذخیره انتخاب</span>
                <span class="btn-loading d-none">
                    <i class="fas fa-spinner fa-spin me-1"></i>
                    در حال ذخیره...
                </span>
            </button>
        </div>
    </div>

    <!-- محتوای بخش -->
    <div class="section-content">
        <div class="row">
            <!-- ستون چپ: انتخاب دپارتمان -->
            <div class="col-lg-6">
                <div class="department-selection-card">
                    <div class="card-header">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-building me-2"></i>
                            انتخاب دپارتمان
                        </h6>
                        <span class="badge bg-primary">الزامی</span>
                    </div>
                    <div class="card-body">
                        <!-- کلینیک -->
                        <div class="form-group mb-3">
                            <label class="form-label">
                                <i class="fas fa-hospital me-1"></i>
                                کلینیک
                            </label>
                            <input type="text" 
                                   class="form-control" 
                                   id="clinicName" 
                                   value="@Model.ClinicName"
                                   readonly>
                        </div>

                        <!-- دپارتمان -->
                        <div class="form-group mb-3">
                            <label class="form-label">
                                <i class="fas fa-stethoscope me-1"></i>
                                دپارتمان <span class="text-danger">*</span>
                            </label>
                            <select class="form-select select2-department" 
                                    id="departmentSelect" 
                                    name="DepartmentId"
                                    data-placeholder="انتخاب دپارتمان">
                                <option value="">انتخاب کنید</option>
                            </select>
                        </div>

                        <!-- جستجوی دپارتمان -->
                        <div class="form-group mb-3">
                            <label class="form-label">
                                <i class="fas fa-search me-1"></i>
                                جستجوی سریع دپارتمان
                            </label>
                            <div class="input-group">
                                <input type="text" 
                                       class="form-control" 
                                       id="departmentSearch" 
                                       placeholder="جستجو در دپارتمان‌ها...">
                                <button class="btn btn-outline-secondary" type="button" id="searchDepartmentBtn">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>

                        <!-- اطلاعات دپارتمان انتخاب شده -->
                        <div class="department-info d-none" id="departmentInfo">
                            <div class="info-card">
                                <div class="info-header">
                                    <h6 class="info-title">اطلاعات دپارتمان</h6>
                                </div>
                                <div class="info-body">
                                    <div class="info-item">
                                        <span class="info-label">نام دپارتمان:</span>
                                        <span class="info-value" id="selectedDepartmentName">-</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">تعداد پزشکان:</span>
                                        <span class="info-value" id="doctorsCount">-</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">وضعیت:</span>
                                        <span class="info-value">
                                            <span class="badge bg-success">فعال</span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ستون راست: انتخاب پزشک -->
            <div class="col-lg-6">
                <div class="doctor-selection-card">
                    <div class="card-header">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-user-md me-2"></i>
                            انتخاب پزشک
                        </h6>
                        <span class="badge bg-success">الزامی</span>
                    </div>
                    <div class="card-body">
                        <!-- پزشک -->
                        <div class="form-group mb-3">
                            <label class="form-label">
                                <i class="fas fa-user-md me-1"></i>
                                پزشک <span class="text-danger">*</span>
                            </label>
                            <select class="form-select select2-doctor" 
                                    id="doctorSelect" 
                                    name="DoctorId"
                                    data-placeholder="ابتدا دپارتمان را انتخاب کنید"
                                    disabled>
                                <option value="">ابتدا دپارتمان را انتخاب کنید</option>
                            </select>
                        </div>

                        <!-- جستجوی پزشک -->
                        <div class="form-group mb-3">
                            <label class="form-label">
                                <i class="fas fa-search me-1"></i>
                                جستجوی سریع پزشک
                            </label>
                            <div class="input-group">
                                <input type="text" 
                                       class="form-control" 
                                       id="doctorSearch" 
                                       placeholder="جستجو در پزشکان..."
                                       disabled>
                                <button class="btn btn-outline-secondary" type="button" id="searchDoctorBtn" disabled>
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>

                        <!-- اطلاعات پزشک انتخاب شده -->
                        <div class="doctor-info d-none" id="doctorInfo">
                            <div class="info-card">
                                <div class="info-header">
                                    <h6 class="info-title">اطلاعات پزشک</h6>
                                </div>
                                <div class="info-body">
                                    <div class="info-item">
                                        <span class="info-label">نام پزشک:</span>
                                        <span class="info-value" id="selectedDoctorName">-</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">تخصص:</span>
                                        <span class="info-value" id="selectedDoctorSpecialty">-</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">وضعیت:</span>
                                        <span class="info-value">
                                            <span class="badge bg-success">فعال</span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- خلاصه انتخاب -->
        <div class="selection-summary">
            <div class="row">
                <div class="col-md-6">
                    <div class="summary-card">
                        <div class="summary-icon">
                            <i class="fas fa-building"></i>
                        </div>
                        <div class="summary-content">
                            <div class="summary-label">دپارتمان انتخاب شده</div>
                            <div class="summary-value" id="selectedDepartmentSummary">انتخاب نشده</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="summary-card">
                        <div class="summary-icon">
                            <i class="fas fa-user-md"></i>
                        </div>
                        <div class="summary-content">
                            <div class="summary-label">پزشک انتخاب شده</div>
                            <div class="summary-value" id="selectedDoctorSummary">انتخاب نشده</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

