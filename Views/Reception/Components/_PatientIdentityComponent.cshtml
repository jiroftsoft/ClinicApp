    function searchPatient() {
        const nationalCode = $('#patientNationalCode').val();
        
        if (!nationalCode || nationalCode.length !== 10) {
            showError('Ú©Ø¯ Ù…Ù„ÛŒ Ø¨Ø§ÛŒØ¯ 10 Ø±Ù‚Ù… Ø¨Ø§Ø´Ø¯');
