        }

        console.log('ğŸ” Searching patient with national code:', nationalCode);
        
        // Show loading state
        $('#searchPatientBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i>');
        
        $.ajax({
            url: '@Url.Action("SearchPatientByNationalCode", "ReceptionPatient")',
            type: 'POST',
