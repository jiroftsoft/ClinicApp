@using ClinicApp.ViewModels.Reception
@using ClinicApp.Constants
@model ReceptionAccordionViewModel

<!-- فرم پذیرش آکاردئون فوق حرفه‌ای - محیط درمانی -->
<div class="reception-accordion-form" id="receptionAccordionForm">
    
    <!-- Header فرم -->
    <div class="accordion-form-header">
        <div class="form-title-section">
            <h2 class="form-title">
                <i class="fas fa-clipboard-list me-3"></i>
                فرم پذیرش بیمار
            </h2>
            <p class="form-subtitle">سیستم یکپارچه پذیرش - محیط درمانی حرفه‌ای</p>
        </div>
        <div class="form-status-section">
            <div class="status-indicator" id="formStatusIndicator">
                <span class="status-icon">
                    <i class="fas fa-circle"></i>
                </span>
                <span class="status-text">آماده</span>
            </div>
            <div class="progress-indicator">
                <span class="progress-text">
                    <span id="completedSections">0</span> از <span id="totalSections">5</span> بخش تکمیل شده
                </span>
                <div class="progress-bar">
                    <div class="progress-fill" id="progressFill" style="width: 0%"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- آکاردئون اصلی -->
    <div class="accordion" id="receptionAccordion" role="tablist">
        
        <!-- بخش 1: اطلاعات بیمار -->
        <div class="accordion-item" id="patientAccordionItem">
            <h2 class="accordion-header" id="patientAccordionHeader">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" 
                        data-bs-target="#patientAccordionCollapse" aria-expanded="true" 
                        aria-controls="patientAccordionCollapse" id="patientAccordionButton">
                    <div class="accordion-button-content">
                        <div class="accordion-icon">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="accordion-title">
                            <span class="title-text">اطلاعات بیمار</span>
                            <span class="title-subtitle">جستجو و ثبت اطلاعات هویتی</span>
                        </div>
                        <div class="accordion-status">
                            <span class="status-badge" id="patientStatusBadge">
                                <i class="fas fa-circle"></i>
                                <span>آماده</span>
                            </span>
                        </div>
                    </div>
                </button>
            </h2>
            <div id="patientAccordionCollapse" class="accordion-collapse collapse show" 
                 aria-labelledby="patientAccordionHeader" data-bs-parent="#receptionAccordion">
                <div class="accordion-body">
                    @Html.Partial("Components/_PatientAccordionSection", Model.Patient)
                </div>
            </div>
        </div>

        <!-- بخش 2: اطلاعات بیمه -->
        <div class="accordion-item" id="insuranceAccordionItem">
            <h2 class="accordion-header" id="insuranceAccordionHeader">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                        data-bs-target="#insuranceAccordionCollapse" aria-expanded="false" 
                        aria-controls="insuranceAccordionCollapse" id="insuranceAccordionButton">
                    <div class="accordion-button-content">
                        <div class="accordion-icon">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <div class="accordion-title">
                            <span class="title-text">اطلاعات بیمه</span>
                            <span class="title-subtitle">بیمه پایه و تکمیلی</span>
                        </div>
                        <div class="accordion-status">
                            <span class="status-badge" id="insuranceStatusBadge">
                                <i class="fas fa-circle"></i>
                                <span>در انتظار</span>
                            </span>
                        </div>
                    </div>
                </button>
            </h2>
            <div id="insuranceAccordionCollapse" class="accordion-collapse collapse" 
                 aria-labelledby="insuranceAccordionHeader" data-bs-parent="#receptionAccordion">
                <div class="accordion-body">
                    @Html.Partial("Components/_InsuranceAccordionSection", Model.Insurance)
                </div>
            </div>
        </div>

        <!-- بخش 3: دپارتمان و پزشک -->
        <div class="accordion-item" id="departmentAccordionItem">
            <h2 class="accordion-header" id="departmentAccordionHeader">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                        data-bs-target="#departmentAccordionCollapse" aria-expanded="false" 
                        aria-controls="departmentAccordionCollapse" id="departmentAccordionButton">
                    <div class="accordion-button-content">
                        <div class="accordion-icon">
                            <i class="fas fa-hospital"></i>
                        </div>
                        <div class="accordion-title">
                            <span class="title-text">دپارتمان و پزشک</span>
                            <span class="title-subtitle">انتخاب تخصص و پزشک معالج</span>
                        </div>
                        <div class="accordion-status">
                            <span class="status-badge" id="departmentStatusBadge">
                                <i class="fas fa-circle"></i>
                                <span>در انتظار</span>
                            </span>
                        </div>
                    </div>
                </button>
            </h2>
            <div id="departmentAccordionCollapse" class="accordion-collapse collapse" 
                 aria-labelledby="departmentAccordionHeader" data-bs-parent="#receptionAccordion">
                <div class="accordion-body">
                    @Html.Partial("Components/_DepartmentAccordionSection", Model.Department)
                </div>
            </div>
        </div>

        <!-- بخش 4: انتخاب خدمات -->
        <div class="accordion-item" id="serviceAccordionItem">
            <h2 class="accordion-header" id="serviceAccordionHeader">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                        data-bs-target="#serviceAccordionCollapse" aria-expanded="false" 
                        aria-controls="serviceAccordionCollapse" id="serviceAccordionButton">
                    <div class="accordion-button-content">
                        <div class="accordion-icon">
                            <i class="fas fa-stethoscope"></i>
                        </div>
                        <div class="accordion-title">
                            <span class="title-text">انتخاب خدمات</span>
                            <span class="title-subtitle">خدمات درمانی و محاسبه هزینه</span>
                        </div>
                        <div class="accordion-status">
                            <span class="status-badge" id="serviceStatusBadge">
                                <i class="fas fa-circle"></i>
                                <span>در انتظار</span>
                            </span>
                        </div>
                    </div>
                </button>
            </h2>
            <div id="serviceAccordionCollapse" class="accordion-collapse collapse" 
                 aria-labelledby="serviceAccordionHeader" data-bs-parent="#receptionAccordion">
                <div class="accordion-body">
                    @Html.Partial("Components/_ServiceAccordionSection", Model.Service)
                </div>
            </div>
        </div>

        <!-- بخش 5: پرداخت -->
        <div class="accordion-item" id="paymentAccordionItem">
            <h2 class="accordion-header" id="paymentAccordionHeader">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                        data-bs-target="#paymentAccordionCollapse" aria-expanded="false" 
                        aria-controls="paymentAccordionCollapse" id="paymentAccordionButton">
                    <div class="accordion-button-content">
                        <div class="accordion-icon">
                            <i class="fas fa-credit-card"></i>
                        </div>
                        <div class="accordion-title">
                            <span class="title-text">پرداخت</span>
                            <span class="title-subtitle">پرداخت آنلاین و نقدی</span>
                        </div>
                        <div class="accordion-status">
                            <span class="status-badge" id="paymentStatusBadge">
                                <i class="fas fa-circle"></i>
                                <span>در انتظار</span>
                            </span>
                        </div>
                    </div>
                </button>
            </h2>
            <div id="paymentAccordionCollapse" class="accordion-collapse collapse" 
                 aria-labelledby="paymentAccordionHeader" data-bs-parent="#receptionAccordion">
                <div class="accordion-body">
                    @Html.Partial("Components/_PaymentAccordionSection", Model.Payment)
                </div>
            </div>
        </div>
    </div>

    <!-- Footer فرم -->
    <div class="accordion-form-footer">
        <div class="form-actions">
            <button type="button" class="btn btn-outline-secondary" id="clearFormBtn">
                <i class="fas fa-eraser me-2"></i>
                پاک کردن فرم
            </button>
            <button type="button" class="btn btn-outline-primary" id="saveDraftBtn">
                <i class="fas fa-save me-2"></i>
                ذخیره پیش‌نویس
            </button>
            <button type="button" class="btn btn-success" id="submitFormBtn" disabled>
                <i class="fas fa-check me-2"></i>
                ثبت پذیرش
            </button>
        </div>
        <div class="form-summary">
            <div class="summary-item">
                <span class="summary-label">مبلغ کل:</span>
                <span class="summary-value" id="totalAmount">0 ریال</span>
            </div>
            <div class="summary-item">
                <span class="summary-label">سهم بیمه:</span>
                <span class="summary-value" id="insuranceShare">0 ریال</span>
            </div>
            <div class="summary-item">
                <span class="summary-label">سهم بیمار:</span>
                <span class="summary-value" id="patientShare">0 ریال</span>
            </div>
        </div>
    </div>
</div>

<!-- CSS تخصصی آکاردئون -->
<style>
