        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Header فرم */
    .accordion-form-header {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        color: white;
        padding: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .form-title-section .form-title {
        font-size: 1.75rem;
        font-weight: 700;
        margin: 0;
        display: flex;
        align-items: center;
    }

    .form-title-section .form-subtitle {
        font-size: 1rem;
        opacity: 0.9;
        margin: 0.5rem 0 0 0;
    }

    .form-status-section {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 0.75rem;
    }

    .status-indicator {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        background: rgba(255, 255, 255, 0.2);
        padding: 0.5rem 1rem;
        border-radius: 25px;
        font-size: 0.9rem;
    }

    .status-icon i {
        color: #28a745;
    }

    .progress-indicator {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 0.25rem;
        min-width: 200px;
    }

    .progress-text {
        font-size: 0.85rem;
        opacity: 0.9;
    }

    .progress-bar {
        width: 100%;
        height: 6px;
        background: rgba(255, 255, 255, 0.3);
        border-radius: 3px;
        overflow: hidden;
    }

    .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, #28a745, #20c997);
        border-radius: 3px;
        transition: width 0.3s ease;
    }

    /* آکاردئون */
    .accordion {
        border: none;
    }

    .accordion-item {
        border: none;
        border-bottom: 1px solid #e9ecef;
        background: #ffffff;
    }

    .accordion-item:last-child {
        border-bottom: none;
    }

    .accordion-button {
        background: #f8f9fa;
        border: none;
        padding: 0;
        box-shadow: none;
        border-radius: 0;
        transition: all 0.3s ease;
    }

    .accordion-button:not(.collapsed) {
        background: #e3f2fd;
        color: #1976d2;
        box-shadow: none;
    }

    .accordion-button:focus {
        box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
        border-color: transparent;
    }

    .accordion-button-content {
        display: flex;
        align-items: center;
        width: 100%;
        padding: 1.5rem 2rem;
        gap: 1rem;
    }

    .accordion-icon {
        width: 50px;
        height: 50px;
        background: #007bff;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        flex-shrink: 0;
    }

    .accordion-button:not(.collapsed) .accordion-icon {
        background: #1976d2;
    }

    .accordion-title {
        flex: 1;
        display: flex;
        flex-direction: column;
