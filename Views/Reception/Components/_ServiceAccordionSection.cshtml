@using ClinicApp.ViewModels.Reception
@using ClinicApp.Constants
@model ServiceAccordionViewModel

<!-- بخش انتخاب خدمات - آکاردئون -->
<div class="service-accordion-section" id="serviceAccordionSection">
    
    <!-- Header بخش -->
    <div class="section-header">
        <div class="section-title">
            <h5 class="mb-0">
                <i class="fas fa-stethoscope me-2"></i>
                انتخاب خدمات
            </h5>
            <p class="section-subtitle mb-0">خدمات درمانی و محاسبه هزینه</p>
        </div>
        <div class="section-actions">
            <button type="button" class="btn btn-outline-primary btn-sm" id="loadServicesBtn">
                <i class="fas fa-sync me-1"></i>
                <span class="btn-text">بارگذاری خدمات</span>
                <span class="btn-loading d-none">
                    <i class="fas fa-spinner fa-spin me-1"></i>
                    در حال بارگذاری...
                </span>
            </button>
            <button type="button" class="btn btn-outline-success btn-sm" id="calculateServicesBtn">
                <i class="fas fa-calculator me-1"></i>
                <span class="btn-text">محاسبه هزینه</span>
                <span class="btn-loading d-none">
                    <i class="fas fa-spinner fa-spin me-1"></i>
                    در حال محاسبه...
                </span>
            </button>
        </div>
    </div>

    <!-- محتوای بخش -->
    <div class="section-content">
        <div class="row">
            <!-- ستون چپ: انتخاب خدمات -->
            <div class="col-lg-8">
                <div class="service-selection-card">
                    <div class="card-header">
                        <h6 class="card-title">
                            <i class="fas fa-list me-2"></i>
                            انتخاب خدمات
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-search me-1"></i>
                                جستجوی خدمات
                            </label>
                            <input type="text" class="form-control" id="serviceSearch" placeholder="نام خدمت را وارد کنید...">
                        </div>
                        
                        <div class="services-list" id="servicesList">
                            <!-- خدمات به صورت پویا لود می‌شوند -->
                        </div>
                    </div>
                </div>
            </div>

            <!-- ستون راست: خلاصه انتخاب -->
            <div class="col-lg-4">
                <div class="service-summary-card">
                    <div class="card-header">
                        <h6 class="card-title">
                            <i class="fas fa-calculator me-2"></i>
                            خلاصه انتخاب
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="summary-item">
                            <span class="summary-label">تعداد خدمات:</span>
                            <span class="summary-value" id="selectedServicesCount">0</span>
                        </div>
                        <div class="summary-item">
                            <span class="summary-label">مجموع هزینه:</span>
                            <span class="summary-value" id="totalCost">0 ریال</span>
                        </div>
                        <div class="summary-item">
                            <span class="summary-label">پوشش بیمه:</span>
                            <span class="summary-value" id="insuranceCoverage">0 ریال</span>
                        </div>
                        <hr>
                        <div class="summary-item total">
                            <span class="summary-label">سهم بیمار:</span>
                            <span class="summary-value" id="patientShare">0 ریال</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

