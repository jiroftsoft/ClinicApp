    function validateNationalCode(nationalCode) {
        // Ø§Ø¹ØªØ¨Ø§Ø±Ø³Ù†Ø¬ÛŒ Ú©Ø¯ Ù…Ù„ÛŒ Ø§ÛŒØ±Ø§Ù†ÛŒ
        if (!/^\d{10}$/.test(nationalCode)) {
            return false;
        }

        const check = parseInt(nationalCode.charAt(9));
        const sum = nationalCode.split('').slice(0, 9).reduce((acc, digit, index) => {
            return acc + parseInt(digit) * (10 - index);
        }, 0);

        const remainder = sum % 11;
        const calculatedCheck = remainder < 2 ? remainder : 11 - remainder;

        return check === calculatedCheck;
    }

    function validateRequiredField(field) {
