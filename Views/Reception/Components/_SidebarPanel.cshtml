@using ClinicApp.ViewModels.Reception
@model ReceptionIndexViewModel

<!-- Medical Sidebar Panel - Professional Medical Environment -->
<div class="medical-sidebar" id="medicalSidebar">
    <div class="sidebar-header">
        <div class="sidebar-title">
            <i class="fas fa-bars me-2"></i>
            <span>پنل کناری</span>
        </div>
        <button type="button" class="sidebar-toggle" id="sidebarToggle">
            <i class="fas fa-chevron-left"></i>
        </button>
    </div>

    <div class="sidebar-content">
               <!-- Professional Medical Sidebar - Component-Based -->
               <div class="sidebar-section" id="receptionHistorySection">
                   <div class="section-header">
                       <h6 class="section-title">
                           <i class="fas fa-clipboard-list me-2"></i>
                           سوابق پذیرش
                       </h6>
                   </div>
                   <div class="section-content">
                       <div class="history-filters">
                           <div class="form-group">
                               <label class="form-label">فیلتر تاریخ</label>
                               <div class="input-group">
                                   <input type="text" id="historyDateFrom" class="form-control persian-datepicker" placeholder="از تاریخ">
                                   <input type="text" id="historyDateTo" class="form-control persian-datepicker" placeholder="تا تاریخ">
                               </div>
                           </div>
                           <div class="form-group">
                               <label class="form-label">کد ملی بیمار</label>
                               <input type="text" id="patientNationalCodeFilter" class="form-control" placeholder="کد ملی">
                           </div>
                           <button type="button" class="btn btn-primary btn-sm w-100" id="searchReceptionHistoryBtn">
                               <i class="fas fa-search me-1"></i>
                               جستجو
                           </button>
                       </div>
                       
                       <div class="history-results" id="historyResults">
                           <!-- Dynamic content will be loaded here -->
                       </div>
                   </div>
               </div>

        <!-- Reception History Section -->
        <div class="sidebar-section" id="receptionHistorySection">
            <div class="section-header">
                <h6 class="section-title">
                    <i class="fas fa-clipboard-list me-2"></i>
                    تاریخچه پذیرش‌ها
                </h6>
            </div>
            <div class="section-content">
                <div class="history-filters">
                    <div class="form-group">
                        <label class="form-label">فیلتر تاریخ</label>
                        <select id="historyDateFilter" class="form-control">
                            <option value="today">امروز</option>
                            <option value="week">این هفته</option>
                            <option value="month">این ماه</option>
                            <option value="all">همه</option>
                        </select>
                    </div>
                </div>
                
                <div class="history-list" id="historyList">
                    <div class="history-item">
                        <div class="history-date">1403/10/15</div>
                        <div class="history-info">
                            <div class="history-patient">احمد محمدی</div>
                            <div class="history-service">معاینه قلب</div>
                            <div class="history-status completed">تکمیل شده</div>
                        </div>
                    </div>
                    
                    <div class="history-item">
                        <div class="history-date">1403/10/14</div>
                        <div class="history-info">
                            <div class="history-patient">فاطمه احمدی</div>
                            <div class="history-service">آزمایش خون</div>
                            <div class="history-status pending">در انتظار</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

               <!-- Professional Medical Actions Section -->
               <div class="sidebar-section" id="professionalActionsSection">
                   <div class="section-header">
                       <h6 class="section-title">
                           <i class="fas fa-stethoscope me-2"></i>
                           اقدامات تخصصی
                       </h6>
                   </div>
                   <div class="section-content">
                       <div class="professional-actions">
                           <button type="button" class="btn btn-primary btn-sm w-100 mb-2" id="openReceptionHistoryBtn">
                               <i class="fas fa-history me-1"></i>
                               سوابق پذیرش
                           </button>
                           <button type="button" class="btn btn-outline-primary btn-sm w-100 mb-2" id="openPatientSearchBtn">
                               <i class="fas fa-user-search me-1"></i>
                               جستجوی بیمار
                           </button>
                           <button type="button" class="btn btn-outline-success btn-sm w-100 mb-2" id="openPaymentHistoryBtn">
                               <i class="fas fa-receipt me-1"></i>
                               سوابق پرداخت
                           </button>
                           <button type="button" class="btn btn-outline-info btn-sm w-100 mb-2" id="openReportsBtn">
                               <i class="fas fa-chart-line me-1"></i>
                               گزارش‌های آماری
                           </button>
                           <button type="button" class="btn btn-outline-warning btn-sm w-100 mb-2" id="openSettingsBtn">
                               <i class="fas fa-cogs me-1"></i>
                               تنظیمات سیستم
                           </button>
                       </div>
                   </div>
               </div>

        <!-- Statistics Section -->
        <div class="sidebar-section" id="statisticsSection">
            <div class="section-header">
                <h6 class="section-title">
                    <i class="fas fa-chart-pie me-2"></i>
                    آمار امروز
                </h6>
            </div>
            <div class="section-content">
                <div class="statistics">
                    <div class="stat-item">
                        <div class="stat-value" id="todayReceptions">0</div>
                        <div class="stat-label">پذیرش امروز</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value" id="pendingReceptions">0</div>
                        <div class="stat-label">در انتظار</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value" id="completedReceptions">0</div>
                        <div class="stat-label">تکمیل شده</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Medical Alerts Section -->
        <div class="sidebar-section" id="medicalAlertsSection">
            <div class="section-header">
                <h6 class="section-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    هشدارهای پزشکی
                </h6>
            </div>
            <div class="section-content">
                <div class="alert-list" id="alertList">
                    <div class="alert-item emergency">
                        <i class="fas fa-ambulance"></i>
                        <span>بیمار اورژانسی در انتظار</span>
                    </div>
                    <div class="alert-item warning">
                        <i class="fas fa-clock"></i>
                        <span>نوبت‌های عقب‌افتاده: 3</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Insurance Status Section -->
        <div class="sidebar-section" id="insuranceStatusSection">
            <div class="section-header">
                <h6 class="section-title">
                    <i class="fas fa-shield-alt me-2"></i>
                    وضعیت بیمه‌ها
                </h6>
            </div>
            <div class="section-content">
                <div class="insurance-status">
                    <div class="status-item">
                        <span class="status-label">بیمه‌های فعال:</span>
                        <span class="status-value" id="activeInsurances">0</span>
                    </div>
                    <div class="status-item">
                        <span class="status-label">بیمه‌های منقضی:</span>
                        <span class="status-value expired" id="expiredInsurances">0</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment Status Section -->
        <div class="sidebar-section" id="paymentStatusSection">
            <div class="section-header">
                <h6 class="section-title">
                    <i class="fas fa-money-bill-wave me-2"></i>
                    وضعیت پرداخت‌ها
                </h6>
            </div>
            <div class="section-content">
                <div class="payment-status">
                    <div class="status-item">
                        <span class="status-label">پرداخت‌های امروز:</span>
                        <span class="status-value" id="todayPayments">0</span>
                    </div>
                    <div class="status-item">
                        <span class="status-label">مبلغ کل:</span>
                        <span class="status-value" id="totalAmount">0 ریال</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sidebar Styles -->
<style>
    .medical-sidebar {
        position: fixed;
        top: 0;
        right: -400px;
        width: 400px;
        height: 100vh;
        background: white;
        box-shadow: -4px 0 20px rgba(0,0,0,0.1);
        z-index: 1050;
        transition: right 0.3s ease;
        overflow-y: auto;
    }

    .medical-sidebar.open {
        right: 0;
    }

    .sidebar-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1rem 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: sticky;
        top: 0;
        z-index: 10;
    }

    .sidebar-title {
        font-weight: 600;
        font-size: 1.1rem;
    }

    .sidebar-toggle {
        background: none;
        border: none;
        color: white;
        font-size: 1.2rem;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

    .sidebar-toggle:hover {
        transform: scale(1.1);
    }

    .sidebar-content {
        padding: 1.5rem;
    }

    .sidebar-section {
        margin-bottom: 2rem;
        border: 1px solid #e9ecef;
        border-radius: 8px;
        overflow: hidden;
    }

    .section-header {
        background: #f8f9fa;
        padding: 1rem 1.5rem;
        border-bottom: 1px solid #e9ecef;
    }

    .section-title {
        margin: 0;
        font-weight: 600;
        color: #495057;
        font-size: 0.9rem;
    }

    .section-content {
        padding: 1rem 1.5rem;
    }

    .patient-card {
        background: #f8f9fa;
        border-radius: 6px;
        padding: 1rem;
        margin-top: 1rem;
    }

    .patient-name {
        margin: 0;
        font-weight: 600;
        color: #212529;
        font-size: 0.9rem;
    }

    .patient-details {
        margin: 0;
        color: #6c757d;
        font-size: 0.8rem;
    }

    .history-filters {
        margin-bottom: 1rem;
    }

    .history-list {
        max-height: 300px;
        overflow-y: auto;
    }

    .history-item {
        display: flex;
        align-items: center;
        padding: 0.75rem;
        border-bottom: 1px solid #e9ecef;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

    .history-item:hover {
        background-color: #f8f9fa;
    }

    .history-item:last-child {
        border-bottom: none;
    }

    .history-date {
        font-size: 0.8rem;
        color: #6c757d;
        min-width: 80px;
        text-align: center;
    }

    .history-info {
        flex: 1;
        margin-left: 1rem;
    }

    .history-patient {
        font-weight: 600;
        color: #212529;
        font-size: 0.9rem;
    }

    .history-service {
        color: #6c757d;
        font-size: 0.8rem;
    }

    .history-status {
        font-size: 0.8rem;
        padding: 0.25rem 0.5rem;
        border-radius: 12px;
        font-weight: 500;
    }

    .history-status.completed {
        background: #d4edda;
        color: #155724;
    }

    .history-status.pending {
        background: #fff3cd;
        color: #856404;
    }

    .quick-actions {
        display: flex;
        flex-direction: column;
    }

    .statistics {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .stat-item {
        text-align: center;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 6px;
    }

    .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: #667eea;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        font-size: 0.8rem;
        color: #6c757d;
    }

    /* Medical Alerts Styles */
    .alert-list {
        max-height: 200px;
        overflow-y: auto;
    }

    .alert-item {
        display: flex;
        align-items: center;
        padding: 0.75rem;
        margin-bottom: 0.5rem;
        border-radius: 6px;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .alert-item.emergency {
        background: #f8d7da;
        color: #721c24;
        border-left: 4px solid #dc3545;
    }

    .alert-item.warning {
        background: #fff3cd;
        color: #856404;
        border-left: 4px solid #ffc107;
    }

    .alert-item i {
        margin-left: 0.5rem;
        font-size: 1rem;
    }

    /* Insurance Status Styles */
    .insurance-status, .payment-status {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .status-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem;
        background: #f8f9fa;
        border-radius: 6px;
        font-size: 0.9rem;
    }

    .status-label {
        color: #6c757d;
        font-weight: 500;
    }

    .status-value {
        font-weight: 600;
        color: #28a745;
    }

    .status-value.expired {
        color: #dc3545;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 6px;
        padding: 0.5rem;
        font-size: 0.9rem;
    }

    .btn {
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.9rem;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .medical-sidebar {
            width: 100%;
            right: -100%;
        }
        
        .statistics {
            grid-template-columns: 1fr;
        }
    }
</style>

<!-- Sidebar JavaScript -->
<script>
    // Wait for jQuery to be available
    function waitForJQuerySidebar() {
        if (typeof jQuery !== 'undefined' && typeof $ !== 'undefined') {
            $(document).ready(function() {
                initializeSidebar();
            });
        } else {
            setTimeout(waitForJQuerySidebar, 50);
        }
    }
    
    // Start waiting for jQuery
    waitForJQuerySidebar();

    function initializeSidebar() {
        console.log('🏥 Medical Sidebar Initialized');
        
        // Setup sidebar toggle
        $('#sidebarToggle').on('click', function() {
            toggleSidebar();
        });
        
        // Setup sidebar functionality
        setupPatientSearch();
        setupHistoryFilters();
        setupQuickActions();
        loadStatistics();
        loadMedicalAlerts();
        loadInsuranceStatus();
        loadPaymentStatus();
        
        // Auto-hide sidebar on mobile
        if (window.innerWidth <= 768) {
            $('.medical-sidebar').removeClass('open');
        }
    }

    function toggleSidebar() {
        $('.medical-sidebar').toggleClass('open');
        
        // Update toggle icon
        const icon = $('#sidebarToggle i');
        if ($('.medical-sidebar').hasClass('open')) {
            icon.removeClass('fa-chevron-left').addClass('fa-chevron-right');
        } else {
            icon.removeClass('fa-chevron-right').addClass('fa-chevron-left');
        }
    }

    function setupPatientSearch() {
        $('#sidebarSearchBtn').on('click', function() {
            searchPatientInSidebar();
        });
        
        $('#sidebarPatientSearch').on('keypress', function(e) {
            if (e.which === 13) {
                searchPatientInSidebar();
            }
        });
    }

    function searchPatientInSidebar() {
        const searchTerm = $('#sidebarPatientSearch').val();
        
        if (!searchTerm) {
            showError('لطفاً کد ملی یا نام بیمار را وارد کنید');
            return;
        }
        
        console.log('🔍 Searching patient in sidebar:', searchTerm);
        
        $.ajax({
            url: '@Url.Action("SearchPatient", "ReceptionPatient")',
            type: 'POST',
            data: { searchTerm: searchTerm },
            dataType: 'json',
            success: function(response) {
                if (response.success && response.data) {
                    displayPatientInSidebar(response.data);
                } else {
                    showError('بیمار یافت نشد');
                }
            },
            error: function() {
                showError('خطا در جستجوی بیمار');
            }
        });
    }

    function displayPatientInSidebar(patient) {
        $('#sidebarPatientName').text(patient.firstName + ' ' + patient.lastName);
        $('#sidebarPatientDetails').text('کد ملی: ' + patient.nationalCode + ' | تاریخ تولد: ' + patient.birthDate);
        $('#patientResults').show();
        
        // Load patient history
        loadPatientHistory(patient.patientId);
    }

    function loadPatientHistory(patientId) {
        console.log('📋 Loading patient history for:', patientId);
        
        $.ajax({
            url: '@Url.Action("GetPatientHistory", "ReceptionHistory")',
            type: 'GET',
            data: { patientId: patientId },
            dataType: 'json',
            success: function(response) {
                if (response.success && response.data) {
                    displayPatientHistory(response.data);
                }
            },
            error: function() {
                console.error('Error loading patient history');
            }
        });
    }

    function displayPatientHistory(history) {
        const historyList = $('#historyList');
        historyList.empty();
        
        history.forEach(function(item) {
            const historyItem = `
                <div class="history-item" data-reception-id="${item.receptionId}">
                    <div class="history-date">${item.receptionDate}</div>
                    <div class="history-info">
                        <div class="history-patient">${item.patientName}</div>
                        <div class="history-service">${item.serviceName}</div>
                        <div class="history-status ${item.status}">${item.statusText}</div>
                    </div>
                </div>
            `;
            historyList.append(historyItem);
        });
    }

    function setupHistoryFilters() {
        $('#historyDateFilter').on('change', function() {
            const filter = $(this).val();
            filterHistory(filter);
        });
    }

    function filterHistory(filter) {
        console.log('🔍 Filtering history by:', filter);
        
        $.ajax({
            url: '@Url.Action("FilterHistory", "ReceptionHistory")',
            type: 'GET',
            data: { filter: filter },
            dataType: 'json',
            success: function(response) {
                if (response.success && response.data) {
                    displayPatientHistory(response.data);
                }
            },
            error: function() {
                console.error('Error filtering history');
            }
        });
    }

    function setupQuickActions() {
        $('#newReceptionBtn').on('click', function() {
            // Reset main form
            if (typeof resetForm === 'function') {
                resetForm();
            }
            toggleSidebar();
        });
        
        $('#searchPatientBtn').on('click', function() {
            // Focus on patient search in main form
            $('#nationalCodeSearch').focus();
            toggleSidebar();
        });
        
        $('#reportsBtn').on('click', function() {
            // Open reports
            window.open('@Url.Action("Reports", "ReceptionReport")', '_blank');
        });
        
        $('#settingsBtn').on('click', function() {
            // Open settings
            window.open('@Url.Action("Settings", "ReceptionSettings")', '_blank');
        });
    }

    function loadStatistics() {
        console.log('📊 Loading statistics...');
        
        $.ajax({
            url: '@Url.Action("GetStatistics", "ReceptionStatistics")',
            type: 'GET',
            dataType: 'json',
            success: function(response) {
                if (response.success && response.data) {
                    displayStatistics(response.data);
                }
            },
            error: function() {
                console.error('Error loading statistics');
            }
        });
    }

    function displayStatistics(stats) {
        $('#todayReceptions').text(stats.todayReceptions || 0);
        $('#pendingReceptions').text(stats.pendingReceptions || 0);
        $('#completedReceptions').text(stats.completedReceptions || 0);
    }

    // Global function to show sidebar
    function showSidebar() {
        $('.medical-sidebar').addClass('open');
        $('#sidebarToggle i').removeClass('fa-chevron-left').addClass('fa-chevron-right');
    }

    // Global function to hide sidebar
    function hideSidebar() {
        $('.medical-sidebar').removeClass('open');
        $('#sidebarToggle i').removeClass('fa-chevron-right').addClass('fa-chevron-left');
    }

    function loadMedicalAlerts() {
        console.log('🚨 Loading medical alerts...');
        
        $.ajax({
            url: '@Url.Action("GetMedicalAlerts", "ReceptionAlert")',
            type: 'GET',
            dataType: 'json',
            success: function(response) {
                if (response.success && response.data) {
                    displayMedicalAlerts(response.data);
                }
            },
            error: function() {
                console.error('Error loading medical alerts');
            }
        });
    }

    function displayMedicalAlerts(alerts) {
        const alertList = $('#alertList');
        alertList.empty();
        
        alerts.forEach(function(alert) {
            const alertItem = `
                <div class="alert-item ${alert.type}">
                    <i class="fas ${alert.icon}"></i>
                    <span>${alert.message}</span>
                </div>
            `;
            alertList.append(alertItem);
        });
    }

    function loadInsuranceStatus() {
        console.log('🛡️ Loading insurance status...');
        
        $.ajax({
            url: '@Url.Action("GetInsuranceStatus", "ReceptionInsurance")',
            type: 'GET',
            dataType: 'json',
            success: function(response) {
                if (response.success && response.data) {
                    displayInsuranceStatus(response.data);
                }
            },
            error: function() {
                console.error('Error loading insurance status');
            }
        });
    }

    function displayInsuranceStatus(status) {
        $('#activeInsurances').text(status.activeInsurances || 0);
        $('#expiredInsurances').text(status.expiredInsurances || 0);
    }

    function loadPaymentStatus() {
        console.log('💰 Loading payment status...');
        
        $.ajax({
            url: '@Url.Action("GetPaymentStatus", "ReceptionPayment")',
            type: 'GET',
            dataType: 'json',
            success: function(response) {
                if (response.success && response.data) {
                    displayPaymentStatus(response.data);
                }
            },
            error: function() {
                console.error('Error loading payment status');
            }
        });
    }

    function displayPaymentStatus(status) {
        $('#todayPayments').text(status.todayPayments || 0);
        $('#totalAmount').text(formatCurrency(status.totalAmount || 0));
    }

    function formatCurrency(amount) {
        return new Intl.NumberFormat('fa-IR').format(amount) + ' ریال';
    }

    // Auto-refresh sidebar data every 30 seconds
    setInterval(function() {
        if ($('.medical-sidebar').hasClass('open')) {
            loadStatistics();
            loadMedicalAlerts();
            loadInsuranceStatus();
            loadPaymentStatus();
        }
    }, 30000);

    function showError(message) {
        console.error('❌ Error:', message);
        // You can implement a toast notification here
    }
</script>
