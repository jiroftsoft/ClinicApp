@using ClinicApp.ViewModels.Reception
@using ClinicApp.Constants
@model InsuranceAccordionViewModel

<!-- بخش اطلاعات بیمه - آکاردئون -->
<div class="insurance-accordion-section" id="insuranceAccordionSection">
    
    <!-- Header بخش -->
    <div class="section-header">
        <div class="section-title">
            <h5 class="mb-0">
                <i class="fas fa-shield-alt me-2"></i>
                اطلاعات بیمه
            </h5>
            <p class="section-subtitle mb-0">بیمه پایه و تکمیلی بیمار</p>
        </div>
        <div class="section-actions">
            <button type="button" class="btn btn-outline-primary btn-sm" id="loadPatientInsuranceBtn">
                <i class="fas fa-sync me-1"></i>
                بارگذاری بیمه
            </button>
            <button type="button" class="btn btn-outline-success btn-sm" id="saveInsuranceBtn">
                <i class="fas fa-save me-1"></i>
                ذخیره بیمه
            </button>
        </div>
    </div>

    <!-- محتوای بخش -->
    <div class="section-content">
        <div class="row">
            <!-- ستون چپ: بیمه پایه -->
            <div class="col-lg-6">
                <div class="primary-insurance-card">
                    <div class="card-header">
                        <h6 class="card-title">
                            <i class="fas fa-shield-alt me-2"></i>
                            بیمه پایه
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-building me-1"></i>
                                سازمان بیمه <span class="text-danger">*</span>
                            </label>
                            <select class="form-select" id="primaryInsuranceProvider">
                                <option value="">انتخاب سازمان بیمه</option>
                                <option value="tamin">تأمین اجتماعی</option>
                                <option value="army">نیروهای مسلح</option>
                                <option value="rural">روستایی</option>
                                <option value="urban">شهری</option>
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-id-card me-1"></i>
                                شماره بیمه
                            </label>
                            <input type="text" class="form-control" id="primaryInsuranceNumber" placeholder="شماره بیمه">
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-calendar me-1"></i>
                                تاریخ انقضا
                            </label>
                            <input type="date" class="form-control" id="primaryInsuranceExpiry">
                        </div>
                    </div>
                </div>
            </div>

            <!-- ستون راست: بیمه تکمیلی -->
            <div class="col-lg-6">
                <div class="supplementary-insurance-card">
                    <div class="card-header">
                        <h6 class="card-title">
                            <i class="fas fa-plus-circle me-2"></i>
                            بیمه تکمیلی
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-building me-1"></i>
                                شرکت بیمه تکمیلی
                            </label>
                            <select class="form-select" id="supplementaryInsuranceProvider">
                                <option value="">انتخاب شرکت بیمه</option>
                                <option value="iran">بیمه ایران</option>
                                <option value="parsian">بیمه پارسیان</option>
                                <option value="alborz">بیمه البرز</option>
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-id-card me-1"></i>
                                شماره بیمه تکمیلی
                            </label>
                            <input type="text" class="form-control" id="supplementaryInsuranceNumber" placeholder="شماره بیمه تکمیلی">
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-calendar me-1"></i>
                                تاریخ انقضا
                            </label>
                            <input type="date" class="form-control" id="supplementaryInsuranceExpiry">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

