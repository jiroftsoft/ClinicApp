@using ClinicApp.ViewModels.Reception
@using ClinicApp.Constants
@model InsuranceAccordionViewModel

<!-- بخش اطلاعات بیمه - آکاردئون -->
<div class="insurance-accordion-section" id="insuranceAccordionSection">
    
    <!-- Header بخش -->
    <div class="section-header">
        <div class="section-title">
            <h5 class="mb-0">
                <i class="fas fa-shield-alt me-2"></i>
                اطلاعات بیمه
            </h5>
            <p class="section-subtitle mb-0">بیمه پایه و تکمیلی بیمار</p>
        </div>
        <div class="section-actions">
            <button type="button" class="btn btn-outline-primary btn-sm" id="loadPatientInsuranceBtn">
                <i class="fas fa-sync me-1"></i>
                بارگذاری بیمه
            </button>
            <button type="button" class="btn btn-outline-success btn-sm" id="saveInsuranceBtn">
                <i class="fas fa-save me-1"></i>
                ذخیره بیمه
            </button>
        </div>
    </div>

    <!-- محتوای بخش -->
    <div class="section-content">
        <!-- Hidden fields for data binding -->
        <input type="hidden" id="patientId" name="patientId" value="@(Model?.PatientId ?? 0)">
        
        <div class="row">
            <!-- ستون چپ: بیمه پایه -->
            <div class="col-lg-6">
                <div class="primary-insurance-card">
                    <div class="card-header">
                        <h6 class="card-title">
                            <i class="fas fa-shield-alt me-2"></i>
                            بیمه پایه
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-building me-1"></i>
                                سازمان بیمه <span class="text-danger">*</span>
                            </label>
                            <select class="form-select" id="insuranceProvider" name="insuranceProvider">
                                <option value="">انتخاب سازمان بیمه...</option>
                                <!-- Dynamic options loaded from API -->
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-list me-1"></i>
                                طرح بیمه <span class="text-danger">*</span>
                            </label>
                            <select class="form-select" id="insurancePlan" name="insurancePlan">
                                <option value="">انتخاب طرح بیمه...</option>
                                <!-- Dynamic options loaded based on provider -->
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-id-card me-1"></i>
                                شماره بیمه
                            </label>
                            <input type="text" class="form-control" id="policyNumber" name="policyNumber" placeholder="شماره بیمه">
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-credit-card me-1"></i>
                                شماره کارت بیمه
                            </label>
                            <input type="text" class="form-control" id="cardNumber" name="cardNumber" placeholder="شماره کارت بیمه">
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-calendar me-1"></i>
                                تاریخ شروع
                            </label>
                            <input type="date" class="form-control" id="startDate" name="startDate">
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-calendar me-1"></i>
                                تاریخ انقضا
                            </label>
                            <input type="date" class="form-control" id="endDate" name="endDate">
                        </div>
                    </div>
                </div>
            </div>

            <!-- ستون راست: بیمه تکمیلی -->
            <div class="col-lg-6">
                <div class="supplementary-insurance-card">
                    <div class="card-header">
                        <h6 class="card-title">
                            <i class="fas fa-plus-circle me-2"></i>
                            بیمه تکمیلی
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-building me-1"></i>
                                شرکت بیمه تکمیلی
                            </label>
                            <select class="form-select" id="supplementaryProvider" name="supplementaryProvider">
                                <option value="">انتخاب شرکت بیمه...</option>
                                <!-- Dynamic options loaded from API -->
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-list me-1"></i>
                                طرح بیمه تکمیلی
                            </label>
                            <select class="form-select" id="supplementaryPlan" name="supplementaryPlan">
                                <option value="">انتخاب طرح بیمه...</option>
                                <!-- Dynamic options loaded based on provider -->
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-id-card me-1"></i>
                                شماره بیمه تکمیلی
                            </label>
                            <input type="text" class="form-control" id="supplementaryPolicyNumber" name="supplementaryPolicyNumber" placeholder="شماره بیمه تکمیلی">
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-calendar me-1"></i>
                                تاریخ انقضا
                            </label>
                            <input type="date" class="form-control" id="supplementaryExpiry" name="supplementaryExpiry">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

