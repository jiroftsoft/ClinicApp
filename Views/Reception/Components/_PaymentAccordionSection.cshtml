<!-- JavaScript تخصصی بخش پرداخت -->
<script>
    $(document).ready(function() {
        initializePaymentSection();
    });

    function initializePaymentSection() {
        console.log('💳 Initializing Payment Section...');
        
        // تنظیمات اولیه
        setupPaymentEvents();
        setupPaymentValidation();
        setupPaymentActions();
        
        // بارگذاری اطلاعات پرداخت
        loadPaymentInfo();
        
        console.log('✅ Payment Section initialized successfully');
    }

    function setupPaymentEvents() {
        // تغییر نوع پرداخت
        $('input[name="PaymentType"]').on('change', function() {
            const paymentType = $(this).val();
            updatePaymentMethod(paymentType);
        });

        // دکمه پرداخت آنلاین
        $('#payOnlineBtn').on('click', function() {
            processOnlinePayment();
        });

        // دکمه پرداخت نقدی
        $('#payCashBtn').on('click', function() {
            processCashPayment();
        });

        // تایید پرداخت آنلاین
        $('#confirmPaymentBtn').on('click', function() {
            confirmOnlinePayment();
        });
    }

    function setupPaymentValidation() {
        // اعتبارسنجی Real-time
        $('input[name="PaymentType"]').on('change', function() {
            validatePaymentSelection();
        });
    }

    function setupPaymentActions() {
        // دکمه به‌روزرسانی
        $('#refreshPaymentBtn').on('click', function() {
            loadPaymentInfo();
        });

        // دکمه پردازش پرداخت
        $('#processPaymentBtn').on('click', function() {
            processPayment();
        });
    }

    function loadPaymentInfo() {
        // بارگذاری اطلاعات پرداخت از بخش‌های قبلی
        const totalAmount = parseFloat($('#totalServiceAmount').text().replace(/[^\d]/g, '')) || 0;
        const insuranceShare = parseFloat($('#totalInsuranceShare').text().replace(/[^\d]/g, '')) || 0;
        const patientShare = parseFloat($('#totalPatientShare').text().replace(/[^\d]/g, '')) || 0;
        
        updatePaymentDetails(totalAmount, insuranceShare, patientShare);
    }

    function updatePaymentDetails(totalAmount, insuranceShare, patientShare) {
        $('#totalServiceAmount').text(formatCurrency(totalAmount));
        $('#insuranceShareAmount').text(formatCurrency(insuranceShare));
        $('#patientShareAmount').text(formatCurrency(patientShare));
        $('#payableAmount').text(formatCurrency(patientShare));
        
        // فعال/غیرفعال کردن دکمه‌ها
        const hasAmount = patientShare > 0;
        $('#payOnlineBtn').prop('disabled', !hasAmount);
        $('#payCashBtn').prop('disabled', !hasAmount);
    }

    function updatePaymentMethod(paymentType) {
        // مخفی کردن تمام اطلاعات
        $('.online-payment-info, .cash-payment-info').hide();
        
        // نمایش اطلاعات مربوطه
        if (paymentType === 'Online') {
            $('#onlinePaymentInfo').show();
        } else if (paymentType === 'Cash') {
            $('#cashPaymentInfo').show();
        }
        
        validatePaymentSelection();
    }

    function validatePaymentSelection() {
        const paymentType = $('input[name="PaymentType"]:checked').val();
        return paymentType && paymentType !== '';
    }

    function processOnlinePayment() {
        if (!validatePaymentSelection()) {
            showNotification('لطفاً نوع پرداخت را انتخاب کنید', 'warning');
            return;
        }
        
        // نمایش Modal پرداخت آنلاین
        $('#onlinePaymentModal').modal('show');
        
        // شروع فرآیند پرداخت
        startOnlinePaymentProcess();
    }

    function processCashPayment() {
        if (!validatePaymentSelection()) {
            showNotification('لطفاً نوع پرداخت را انتخاب کنید', 'warning');
            return;
        }
        
        // تایید پرداخت نقدی
        if (confirm('آیا مطمئن هستید که می‌خواهید پرداخت نقدی را تایید کنید؟')) {
            completeCashPayment();
        }
    }

    function startOnlinePaymentProcess() {
        // مرحله 1: اطلاعات کارت
        $('#step1').addClass('active');
        $('#step2, #step3').removeClass('active completed');
        
        // شبیه‌سازی فرآیند پرداخت
        setTimeout(function() {
            $('#step1').removeClass('active').addClass('completed');
            $('#step2').addClass('active');
            
            // مرحله 2: تایید امنیتی
            setTimeout(function() {
                $('#step2').removeClass('active').addClass('completed');
                $('#step3').addClass('active');
                
                // مرحله 3: تکمیل
                setTimeout(function() {
                    $('#step3').addClass('completed');
                    $('#confirmPaymentBtn').prop('disabled', false);
                }, 1000);
            }, 2000);
        }, 1000);
    }

    function confirmOnlinePayment() {
        // تایید پرداخت آنلاین
        $.ajax({
            url: '@Url.Action("ConfirmOnlinePayment", "ReceptionPayment")',
            type: 'POST',
            data: {
                amount: $('#payableAmount').text(),
                paymentType: 'Online'
            },
            dataType: 'json',
            success: function(response) {
                if (response.success) {
                    showNotification('پرداخت آنلاین با موفقیت انجام شد', 'success');
                    $('#onlinePaymentModal').modal('hide');
                    updatePaymentStatus('completed');
                } else {
                    showNotification(response.message || 'خطا در پرداخت آنلاین', 'error');
                }
            },
            error: function() {
                showNotification('خطا در پرداخت آنلاین', 'error');
            }
        });
    }

    function completeCashPayment() {
        // تکمیل پرداخت نقدی
        $.ajax({
            url: '@Url.Action("CompleteCashPayment", "ReceptionPayment")',
            type: 'POST',
            data: {
                amount: $('#payableAmount').text(),
                paymentType: 'Cash'
            },
            dataType: 'json',
            success: function(response) {
                if (response.success) {
                    showNotification('پرداخت نقدی با موفقیت انجام شد', 'success');
                    updatePaymentStatus('completed');
                } else {
                    showNotification(response.message || 'خطا در پرداخت نقدی', 'error');
                }
            },
            error: function() {
                showNotification('خطا در پرداخت نقدی', 'error');
            }
        });
    }

    function updatePaymentStatus(status) {
        const statusItem = $('.payment-status .status-item');
        const statusIcon = statusItem.find('.status-icon i');
        const statusText = statusItem.find('.status-text');
        
        if (status === 'completed') {
            statusIcon.removeClass('fa-clock text-warning').addClass('fa-check-circle text-success');
            statusText.text('پرداخت تکمیل شد');
            statusItem.removeClass('bg-warning border-warning').addClass('bg-success border-success');
        } else if (status === 'processing') {
            statusIcon.removeClass('fa-clock text-warning').addClass('fa-spinner fa-spin text-primary');
            statusText.text('در حال پردازش...');
        }
    }

    function processPayment() {
        const paymentType = $('input[name="PaymentType"]:checked').val();
        
        if (!paymentType) {
            showNotification('لطفاً نوع پرداخت را انتخاب کنید', 'warning');
            return;
        }
        
        if (paymentType === 'Online') {
            processOnlinePayment();
        } else if (paymentType === 'Cash') {
            processCashPayment();
        }
    }

    function formatCurrency(amount) {
        return new Intl.NumberFormat('fa-IR').format(amount) + ' ریال';
    }

    function showNotification(message, type) {
        const alertClass = {
            'success': 'alert-success',
            'error': 'alert-danger',
            'warning': 'alert-warning',
            'info': 'alert-info'
        }[type] || 'alert-info';
        
        const alert = $(`
            <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        `);
        
        $('#paymentAccordionSection').prepend(alert);
        
        setTimeout(function() {
            alert.alert('close');
        }, 5000);
    }
</script>
