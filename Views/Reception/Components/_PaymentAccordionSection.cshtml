@using ClinicApp.ViewModels.Reception
@using ClinicApp.Constants
@model PaymentAccordionViewModel

<!-- بخش پرداخت - آکاردئون -->
<div class="payment-accordion-section" id="paymentAccordionSection">
    
    <!-- Header بخش -->
    <div class="section-header">
        <div class="section-title">
            <h5 class="mb-0">
                <i class="fas fa-credit-card me-2"></i>
                پرداخت
            </h5>
            <p class="section-subtitle mb-0">پرداخت آنلاین و نقدی</p>
        </div>
        <div class="section-actions">
            <button type="button" class="btn btn-outline-primary btn-sm" id="refreshPaymentBtn">
                <i class="fas fa-sync me-1"></i>
                <span class="btn-text">به‌روزرسانی</span>
                <span class="btn-loading d-none">
                    <i class="fas fa-spinner fa-spin me-1"></i>
                    در حال به‌روزرسانی...
                </span>
            </button>
            <button type="button" class="btn btn-outline-success btn-sm" id="processPaymentBtn">
                <i class="fas fa-credit-card me-1"></i>
                <span class="btn-text">پردازش پرداخت</span>
                <span class="btn-loading d-none">
                    <i class="fas fa-spinner fa-spin me-1"></i>
                    در حال پردازش...
                </span>
            </button>
        </div>
    </div>

    <!-- محتوای بخش -->
    <div class="section-content">
        <div class="row">
            <!-- ستون چپ: انتخاب روش پرداخت -->
            <div class="col-lg-6">
                <div class="payment-method-card">
                    <div class="card-header">
                        <h6 class="card-title">
                            <i class="fas fa-credit-card me-2"></i>
                            روش پرداخت
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-credit-card me-1"></i>
                                نوع پرداخت <span class="text-danger">*</span>
                            </label>
                            <div class="payment-method-options">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="paymentMethod" id="onlinePayment" value="online">
                                    <label class="form-check-label" for="onlinePayment">
                                        <i class="fas fa-credit-card me-2"></i>
                                        پرداخت آنلاین
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="paymentMethod" id="cashPayment" value="cash">
                                    <label class="form-check-label" for="cashPayment">
                                        <i class="fas fa-money-bill-wave me-2"></i>
                                        پرداخت نقدی
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- اطلاعات پرداخت آنلاین -->
                        <div class="online-payment-info d-none" id="onlinePaymentInfo">
                            <div class="info-card">
                                <div class="info-header">
                                    <h6 class="info-title">اطلاعات پرداخت آنلاین</h6>
                                </div>
                                <div class="info-body">
                                    <div class="form-group">
                                        <label class="form-label">درگاه پرداخت</label>
                                        <select class="form-select" id="paymentGateway">
                                            <option value="">انتخاب درگاه</option>
                                            <option value="zarinpal">زرین‌پال</option>
                                            <option value="mellat">بانک ملت</option>
                                            <option value="saderat">بانک صادرات</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">شماره کارت</label>
                                        <input type="text" class="form-control" id="cardNumber" placeholder="1234-5678-9012-3456" maxlength="19">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- اطلاعات پرداخت نقدی -->
                        <div class="cash-payment-info d-none" id="cashPaymentInfo">
                            <div class="info-card">
                                <div class="info-header">
                                    <h6 class="info-title">اطلاعات پرداخت نقدی</h6>
                                </div>
                                <div class="info-body">
                                    <div class="form-group">
                                        <label class="form-label">مبلغ دریافتی</label>
                                        <input type="number" class="form-control" id="receivedAmount" placeholder="مبلغ دریافتی">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">تاریخ دریافت</label>
                                        <input type="date" class="form-control" id="paymentDate">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ستون راست: خلاصه پرداخت -->
            <div class="col-lg-6">
                <div class="payment-summary-card">
                    <div class="card-header">
                        <h6 class="card-title">
                            <i class="fas fa-calculator me-2"></i>
                            خلاصه پرداخت
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="summary-item">
                            <span class="summary-label">مجموع خدمات:</span>
                            <span class="summary-value" id="totalServices">0 ریال</span>
                        </div>
                        <div class="summary-item">
                            <span class="summary-label">پوشش بیمه:</span>
                            <span class="summary-value" id="insuranceCoverage">0 ریال</span>
                        </div>
                        <div class="summary-item">
                            <span class="summary-label">سهم بیمار:</span>
                            <span class="summary-value" id="patientShare">0 ریال</span>
                        </div>
                        <hr>
                        <div class="summary-item total">
                            <span class="summary-label">مبلغ قابل پرداخت:</span>
                            <span class="summary-value" id="totalAmount">0 ریال</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

