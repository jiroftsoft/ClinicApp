@using ClinicApp.ViewModels.Reception
@using ClinicApp.Constants
@model PaymentAccordionViewModel

<!-- بخش پرداخت - آکاردئون -->
<div class="payment-accordion-section" id="paymentAccordionSection">
    
    <!-- Header بخش -->
    <div class="section-header">
        <div class="section-title">
            <h5 class="mb-0">
                <i class="fas fa-credit-card me-2"></i>
                پرداخت
            </h5>
            <p class="section-subtitle mb-0">پرداخت آنلاین و نقدی</p>
        </div>
        <div class="section-actions">
            <button type="button" class="btn btn-outline-primary btn-sm" id="refreshPaymentBtn">
                <i class="fas fa-sync me-1"></i>
                به‌روزرسانی
            </button>
            <button type="button" class="btn btn-outline-success btn-sm" id="processPaymentBtn">
                <i class="fas fa-credit-card me-1"></i>
                پردازش پرداخت
            </button>
        </div>
    </div>

    <!-- محتوای بخش -->
    <div class="section-content">
        <div class="row">
            <!-- ستون چپ: انتخاب روش پرداخت -->
            <div class="col-lg-6">
                <div class="payment-method-card">
                    <div class="card-header">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-credit-card me-2"></i>
                            روش پرداخت
                        </h6>
                        <span class="badge bg-primary">الزامی</span>
                    </div>
                    <div class="card-body">
                        <!-- نوع پرداخت -->
                        <div class="form-group mb-3">
                            <label class="form-label">
                                <i class="fas fa-credit-card me-1"></i>
                                نوع پرداخت <span class="text-danger">*</span>
                            </label>
                            <div class="payment-methods">
                                <div class="payment-method-item">
                                    <input type="radio" 
                                           class="form-check-input" 
                                           id="paymentOnline" 
                                           name="PaymentType" 
                                           value="Online"
                                           @(Model.PaymentType == "Online" ? "checked" : "")>
                                    <label class="form-check-label" for="paymentOnline">
                                        <div class="payment-method-content">
                                            <div class="payment-icon">
                                                <i class="fas fa-credit-card"></i>
                                            </div>
                                            <div class="payment-info">
                                                <div class="payment-title">پرداخت آنلاین</div>
                                                <div class="payment-description">پرداخت با کارت بانکی</div>
                                            </div>
                                        </div>
                                    </label>
                                </div>
                                
                                <div class="payment-method-item">
                                    <input type="radio" 
                                           class="form-check-input" 
                                           id="paymentCash" 
                                           name="PaymentType" 
                                           value="Cash"
                                           @(Model.PaymentType == "Cash" ? "checked" : "")>
                                    <label class="form-check-label" for="paymentCash">
                                        <div class="payment-method-content">
                                            <div class="payment-icon">
                                                <i class="fas fa-money-bill-wave"></i>
                                            </div>
                                            <div class="payment-info">
                                                <div class="payment-title">پرداخت نقدی</div>
                                                <div class="payment-description">پرداخت در محل</div>
                                            </div>
                                        </div>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- اطلاعات پرداخت آنلاین -->
                        <div class="online-payment-info" id="onlinePaymentInfo" style="display: none;">
                            <div class="info-card">
                                <div class="info-header">
                                    <h6 class="info-title">اطلاعات پرداخت آنلاین</h6>
                                </div>
                                <div class="info-body">
                                    <div class="info-item">
                                        <span class="info-label">درگاه پرداخت:</span>
                                        <span class="info-value">پوز آنلاین</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">وضعیت:</span>
                                        <span class="info-value">
                                            <span class="badge bg-success">فعال</span>
                                        </span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">امنیت:</span>
                                        <span class="info-value">
                                            <i class="fas fa-shield-alt text-success"></i>
                                            SSL فعال
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- اطلاعات پرداخت نقدی -->
                        <div class="cash-payment-info" id="cashPaymentInfo" style="display: none;">
                            <div class="info-card">
                                <div class="info-header">
                                    <h6 class="info-title">اطلاعات پرداخت نقدی</h6>
                                </div>
                                <div class="info-body">
                                    <div class="info-item">
                                        <span class="info-label">محل پرداخت:</span>
                                        <span class="info-value">صندوق کلینیک</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">وضعیت:</span>
                                        <span class="info-value">
                                            <span class="badge bg-success">فعال</span>
                                        </span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">رسید:</span>
                                        <span class="info-value">
                                            <i class="fas fa-receipt text-primary"></i>
                                            چاپ خودکار
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ستون راست: خلاصه پرداخت -->
            <div class="col-lg-6">
                <div class="payment-summary-card">
                    <div class="card-header">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-calculator me-2"></i>
                            خلاصه پرداخت
                        </h6>
                        <span class="badge bg-success">محاسبه شده</span>
                    </div>
                    <div class="card-body">
                        <!-- جزئیات مبلغ -->
                        <div class="payment-details">
                            <div class="detail-item">
                                <span class="detail-label">مبلغ کل خدمات:</span>
                                <span class="detail-value" id="totalServiceAmount">0 ریال</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">سهم بیمه:</span>
                                <span class="detail-value" id="insuranceShareAmount">0 ریال</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">سهم بیمار:</span>
                                <span class="detail-value" id="patientShareAmount">0 ریال</span>
                            </div>
                            <div class="detail-item total">
                                <span class="detail-label">مبلغ قابل پرداخت:</span>
                                <span class="detail-value" id="payableAmount">0 ریال</span>
                            </div>
                        </div>

                        <!-- وضعیت پرداخت -->
                        <div class="payment-status">
                            <div class="status-item">
                                <span class="status-icon">
                                    <i class="fas fa-clock text-warning"></i>
                                </span>
                                <span class="status-text">در انتظار پرداخت</span>
                            </div>
                        </div>

                        <!-- دکمه‌های پرداخت -->
                        <div class="payment-actions">
                            <button type="button" class="btn btn-success btn-lg w-100" id="payOnlineBtn" disabled>
                                <i class="fas fa-credit-card me-2"></i>
                                پرداخت آنلاین
                            </button>
                            <button type="button" class="btn btn-primary btn-lg w-100" id="payCashBtn" disabled>
                                <i class="fas fa-money-bill-wave me-2"></i>
                                پرداخت نقدی
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal پرداخت آنلاین -->
        <div class="modal fade" id="onlinePaymentModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="fas fa-credit-card me-2"></i>
                            پرداخت آنلاین
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="payment-process">
                            <div class="process-step active" id="step1">
                                <div class="step-icon">
                                    <i class="fas fa-credit-card"></i>
                                </div>
                                <div class="step-content">
                                    <h6>اطلاعات کارت</h6>
                                    <p>شماره کارت و CVV را وارد کنید</p>
                                </div>
                            </div>
                            <div class="process-step" id="step2">
                                <div class="step-icon">
                                    <i class="fas fa-shield-alt"></i>
                                </div>
                                <div class="step-content">
                                    <h6>تایید امنیتی</h6>
                                    <p>کد تایید از بانک دریافت کنید</p>
                                </div>
                            </div>
                            <div class="process-step" id="step3">
                                <div class="step-icon">
                                    <i class="fas fa-check-circle"></i>
                                </div>
                                <div class="step-content">
                                    <h6>تکمیل پرداخت</h6>
                                    <p>پرداخت با موفقیت انجام شد</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                        <button type="button" class="btn btn-success" id="confirmPaymentBtn">تایید پرداخت</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

